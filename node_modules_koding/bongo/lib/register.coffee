module.exports = class Register

  constructor:->
    return new Register unless @ instanceof Register

    signatures = {}
    Object.defineProperty @, 'signatures',
      enumerable  : yes
      get         :-> Object.keys signatures

    @sign = (ids)->
      unless Array.isArray ids
        onlyOne = yes
        ids = [ids]

      results = []

      for id in ids
        results.push not signatures[id]?
        signatures[id] = yes

      if onlyOne
        [results] = results
      
      return results
