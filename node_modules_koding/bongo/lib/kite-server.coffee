KiteServer = require('kite.js/server')

module.exports = class BongoKiteServer extends KiteServer
  constructor: (options) ->
    super options

    @method 'bongo.invoke', (payload, callback) =>
      @emit 'method', { payload, callback }

  invoke: (methodDescriptor, params, callback) ->
    @tell 'bongo.invoke', methodDescriptor, params, callback
