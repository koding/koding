
###
Node server
###
http = require 'http'
fs = require 'fs'

server = http.createServer (req, res) ->
  if req.url is '/'
    index = fs.readFileSync __dirname + '/index.html'
    res.writeHead 200,
      'Content-Type' : 'text/html'
    res.end index

  return

server.listen 1337

