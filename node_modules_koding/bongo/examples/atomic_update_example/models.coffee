bongo = require '../../lib'

class @Shared extends bongo.Model

  @share()

  @set
    sharedMethods   :
      static        : ['on']
      instance      : ['save', 'update']
    schema          :
      title         : String
      body          : String
      nest          : Object

  @sayHi = (callback) ->
    callback 'O hai!'

  @sayHiToUser = bongo.secure (client, callback) ->
    callback 'hi', client
