{ Model } = require '../../lib'

class Shared extends Model

  @share()

  @set
    sharedMethods   :
      static        : ['sayHi']
    schema          :
      title         : String
      body          : String

  @sayHi = (callback) ->
    callback 'O hai!'

class Account extends Model

  @share()

  @set
    indexes         :
      nickname      : 'unique'
    sharedMethods   :
      static        : ['sayHi']
    schema          :
      nickname      : String
      avatar        : String


  @sayHi = (callback) ->
    callback 'O hai!'

[@Account, @Shared] = [Account, Shared]
