define ->

  class View

    constructor:(@model) ->
      model.on? 'update', => @render()
      @el = document.createElement @getTagName()
      @render()

    getTagName: -> 'div'

    if $? then $: -> $(@el)

    appendTo:(el) ->
      el.appendChild @el

    prependTo:(el) ->
      el.prependChild @el

    render: ->
      data = @model
      @el.innerHTML = @partial data
      # @emit 'wasRendered'

    partial:(data) ->
      '<div class="default-partial">This is a default partial</div>'
