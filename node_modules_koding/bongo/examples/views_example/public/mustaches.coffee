@teaser =
  '''
  <div class="teaserview">
    {{body}}
    {{meta.createdAt}}
    {{> comments}}
  </div>
  '''

@comments =
  '''
  {{@comments.forEach ->}}
    <div class="comment">
      {{child @author}}
      {{@body}}
      {{@meta.createdAt}}
    </div>
  '''

@author =
  '''
  <img src="{{author.avatar}}"><a href="#{{author.nickname}}">{{author.name}}</a>
  '''
