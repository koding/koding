Potato = require './potato'
Metadata = require './metadata'

spud = new Potato
  color   : 'red'
  type    : 'russet'
  meta    :
    views : '1'
    tags  : 'tasty, spud, food'.split(', ').concat([12, 13, true, false])

spud.on 'save', (status, spud) ->
  console.log status, spud.data.color
  if status is 3 and spud.data.color is 'red'
    spud.data.color = 'brown'
    spud.save()

spud.save()
