@sequence   = require './sequence'
@race       = require './race'

@daisy = (args) ->
  process.nextTick args.next = ->
    if fn = args.shift() then !!fn(args) or yes else no
  return args.next

@dash = (args, cb) ->
  [cb, args] = [args, cb]  if 'function' is typeof args
  { length } = args
  if length is 0
    process.nextTick cb
  else
    count = 0
    args.fin = -> if ++count is length then !!cb() or yes else no
    process.nextTick arg  for arg in args
  return args.fin
