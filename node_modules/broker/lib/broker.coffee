  off: (channel, event, listener) ->
    key = channel+DELIMITER+event
    [queue, ctag] = @eventMap[key]
    queue.unsubscribe(ctag)
    queue.destroy()

  # Alias
  trigger: @::emit
  bind: @::on
  unbind: @::off
