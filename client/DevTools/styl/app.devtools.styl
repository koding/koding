@import "../../Framework/src/themes/default/kdfn"
@import "../../Main/styl/appfn"

@css {
/*
DEVTOOLS stylesheet
app.devtools.styl
*/
}

body.devtools

  #main-panel-wrapper
    .app-settings-menu
      top      53px
      right    -5px

  .devtools

    .welcome-pane
      top           0
      left          0
      background    #1F2628
      color         rgba(227,227,227,0.9)
      opacity       1
      vendor        transition, top .5s ease\, \
                                opacity .5s ease
      z-index       10000 // To make it on top of resize handles
      abs()

      &.out
        top         100%
        opacity     0

      h1
        width         400px
        margin        0 auto
        text-align    center
        font-size     24px
        margin-top    100px

      .info
        margin        10px auto
        max-width     660px

        h2
          font-size   18px
          padding-top 10px

        p
          padding-top 23px
          line-height 23px

        a
          color       #1aaf5d

      .button-container
        width         300px
        height        auto
        text-align    center
        margin        15px auto

    .inner-header

      background    #1F2628
      border        none
      border-bottom 1px solid #185334
      height        35px
      color         white

      .title
        display     inline-block
        float       left
        padding     11px
        font-weight 300

      .users
        display     none

    .tw-header-buttons
      .kdbutton
        margin-top  7px

    .inner-split

      .panel-1
        border-left   1px solid #185334

        .ws-container
          margin-top  20px

      &.previewMode
        .panel-0
          width       0 !important
        .panel-1
          width       100% !important
          left        0 !important
          .ws-header.inner-header
            display   none
          .ws-container
            margin-top 0
        .kdsplitview-resizer
          display     none

      .ws-header.inner-header
        width         100%
        height        20px
        padding       4px
        text-align    right
        padding-right 10px
        color         #eee
        font-size     12px
        abs()

        .inline-info
          left        -80px
          background  #185334
          top         0
          size        auto, 14px
          padding     3px
          color       white
          font-size   11px
          vendor      transition, left .2s ease-in
          abs()

          &.in
            left      0

          &.fail
            background darkred

    .editor-split
      .panel-1
        border        none
        border-top    1px solid #185334

        .ws-container
          margin-top  0

    .devtools-editor

      .CodeMirror
        margin-top    20px
        font-size     12px
        line-height   16px
        font-family   'Monaco', 'monospace'

        .CodeMirror-activeline-background
          background  rgba(0,0,0,.05)

    .compiler-modal

      background       #333
      color            white

      .kdmodal-inner
        background     #333
        .kdmodal-title > span
          color        white

      pre
        font-family    monospace
        font-size      12px

    .error-pane

      background       white
      width            400px
      height           auto
      padding          10px
      margin           40px auto
      border           1px solid #ccc
      border-radius    3px

      h1
        font-weight    400
        border-bottom  1px solid #ccc
        margin-bottom  10px
        padding-bottom 10px

      pre
        font-family    monospace
        font-size      12px
        overflow       auto

      .stack
        h2
          text-align   right
          font-size    12px
          border-top   1px solid #eee
          margin-top   10px
          padding-top  4px
          color        darkblue
          cursor       pointer

        pre
          display      none
          background   #eee
          padding      4px
          margin-top   10px

      &.in
        .stack
          pre
            display    block
          h2
            display    none

    .kdsplitview-resizer
      opacity     .05
      &:hover
        opacity   .1

    .kdbutton.solid
      height        45px
      font-weight   300

      &.live
        background  white
        border      1px solid #ddd
        .button-title
          color     #999

      .button-title
        line-height 22px
        font-size   16px
