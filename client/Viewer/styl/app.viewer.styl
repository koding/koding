@import "../../Framework/src/themes/default/kdfn"
@import "../../Core/styl/appfn"

.previewer-body
  width                 100%
  height                100%

  iframe
    box-sizing          content-box
    height              100%
    width               100%
    overflow            auto

.viewer-header
  size                  auto 40px
  color                 #EEE
  margin                10px

  .viewer-title
    display             inline-block
    height              auto
    width               auto
    line-height         20px
    padding             9px 15px
    font-size           11px
    text-shadow         0 1px 0 #FFF

  &:hover
    a.refresh-link
      opacity           1

  a.refresh-link
    opacity             .5
    z-index             1
    top                 13px
    right               15px
    r-sprite            'ide', 'refresh'
    abs()

  a.address-bar-icon
    abs()
    top                 10px
    left                8px
    size                20px, 20px
    bg                  position, -100px -379px
    kdfsprite()

  .kdinput.text.hitenterview
    size                100%, 40px
    font-size           14px
    line-height         inherit
    border              1px solid #131313
    padding             0 0 0 22px
    bg                  image none
    bg                  color #131313
    vendor              box-shadow, none
    color               #484848

    &::-webkit-input-placeholder
      color             #484848

    &:-moz-placeholder
      color             #484848

    &:focus
      &::-webkit-input-placeholder
        color           #484848

      color             #484848
      border-color      #484848
      vendor            box-shadow, none

.kdcontextmenu.editor-advanced-settings-menu
  button.kdbutton.with-icon span.icon.cog-white
    bg          position,-81px -301px

  .kdcontextmenutreeview
    .kdtreeitemview
      input.kdinput.text
        display   block
        float     right
        margin    0 10px 0 0
        width     52px


