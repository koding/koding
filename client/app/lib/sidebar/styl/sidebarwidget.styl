.SidebarWidget
  .Popover-Wrapper
    padding                 20px
    size                    200px auto
    bg                      color, #FFFFFF
    shadow                  0 0 29px rgba(0,0,0,0.33)
    rounded                 4px

    &::before
      content               ''
      display               block
      size                  0 0
      abs()
      top                   15px
      left                  -10px
      border-style          solid
      border-width          10px 10px 10px 0
      border-color          transparent #FFFFFF transparent transparent

    .badge
      display             none


    button
      height  42px

    .GenericButton
      .button-title
        line-height 14px
        font-size 14px
    .button-wrapper
      width   200px
      display flex
      button.reject
        max-width 100px
        float   left
        background            #FFFFFF
        border                1px solid #BEBEBE
        border-radius         4px
        margin-right 5px
        span
          color               #5E5E5E

      button.accept
        max-width 100px
        float                 right
        .button-title
          font-weight         300

  .SidebarWidget-Link
    dIBlock()

    img
      rounded               3px

  .SidebarWidget-UserDetail
     text-decoration        none
     dIBlock()
     margin-left            10px

     span
       font-size            13px
       margin-bottom        5px
       dBlock()

     .SidebarWidget-FullName
       color                #52a840

     .SidebarWidget-Nickname
       color                #626262

       span
         dIBlock()

  .SidebarWidget-Title
    color                   #979797
    font-size               14px
    margin                  10px 0
    line-height             18px

  // .kdbutton.green
  //   fr()

  &.Approved

    .SidebarWidget-Title
      margin-top            0

    .SidebarWidget-UserView
      margin-bottom         10px

    .kdbutton.GenericButton
      width                 100%
      .button-title
        font-weight         300

  &.ConnectedManagedVm
    .Popover-Wrapper
      padding               0px
      width                 auto
      z-index               100001

      .header
        height              60px
        border-bottom       1px solid #ECEAEA
        bg                  color #fff
        text-align          center
        border-radius       3px
        > h1
          color             #727272
          font-size         22px
          font-weight       300
          line-height       60px
          display           inline-block

      .close-icon
        r-sprite            app content_modal_close_icon
        top                 24px
        right               24px
        visibility          visible
        display             block

      .main-wrapper
        display             flex
        margin              30px
        width               540px

        .image-wrapper
          size 225px 200px
          r-sprite          app managed_vm_success

        .content
          font-weight       300
          width             290px
          letter-spacing    0.16px
          line-height       20px
          margin-left       35px
          text-align        left

          .label
            color           #48BA7D
            font-size       18px
            margin-bottom   20px

          .description
            color           #727272
            font-size       14px
            margin-bottom   28px

        button
          font-size         13.5px
          font-weight       400
          letter-spacing    0.3px


    .kdbutton.close
      float                 none
      margin                0 auto

  &.StackUpdated
  &.StackTemplate
    .Popover-Wrapper

      span
        color               #F2778A
        font-size           17px
        font-weight         500

      .kdbutton
        float               none
        bg                  color #F2778A
        width               100%
        .button-title
          font-weight       600
          font-size         13px
        &:hover
          bg                color #DD6E7F
        &:focus
          border            1px solid #7dbef1
          -webkit-box-shadow 0 0 3px rgba(125,190,241,.7)
          -moz-box-shadow 0 0 3px rgba(125,190,241,.7)
          box-shadow 0 0 3px rgba(125,190,241,.7)

      p
        dBlock()
        margin              10px 0 20px 0
        font-weight         300

  &.StackUpdated
    .Popover-Wrapper
      &::before
        top                 13px

  &.StackTemplate
    .Popover-Wrapper
      &::before
        top                 initial
        left                15px
        bottom              -20px
        border-left         10px solid transparent
        border-right        10px solid transparent
        border-top          10px solid #FFF
