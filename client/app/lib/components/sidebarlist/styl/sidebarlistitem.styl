.SidebarListItem
  font-size                 $fs-regular
  line-height               $fs-big
  color                     $gray-14
  margin                    10px 0
  ellipsis()

  &.active
    .SidebarListItem-icon:before
    .SidebarListItem-link
      color                 $white

  &:hover
    .SidebarListItem-icon:before
    .SidebarListItem-link
      color                 $white

.SidebarListItem-link
  display                   inline-block
  color                     $gray-14
  text-shadow               1px 1px 1px $gray-1
  text-decoration           none

.SidebarListItem-unreadCount
  position                  absolute
  margin-top                4px
  right                     20px
  padding                   0 2px
  background-color          $red
  color                     white
  border-radius             3px
  font-size                 $fs-extra-small
  min-width                 20px
  text-align                center
