.SidebarListItem
  font-size                 $fs-regular
  line-height               $fs-big
  color                     $gray-14
  margin                    6px 0
  font-family               Soleil
  -moz-osx-font-smoothing   grayscale
  -webkit-font-smoothing    antialiased
  ellipsis()

  &.active
    .SidebarListItem-icon:before
    .SidebarListItem-link
      color                 $white

  &:hover
    .SidebarListItem-icon:before
    .SidebarListItem-link
      color                 $white

.SidebarListItem-link
  display                   inline-block
  color                     $gray-14
  text-decoration           none
  font-weight               $fw-regular
  width                     100%

.SidebarListItem-unreadCount
  position                  absolute
  margin-top                0
  right                     20px
  padding                   0 2px
  background-color          $red
  color                     white
  border-radius             3px
  font-size                 11px
  font-weight               $fw-bold
  min-width                 20px
  text-align                center
