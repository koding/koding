
.SidebarSection-header
  position                  relative
  padding                   0
  margin-bottom             13px
  cursor                    pointer

  > .SidebarListItem-unreadCount
    top                     3px
    right                   17px
    margin-top              -2px

  a
    text-decoration         none

.SidebarSection-headerTitle
  font-weight               $fw-regular
  font-size                 $fs-small
  height                    16px
  line-height               16px
  word-spacing              0.2em
  text-transform            uppercase
  antialiased()

  a
  a:active
  a:visited
    color                   $gray-8
    display                 inline-block
    width                   186px
    line-height             18px
    vertical-align          top
    noTextDeco()
    ellipsis()
    pointer()

.SidebarSection-body
  padding-left              2px

.SidebarSection-secondaryLink
  abs                       50% 0px 0 0
  margin-top                -8px // icon height is 16px
  r-sprite                  app , 'plus_16'

.SidebarSection-header
  &.unread
    .SidebarSection-headerTitle
      max-width             195px

    .SidebarSection-secondaryLink
      visible()

.SidebarSection.active
  .SidebarSection-headerTitle a
    color                   #e1e1e1 !important
    &:before
      border-color          #e1e1e1 !important