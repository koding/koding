.SidebarSection-header
  position                  relative
  padding                   14px 0
  cursor                    pointer

  a
    text-decoration         none

.SidebarSection-headerTitle
  font-weight               $fw-regular
  font-size                 $fs-small
  height                    1em
  line-height               16px
  color                     $gray-8
  -moz-osx-font-smoothing   grayscale
  -webkit-font-smoothing    antialiased
  word-spacing              0.2em
  letter-spacing            0.08em
  text-transform            uppercase

.SidebarSection-secondaryLink
  hidden()
  margin-top                -8px // icon height is 16px
  position                  absolute
  r-sprite                  app , 'plus-16'
  right                     0
  top                       50%

.SidebarSection:hover
  .SidebarSection-secondaryLink
    visible()

