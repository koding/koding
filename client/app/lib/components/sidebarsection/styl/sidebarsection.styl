.SidebarSection-header
  position                  relative
  padding                   14px 0
  cursor                    pointer

.SidebarSection-headerTitle
  font-weight               $fw-regular
  font-size                 $fs-small
  height                    1em
  line-height               16px
  color                     $gray-8
  -moz-osx-font-smoothing   grayscale
  -webkit-font-smoothing    antialiased
  word-spacing              0.2em
  letter-spacing            0.08em
  text-transform            uppercase

  .SidebarSection-addChannelButton
    fr()
    hidden()
    r-sprite                app , 'plus-16'

.SidebarSection:hover
  .SidebarSection-addChannelButton
      visible()

