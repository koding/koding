@css {
/*
Chatlio box Styling
chatlio.styl
*/
}

$shadowProps                = 0 0 15px rgba(0,0,0,.05)
$titleBlue                  = #56A2D3
$dullBorder                 = rgba(0,0,0,.15)

#chatlio-widget .chatlio-widget
  z-index                   10002
  font-family               SoleilFamily
  rounded                   4px 4px 0 0
  shadow                    $shadowProps

  .chatlio-title-bar
    height                  40px
    border                  1px solid $titleBlue
    border-bottom           1px solid $dullBorder
    rounded                 4px 4px 0 0
    padding-left            20px
    text-align              left
    vendor                  transition, background-color .177s ease\, border-color .177s ease
    shadow                  $shadowProps
    borderBox()

    .chatlio-icon-minus
      font-size             0

      &:before
        r-sprite            app chatlio_minimize
        margin-top          16px
        margin-left         -21px

    .chatlio-icon-cross2
      font-size             0
      margin-top            15px

      &:before
        display             block
        r-sprite            app chatlio_close


  .chatlio-online-dot
    hidden()

  .chatlio-title-text a
    vendor                  transition, color .177s ease

  .chatlio-title-text a span
    font-weight             600
    font-size               14px
    letter-spacing          .2px
    fontPrecisionForSoleil()

  &.closed
    height                  39px
    shadow                  $shadowProps

    .chatlio-title-bar
      border                1px solid #DFDFDF
      bg                    color, #fff !important
      padding-left          54px
      shadow                none
      .chatlio-title-text a
        color               #5E5E5E !important

      span.closed
        hidden()

    .chatlio-title-avatar-container
      img
        size                37px 37px
        border              1px solid #fff
        left                10px !important
        top                 -4px !important

    &:hover
      .chatlio-title-bar
        border              1px solid $titleBlue
        border-bottom       1px solid $dullBorder
        bg                  color, #fff !important
        padding-left        54px

      .chatlio-title-bar
        bg                  color, $titleBlue !important
        border-bottom-color $dullBorder !important

      .chatlio-title-text a
        color               #fff !important


  .chatlio-message-container
    kalc                    height, (100% \- 84px)
    bottom                  48px

  .chatlio-new-message-container
    border-top              1px solid #dedede
    background-color        #f6f6f6
    padding                 6px 8px
    abs                     0 0 -5px 0
    width                   100%

  textarea.chatlio-new-message
    margin                  0 0 6px
    rounded                 0
    border                  1px solid #ddd

  .chatlio-powered-by
    display                 none !important