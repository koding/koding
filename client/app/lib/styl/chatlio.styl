@css {
/*
Chatlio box Styling
chatlio.styl
*/
}

$shadowProps                = 0 0 15px rgba(0,0,0,.05)
$titleBlue                  = #56A2D3
$dullBorder                 = rgba(0,0,0,.15)

#chatlio-widget .chatlio-widget
  z-index                   10002
  font-family               SoleilFamily
  rounded                   4px 4px 0 0

  .chatlio-title-bar
    border-bottom           1px solid rgba(0,0,0,.15)
    rounded                 4px 4px 0 0
    padding-left            20px
    text-align              left

  .chatlio-online-dot
    hidden()

  .chatlio-title-text a span
    font-weight             400
    font-size               14px
    letter-spacing          .2px


  .chatlio-message-container
    kalc                    height, (100% \- 84px)
    bottom                  48px

  .chatlio-new-message-container
    border-top              1px solid #dedede
    background-color        #f6f6f6
    padding                 6px 8px
    abs                     0 0 -5px 0
    width                   100%

  textarea.chatlio-new-message
    margin                  0 0 6px
    rounded                 0
    border                  1px solid #ddd

  .chatlio-powered-by
    display                 none !important