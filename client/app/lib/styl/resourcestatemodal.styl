$warningColor               = #f2778a

/* General page structure and common styles */
.resource-state-modal.kdmodal
  -webkit-font-smoothing    antialiased
  -moz-osx-font-smoothing   grayscale
  width                     auto !important

  /* Overrides for specific page flows */
  .build-stack-flow

    header
      height                70px
      line-height           70px

      h1
        font-size           20px

    footer
      height                70px

      .GenericButton
        position            relative
        float               right
        right               14px
        top                 14px

      a.back-link
        position            relative
        float               left
        top                 26px
        left                20px

    section.main
      width                 780px
      height                400px

      .GenericButton
        text-transform      uppercase
        margin              0 auto
        display             block

      .GenericButton.secondary
        width               165px
        height              41px
        padding             0
        font-size           13.7px
        text-transform      none
        color               #57a2d2
        bg                  color, #f7f7f7
        border              1px solid #e4e4e4
        display             block
        margin              0 auto

        .button-title
          font-weight       300


  .start-machine-flow

    header
      height                70px

      h1
        font-size           25px
        line-height         34px
        padding-top         16px

    section.main
      width                 600px
      height                360px
      rounded               6px


  .stop-machine-flow

    header
      height                70px

      h1
        font-size           25px
        line-height         34px
        padding-top         16px

    section.main
      width                 600px
      height                250px


  /* Loader */
  .loader-container
    width                   400px
    height                  200px
    text-align              center
    borderBox()
    padding-top             50px

    .loader-text
      font-size             20px
      letter-spacing        .2px
      color                 #424242
      margin-bottom         15px


  /* Wizard pane */
  .wizard-progress-pane
    bg                      color, #efefef
    border-bottom           1px solid #e4e4e4
    text-align              center

    .wizard-step
      display               inline-block
      borderBox()
      width                 200px
      height                35px
      font-size             16px
      font-weight           300
      line-height           35px
      bg                    color, #fff
      color                 #c6c6c6
      letter-spacing        .5px
      rel()
      border-left           1px solid #e4e4e4

      .alien
        hidden()
        abs()
        top                 -103px
        left                60px
        r-sprite            'app' 'alien'

      .icon
        rel()
        top                 1px
        display             inline-block
        margin-right        5px

      .index
        padding-right       5px

      &:first-child
        border-left         none !important

      &:last-child
        border-right        none !important

      &.current
        bg                  color, #57a2d2
        color               #fff

        .alien
          visible()

      &.completed
        bg                  color, #57a2d2
        color               #000
        border-right        1px solid #5095C2
        font-weight         400

        .icon
          r-sprite          'app', 'checkmark'

      &.current, &.completed
        border-left         1px solid #70AED6


  /* Logs pane */
  .logs-pane
    margin                  0 auto

    .editor-main
      bg                    color, #000

    .description-view
      height                0
      padding               0
      overflow              hidden

    .ace_editor
      color                 #fff


  /* Error page coomon styles */
  .error-page

    section.main

      > h2
        color               $warningColor
        font-weight         bold

      > p
        margin-bottom       30px

    .wizard-progress-pane

      .wizard-step
        &.completed
          bg                color, $warningColor
          color             #fff
          border-right      1px solid #E97587

        &.current
          bg                color, $warningColor
          color             #fff

          .alien
            hidden()

        &.current, &.completed
          border-left       1px solid #EB8292

    .error-container
      max-height            240px
      width                 720px
      margin                0 auto
      styleScrollBars       rgba(0, 0, 0, .15)
      border                1px solid $warningColor
      rounded               5px
      bg                    color, rgba(242,119,138,0.05)

      .error-content
        padding             15px 15px 20px 15px
        color               #5e5e5e
        font-size           12px
        line-height         16px

        p
          padding-top       12px

        .error-title
          font-weight       600

        ul
          list-style-type   disc
          padding-left      20px

          li
            padding-top     12px

      &.has-vertical
        border              1px solid $warningColor
        rounded             5px

        .error-content
          border            none

    footer

      a.back-link
        color               $warningColor

        .arrow
          r-sprite          'app', 'back_arrow_pink'


  /* Styles for specific pages */
  .readme-page

    section.main

      .kdcustomscrollview
        height              296px
        width               720px
        bg                  color, #fff
        styleScrollBars     rgba(0, 0, 0, .15)
        rounded             8px
        border              1px solid #e4e4e4
        margin              0 auto

        .kdscrolltrack
          rounded           0 5px 5px 0

      .description
        padding             20px
        font-size           12px
        color               #333

      .GenericButton.secondary
        abs                 105px, 50px

  .stack-template-page

    section.main

      .editor-view
        width               720px
        height              296px
        margin              0 auto
        rounded             8px
        border              1px solid #e4e4e4
        overflow            hidden
        borderBox()

        .ace_gutter-layer
          bg                color, #FFF

      .GenericButton.secondary
        abs                 105px, 50px
        z-index             11


  .credentials-page

    section.main
      > p
        margin-bottom       24px

    .credential-form
      font-family           $helvetica-family
      color                 #929292
      width                 350px
      height                290px
      borderBox()
      float                 none
      margin                0 auto
      padding               20px 5px 0 20px
      rounded               4px
      bg                    color, #fff
      overflow              hidden

      .kdcustomscrollview
        styleScrollBars     rgba(0, 0, 0, .15)
        max-height          220px
        padding-right       15px !important

        .kdscrolltrack.vertical
          right             -2px

      a
        color               #57a2d2
        font-size           13.7px
        text-decoration     none !important
        font-weight         normal

      h3
        font-family         SoleilFamily
        font-weight         400
        font-size           17px
        letter-spacing      .4px
        margin-bottom       10px
        padding-right       15px
        color               #f2778a

      .kdlabel
        display             block
        font-size           11.7px
        letter-spacing      .3px
        margin-bottom       3px
        float               none
        color               inherit
        margin-top          7px

      .formline:first-child .kdlabel
        margin-top          0px

      .formline .input-wrapper
        margin-bottom       0px

      .kdinput.text
        font-size           13.7px
        rounded             3px
        bg                  color, #fff
        border              1px solid #ececec
        padding             5px 13px

      .validation-error
        border              1px solid #f13a18 !important

      div.kdselectbox
        rounded             3px
        border              1px solid #ececec
        width               308px

        span.title
          line-height       31px
          padding           0 10px

        span.arrows
          top               8px
          right             8px

      a.create-new .plus
        font-size           16px

      a.cancel-new
        float               right

      form
        clear               both

        .advanced-field,
        .formline.button-field .save-btn.kdbutton,
        .formline.button-field .cancel.kdbutton
          hidden()

        &.in-advanced-mode
          .advanced-field
            visible()

      .selection-container
        padding-right       15px

        .kdselectbox
          width             100%
          borderBox()
          margin-bottom     11px

        a.show-link
          font-size         11px !important
          fr()

          &:before
            content         'Show Details'

          &.loading
            cursor          default
            color           #999
            &:before
              content       'Loading...'

        .kdlabel.selection-label
          fl()
          margin-top        0px
          clear             none

      .advanced-mode-btn
        height              22px !important
        background-color    #666
        margin-bottom       20px
        box-shadow          none

        .button-title
          font-size         12px !important
          line-height       22px !important

      article
        font-size           13px
        font-family         SoleilFamily
        font-weight         300
        color               #9f9f9f
        line-height         19px
        margin-bottom       15px

        code
          bg                color, #f2f2f2
          border            1px solid #cacaca
          borderBox()
          color             $warningColor
          font-weight       400
          font-style        normal
          font-size         12px
          line-height       18px
          padding           0 6px
          rounded           4px

          &.block
            bg              color, #fff
            color           #858585
            line-height     20px
            padding         8px 13px
            margin          20px 0
            display         block
            rel()
            width           310px

            div
              ellipsis()
              width         230px

            cite
              abs           8px 13px

        a
          color             $warningColor
          text-decoration   underline !important

      .form-container
        hidden()
        height              220px

      &.form-visible
        .form-container
          visible()

        .selection-container
          hidden()

      &.left-form
      &.right-form
        a.show-link
          abs               44px, 20px

      &.left-form
        fl()
        margin-left         45px

      &.right-form
        fr()
        margin-right        35px


  .credentials-error-page

    section.main
      .background
        abs()
        bottom              0px
        r-sprite            'app', 'buildstack_art_fail'


  .build-stack-page

    section.main > h2 span
      font-weight           bold

    .progressbar-container
      .bar
        bg                  color, $warningColor

    .status-text
      text-align            center
      color                 #585858
      padding-top           25px
      borderBox()
      ellipsis()
      height                76px
      width                 600px
      margin                0 auto

    .logs-pane
      width                 600px
      height                180px




  .build-stack-error-page

    .wizard-progress-pane
      .wizard-step
        &.completed
          bg                color, #efefef
          border-right      1px solid #e6e6e6

        &.completed, &.current
          border-left       0


  .build-stack-success-page

    .wizard-step.current
      bg                    color, #57a2d2
      color                 rgba(0,0,0,0.3)
      font-weight           400

      .icon
        r-sprite            'app', 'checkmark'

      .alien
        hidden()

    section.main
      padding-left          430px
      padding-top           90px

      h1
        color               #57a2d2
        font-size           50px
        letter-spacing      .5px
        line-height         44px

      h2
        font-size           32px
        font-weight         300
        line-height         44px
        color               rgba(0,0,0,0.5)
        text-align          left
        padding-top         17px
        padding-bottom      21px

      .GenericButton.secondary
        margin              0

      .background
        abs()
        top                 60px
        left                60px
        r-sprite            'app', 'buildstack_art_success'


  .build-stack-logs-page

    section.main
      padding-top           80px

    .wizard-step.current
      bg                    color, #57a2d2
      color                 rgba(0,0,0,0.3)

      .icon
        r-sprite            'app', 'checkmark'

      .alien
        hidden()

    .logs-pane
      width                 700px
      height                320px


  .start-machine-page

    section.main

      h2
        color               #57a2d2
        font-size           32px
        font-weight         300
        letter-spacing      .3px
        line-height         43px
        padding-top         39px

      p
        font-size           22px
        font-weight         300
        line-height         30px
        margin-top          33px
        margin-bottom       44px

      .GenericButton
        margin-left         -113px
        height              65px
        width               226px
        left                50%
        borderBox()

        span.button-title
          font-size         21.6px
          line-height       30px

      .background
        abs()
        bottom              -30px
        r-sprite            'app', 'buildstack_art_boot'
        left                -90px



  .start-machine-progress-page

    section.main

      h2
        color               #777777
        font-size           24px
        font-weight         300
        letter-spacing      .2px
        line-height         43px
        padding-top         15px

      .progressbar-container
        border              1px solid #ccc
        width               80%

        .bar
          bg                color, #57a2d2

      .background
        abs()
        bottom              -140px
        left                -100px
        r-sprite            'app', 'buildstack_art_building'


  .start-machine-success-page

    section.main
      height                320px
      padding-left          370px
      padding-top           80px

      h1
        color               #57a2d2
        font-size           50px
        letter-spacing      .5px
        line-height         44px

      h2
        font-size           32px
        font-weight         300
        line-height         44px
        color               rgba(0,0,0,0.5)
        text-align          left
        padding-top         17px

      .background
        abs()
        top                 12px
        left                30px
        r-sprite            'app', 'buildstack_art_success'

    footer
      .GenericButton
        sta()
        margin              29px auto 0 auto
        display             block


  .start-machine-error-page

    section.main
      height                350px

      .error-container
        max-height          180px
        width               520px

    footer
      .GenericButton
        sta()
        margin              29px auto 0 auto
        display             block


  .stop-machine-progress-page

    section.main

      h2
        color               #777777
        font-size           31px
        font-weight         300
        letter-spacing      .3px
        line-height         43px
        padding-top         55px
        padding-bottom      35px

        span
          font-weight       600

      .progressbar-container
        border              1px solid #ccc
        width               80%

        .bar
          bg                color, #f2778a


  .stop-machine-error-page

    section.main

      .error-container
        max-height          100px

      .GenericButton
        width               226px
        height              65px
        borderBox()
        margin-top          20px

        span.button-title
          font-size         21.6px
          line-height       30px


  .no-stack-page
    width                   400px
    height                  200px
    borderBox()

    section.main
      padding               20px


.credential-modal.resources
  margin-left               128px
