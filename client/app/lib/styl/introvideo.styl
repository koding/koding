.IntroVideoView
  bg                        color rgba(60,60,89,.75)
  abs                       0px 0px
  z-index                   102
  font-family               ProximaNovaFamily
  color                     #FFFFFF
  size                      100% 100%

.IntroVideoView--wrapper
  margin                    19vh auto 0
  max-width                 680px
  padding                   10px 25px
  text-align                center

.IntroVideoView-Title
  font-size                 42px
  letter-spacing            .41px
  line-height               43px
  font-weight               300

.IntroVideoView-Subtitle
  font-size                 24px
  letter-spacing            0.23px
  line-height               28px
  margin-top                27px
  font-weight               300

.IntroVideoView-SkipLink
  font-size                 14px
  color                     #56A2D3
  display                   block
  noTextDeco()


.IntroVideoView-VideoWrapper
  margin                    36px auto 33px
  bg                        color white
  padding                   10px
  shadow                    0 2px 10px 0px rgba(0,0,0,.05)
  rounded                   6px
  display                   inline-block

.IntroVideoView-FauxVideo
  size                      320px 200px
  r-sprite                  app intro_video_faux
  font-size                 16px
  color                     #979797
  letter-spacing            .17px
  line-height               20px
  padding-top               43px
  pointer()
  borderBox()
  rel()

  &:after
    content                 ''
    margin                  16px auto 0
    r-sprite                app intro_video_play
    display                 block

  strong
    display                 block
    font-weight             600

.IntroVideoView-Video
  margin                    10px

.IntroVideoView-Video--actions
  height                    42px
  margin-top                20px
  text-align                left
  line-height               42px
  rel()
  button
    abs                     0 0 0 260px
    font-weight             600
    font-size               14px
    letter-spacing          .2px
    padding                 12px 38px 11px

  .kdcustomcheckbox
    abs                     11px 0 0 0px
    line-height             1
    height                  20px

.IntroVideoView--label
  margin-left               25px
  font-size                 14px
  font-weight               300
  color                     #A59999
  letter-spacing            .15px
  line-height               20px
  pointer()