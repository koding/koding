

@css {
/*
Vendors/Providers stylesheet
computeproviders.styl
*/
}

.provider-modal

  .kdmodal-inner
    margin           15px
    // .kdmodal-buttons
    //   display        none

.provider-base-view

  height             530px

  .provider-mainview
    background       white

  .provider-split
    background       white
    .panel-1
      border-left    1px solid #eee

  .welcome-pane
    text-align      center
    padding         50px
    box-sizing      border-box

    h1
      font-size     20px
      font-weight   400
      margin        10px
    p
      line-height   20px
      margin        5px

  .provider-view

    overflow        hidden  !important

    p
      line-height   20px
      border-bottom 1px solid #eee
      padding       10px

    .kdloader
      left          50%
      top           50%
      margin        -20px 0 0 -20px
      abs()

    .kdselectbox
      width           97%
      margin          10px

      span.title
        font-weight   600
        font-size     16px

    .content-view
      overflow-y      scroll

    .form-view
      z-index         102
      background      white
      left            50%
      width           460px
      margin-left     -230px
      top             -120%
      padding         10px

      box-shadow      0 0 10px rgba(0,0,0,0.3)
      border-radius   0 0 3px 3px
      vendor          transition, top .3s ease
      abs()

      &.in
        top         0

      .button-field
        height      43px !important

  .instance-list

    height            auto
    padding           10px
    border-top        1px solid #eee
    margin-bottom     120px

    .cloud-item

      margin          0 0 10px
      border-bottom   1px solid #eee
      width           552px
      cursor          default
      borderBox()

      h2
        font-weight   400

      button
        right         5px
        top           5px
        abs()

  .provider-list

    .kdlistitemview
      cursor         pointer
      height         50px
      border-bottom  1px solid #ddd

      &.Amazon
        background   url("../images/vendors/amazon.png")
        background-size auto 40px
        background-repeat no-repeat
        background-position 10px 5px

      &.Koding
        background   url("../images/vendors/koding.png")
        background-size auto 40px
        background-repeat no-repeat
        background-position 10px 5px

      &.DigitalOcean
        background   url("../images/vendors/digitalocean.png")
        background-size 180px
        background-repeat no-repeat
        background-position 10px 12px

      &.Rackspace
        background   url("../images/vendors/rackspace.png")
        background-size 180px
        background-repeat no-repeat
        background-position 10px 4px

      &.EngineYard
        background   url("../images/vendors/engineyard.png")
        background-size auto 40px
        background-repeat no-repeat
        background-position 10px 5px

      &.Google
        background   url("../images/vendors/google.png")
        background-size 200px
        background-repeat no-repeat
        background-position 0 1px

      &:hover
        background-color  #eee

      &.selected
        background-color  #eee

  .new-vm-selection
    padding            20px
    width              550px
    margin             0 auto

  .add-vm-box
    background         #f3f7fa
    size               170px, 220px
    padding            25px
    color              #50595a
    rounded            2px
    borderBox()
    fl()

    &~.add-vm-box
      margin-left      18px

    &.passive
      opacity          .3

    &.selected
      shadow           inset 0 0 0 3px rgba(17, 175, 94, .4)


    h3
      line-height      24px
      display          block
      border-bottom    1px solid #d7dcdf
      font-size        16px
      font-weight      500
      padding          6px 0 12px

      cite
        display        inline-block
        size           24px, 24px
        line-height    24px
        text-align     center
        color          #fff
        background     #646c6d
        rounded        50%
        font-size      12px
        font-weight    200
        margin         0 0 0 6px

    ul
      margin           20px 0 0
      font-weight      200
      line-height      34px
      font-size        14px

      strong
        font-weight    500
        font-size      16px

  h5.coming-soon-title
    font-size         22px
    font-weight       400
    line-height       220px
    left              300px
    top               -220px
    text-shadow       0 0 2px white
    color             rgba(0, 0, 0, .75)
    position          relative

.computeplan-modal
  .kdmodal-content
    text-align          center

  .cp-footer
    font-size           14px
    background          #2C2C2C
    color               #42B53A
    text-decoration     underline
    font-weight         bold
    padding             10px 25px
    box-sizing          border-box
    height              65px
    margin-top          14px
    rounded             0 0 3px 3px
    cursor              pointer
    line-height         21px

  &.loading

    .closeModal
      display           none

    .kdloader
      margin-top        30px


  &.free-plan

    .kdmodal-content

      .message
        font-size         14px
        margin-top        10px
        line-height       20px
        color             #373737
        padding           5px
        borderBox()

      .custom-link-view
        font-size         14px
        font-weight       bold
        color             #4ea04c
        bg                color #f3f3f3
        display           block
        margin-top        15px
        padding           15px 30px 20px
        rounded           0 0 3px 3px

  &.paid-plan
  &.resize-modal

    bg                    color, #C8C8C8

    .kdmodal-inner
      bg                  color, #C8C8C8

    strong
      font-weight         bold

    .warn
      strong
        color             #F15E67 !important

    .custom-link-view
      color               #3A854A
      padding             0 45px
      display             block
      font-weight         700
      line-height         16px
      margin-bottom       10px

    .container

      font-size           12px
      padding             0 7px
      overflow            hidden
      borderBox()

      .modal-title
        font-size         14px
        color             #6E6865
        padding           0 0 13px 0
        cursor            default

      button
        margin            24px 0 21px
        width             284px
        font-weight       bold

        &[disabled=disabled]
          background      #A3A3A3 !important

          .button-title
            color         #eee

    .regions-container
    .snapshots-container
    .storage-container

      padding             10px 0 18px
      bg                  color, #E4E4E4
      border-radius       5px
      font-size           12px
      color               #6E6865

      .container-title
        font-variant      small-caps
        font-weight       700
        margin            1px 0 40px
        font-size         17px

    .snapshots-container
    .regions-container
      margin-bottom       5px
      border-bottom-right-radius 0 !important
      border-bottom-left-radius  0 !important

      .kdselectbox
        width             95%
        border            1px solid #bbb
        background        white
        text-align        left
        height            36px
        font-weight       bold !important
        margin-bottom     10px

      .kdselectbox.disabled
        opacity           .5

      .container-title
        margin-bottom     10px


    .snapshots-container
      border-radius         0


    .storage-container
      border-top-right-radius    0 !important
      border-top-left-radius     0 !important


    .storage-slider

      margin              18px 18px 16px
      height              6px
      background-image    none
      border              none
      background          white
      box-shadow          0px 1px 2px inset

      .bar

        background-image  none
        box-shadow        none

      .handle

        border-radius     30px
        background-image  none
        border            none
        box-shadow        none
        background        #1BCA7F
        margin-top        -7px
        size              19px, 19px
        text-decoration   none
        font-weight       normal
        font-size         12px
        color             #403D3D
        box-shadow        0px 1px 1px #444;

        .handle-label
          margin-top      -23px
          margin-left     -7px

        &:active
          color           #403D3D

        &:after
        &:before
          display         none


      .sliderbar-label

        top               0
        color             rgba(0,0,0,0)
        noTextSelection()

        &:after
          height          2px
          background      #999
          margin-bottom   2px

  &.resize-modal

    strong
      color                      #111

    .container-title
      text-transform             uppercase
      font-size                  12px !important
      margin-top                 10px !important

    .storage-container
      border-top-right-radius    5px !important
      border-top-left-radius     5px !important

.kdcontextmenu.add-new-vm-menu
.kdcontextmenu.menu-button-menu
  z-index                   10002
  span.arrow.top
    border-bottom-color     #eee

.kdtooltip.info-tooltip
  .wrapper
    text-align              left !important

.environments-modal

  .buttons
    width                   auto
    abs                     20px, 20px

    button.icon-only
      background            none
      border                none

      span.reinit
        r-sprite            app, '16-reload'

      span.add
        r-sprite            app, '16-add'


  .environment-item
    border                  1px solid #CCC
    border-radius           2px
    box-sizing              border-box
    font-size               14px
    line-height             22px

    .stack-info
      padding               17px
      box-sizing            border-box

      .title
        padding-top         2px
        padding-left        11px
        fl()

      .warning-icon
        r-sprite            app, '25-warning'
        display             inline-block
        margin-left         -25px
        background-color    #FAFAFA
        fl()

      .info-icon
        opacity             .5
        r-sprite            app, '16-info'
        margin-left         5px
        margin-top          5px
        fl()

      &:before
        size                17px, 17px
        display             inline-block
        float               left
        border              4px solid #019F40
        border-radius       5px

  .machines-item
    height                  66px
    display                 flex
    display                 -webkit-flex
    flex-flow               row wrap
    -webkit-flex-flow       row wrap
    border-top              1px solid #CCC

    .koding-on-off
      margin                auto

    span.label-link
    span.settings-link
      cursor                pointer

    span.settings-link
      top                   10px
      margin-left           4px
      color                 green
      font-size             11px
      abs()

    &.header
      font-size             10px
      line-height           28px
      height                28px !important

      .input-title
        text-align          center

    > div
      margin                auto
      width                 100px

      > span:last-child
        display             block
        color               #8B8B8B

    > div:first-child
      margin-left           17px
      width                 200px


.kdlistview.credential-list
.kdlistview.stack-template-list

  .outline.kdbutton
    background              none
    border                  2px solid #4a4e52

    &:active
      span
        color               #4a4e52

    span
      color                 #4a4e52
      line-height           26px

    &.red
      border-color          #e14a35

      span
        color               #e14a35

      &:hover span
        color               #FFF

  .credential-item
  .stacktemplate-item
    padding                 10px 0
    font-size               14px
    border-bottom           1px solid #ddd
    borderBox()

    &:hover
      .buttons button.secondary
        opacity             1
        pointer-events      auto

    .credential-info
    .stacktemplate-info
      padding               10px 0

      .title
        font-weight         bold
        fl()

      .tag
        padding             0 3px
        font-size           12px
        background-color    #ddd
        margin-right        10px
        fl()

      .inuse-tag
        font-size           10px
        padding             0 4px
        line-height         13px
        margin-top          5px
        margin-left         5px
        background-color    #02A74D
        color               #FFFFFF
        cursor              default
        fl()

    .warning-message
      background            #FCFCE9
      border                1px solid #D4D4A9
      border-radius         4px
      padding               5px
      font-size             12px
      color                 #888869
      margin-top            3px
      text-align            center

    .buttons
      abs                   16px 0px

      button.secondary
        opacity             0
        pointer-events      none
        vendor              transition, opacity .3s .3s ease

      button
        min-width           80px
        margin-left         15px

      button.solid.green
        background-color    #01A84E
        &[disabled]
          opacity           .5


.kdlistview.repo-user-list

  border                    1px solid #ccc
  max-height                calc(100% \- 50px)
  overflow                  auto
  margin-top                20px
  borderBox()

  .error-view
    padding-left            10px
    font-size               12px
    background              lightyellow

  .repo-item
  .repo-user-item

    padding                 10px 0
    box-sizing              border-box
    pointer()

    a
      color                 #333
      noTextDeco()

    span.add-link
    span.active-link
      r-sprite              'app', 'sidebar-toggle'
      vendor                transform, rotate(180deg)
      display               block
      margin-top            6px
      margin-right          6px
      pointer()
      fr()

    span.active-link
      margin-top            12px

  .repo-item
    border-bottom           1px solid #DDD
    padding                 10px

    &.active
      border-bottom         none
      bg                    color, #eee
      span.add-link
        vendor              transform, rotate(270deg)

  .repo-user-item
    span.active-link
      margin-right          15px

    background              #F3F3F3
    overflow                hidden
    padding                 20px
    border-bottom           1px solid #ccc

    &:last-child
      border-bottom         none

    .listview-wrapper
      margin-top            40px
      clear                 both
      height                300px
      // overflow-y            auto
      padding-left          42px
      borderBox()

    .gravatar
      width                 32px
      fl()

    .user-title
      line-height           32px
      margin-left           20px
      fl()

    &.active
      background            white

      span.active-link
        vendor              transform, rotate(270deg)


.stacks-modal

  .kdmodal-inner > .kdbutton
    abs                     15px, 25px
