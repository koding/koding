$accentColor                = #F2778A
$accentActiveColor          = #DF6E7F


button.GenericButton
  color                     white
  bg                        color, $accentColor
  padding                   12px 24px
  border                    none
  rounded                   4px
  &:active
  &:hover
    bg                      color, $accentActiveColor

  span.button-title
    font-family             SoleilFamily
    font-size               13.5px
    font-weight             400
    letter-spacing          .3px

