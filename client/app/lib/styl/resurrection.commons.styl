// onboarding throbbers
.throbber
  size                    32px, 32px
  z-index                 1000
  display                 block
  position                absolute

  &.modal-throbber
    z-index               10001

  figure
    left                  10px
    top                   10px
    size                  12px, 12px
    bg                    color, #00ab51
    rounded               50%

  i
    margin                0 auto
    position              absolute
    right                 -10px
    top                   -10px
    opacity               0.1
    size                  28px, 28px
    border                2px solid #00ab51
    rounded               50%
    vendor                animation, pulse 2.4s linear infinite

  i:last-child
    vendor                animation, pulse 2.4s linear 1.2s infinite

  &.green

    i
      border-color        #00ab51

    figure
      bg                  color, #00ab51

  &.red

    i
      border-color        #ff6a58

    figure
      bg                  color, #ff6a58

  &.blue

    i
      border-color        #4c9fff

    figure
      bg                  color, #4c9fff

  &.yellow

    i
      border-color        #f9e900

    figure
      bg                  color, #f9e900

  &.gray

    i
      border-color        #7f7f81

    figure
      bg                  color, #7f7f81


