@css {
/*
Welcome Koding stylesheet
welcome.styl
*/
}

$welcomeTitleColor          = #F2778A
$titleGreen                 = #01B05A
$linkColor                  = #56A2D3

.HomeWelcomeModal.kdmodal
  vendor                    transform-origin, 0px 0px
  vendor                    transform, scale(1)
  opacity                   1
  &.out
    animation               scaleDown .3s 1
    vendor                  transform, scale(0)
    opacity                 0

  .kdmodal-inner
    margin                  0
    .kdmodal-content
      margin                0
      footer
        a
          color             $linkColor
          noTextDeco()

    .close-icon.closeModal
      r-sprite              app modal_close
      margin                16px 16px 0 0
      background-position   0 !important


.WelcomeStacksView
  styleScrollBars           rgba(0,0,0,.15)

  section

    > h2
    > p
      text-align            center
      color                 $welcomeTitleColor

    > h2
      font-size             27px
      line-height           32px
      font-weight           400
      margin                40px 0 5px 0

    > p
      font-size             18px
      color                 #A59999
      letter-spacing        0.21px
      line-height           22px
      margin                0 auto 40px
      font-weight           300


  ul.bullets
    counter-reset           section
    list-style-type         none
    margin                  0 40px

    li
      rel()
      margin                0
      border                1px solid #DCDCDC
      border-bottom         none
      bg                    color #fff
      line-height           23px
      &:hover
        a h3
          color             $welcomeTitleColor
        .WelcomeStepLinkSkip
          visible()

      &:first-child
        rounded             3px 3px 0 0
      &:last-child
        border-bottom       1px solid #DCDCDC
        rounded             0 0 3px 3px


      &.disabled
      &.pending
        bg                  color transparent
        opacity             .5
        cursor              default
        pointer-events      none
        &:hover a h3
          color             $welcomeTitleColor

      &.starred
        margin-top          20px
        &:after
          content           ''
          display           block
          size              100% 1px
          bg                color #DCDCDC
          abs               -21px 0 0 0
        &:before
          content           '*'


      &:before
        abs                 24px 0 0 23px
        counter-increment   section
        content             counters(section,".") " "
        color               $welcomeTitleColor
        font-size           20px
        font-weight         bold
        size                32px 32px
        bg                  color #F7F7F7
        rounded             3px
        text-align          center
        line-height         32px
      &.done
        bg                  color, rgb(251,251,251)
        &:before
          bg                color, rgba(115, 196, 97,.25)
          color             transparent
        &:after
          content           ''
          r-sprite          app step_done_white
          abs               34px 0 0 31px

      a.WelcomeStepLink
        padding             17px 164px 17px 73px
        size                100% 100%
        display             block
        color               $welcomeTitleColor
        noTextDeco()
        borderBox()
        &:hover
          noTextDeco()


      h3
        font-size           18px
        font-weight         500
        color               #5E5E5E
        letter-spacing      .34px

      p
        font-size           13px
        color               #989898
        letter-spacing      .25px
        font-weight         300

      cite
        display             block
        width               118px
        height              40px
        border-left         1px solid #ECECEC
        abs                 20px 0px
        font-size           18px
        color               $linkColor
        letter-spacing      .34px
        text-transform      uppercase
        font-weight         300
        line-height         40px
        text-align          center

      .WelcomeStepLinkSkip
        hidden()
        position            absolute
        top                 51px
        right               0px
        width               119px
        text-align          center
        font-weight         300
        color               #ccc
        text-decoration     underline
        text-transform      lowercase
        font-size           14px
        pointer()

  code
    bg                      color #F7F7F7
    border                  1px solid #EAEAEA
    borderBox()
    color                   #8958BA
    font-size               12px
    font-weight             400
    line-height             18px
    padding                 0 6px
    rounded                 2px

  footer
    font-size               14px
    font-weight             300
    color                   #9B9B9B
    letter-spacing          .16px
    line-height             27px
    text-align              center
    margin                  20px 0

.WelcomeStepVideoIcon
  abs                       29px 136px
  r-sprite                  app video_icon