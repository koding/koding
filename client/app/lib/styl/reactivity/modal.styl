@require './utilities'

.ModalOverlay
  @extend .u-zIndex9
  position                  fixed
  left                      0
  top                       0
  width                     100%
  height                    100%
  background                rgba($black, 0.4)

.Modal
  @extend .u-zIndex10
  position                  fixed
  left                      50%
  top                       50%
  vendor                    transform, translateX(-50%) translateY(-50%)
  background                #fff
  padding                   16px 24px 24px
  border-radius             $border-radius
  box-shadow                0 12px 19px rgba($black, 0.5)

  //Temp demo styles
  width                     500px

.Modal-title
  color                     $color-brand

.Modal-buttons
  padding                   0.5em 0 0
  text-align                right
  direction                 rtl

.Modal-Button
  margin-left               6px

.Modal-Form
  margin-bottom             0
  margin-top                0

