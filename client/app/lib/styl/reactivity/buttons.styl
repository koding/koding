}

buttonColorModifier(bgColor, color, disabled = false)
  background-color          bgColor
  color                     color
  border-color              getBorderColor(bgColor)

  &:active
  &.is-active
    if disabled
      background-color      bgColor
    else
      background-color      getAlternateColor(bgColor, 'darken')

  &:focus
    if bgColor is $white
      box-shadow            0 0 5px getAlternateColor(bgColor, 'darken')

    else
      box-shadow            0 0 5px 1px bgColor

buttonThinColorModifier(borderColor, color, disabled = false)
  background-color          transparent
  color                     color
  border-color              borderColor

  &:active
  &.is-active
    if disabled
      background-color      transparent
    else
      background-color      getAlternateColor($white, 'darken')

  &:focus
    if borderColor is $white
      box-shadow            0 0 5px getAlternateColor(borderColor, 'darken')

    else
      box-shadow            0 0 5px borderColor

.Button
  pointer()
  font-family               $source-sans-family
  display                   inline-block
  letter-spacing            0.05em
  padding                   6px 12px
  font-size                 $fs-smaller
  font-weight               $fw-regular
  border-radius             $border-radius
  outline                   none
  border                    1px solid
  text-decoration           none
  text-transform            uppercase
  text-align                center
  box-shadow                0
  vendor(transition, box-shadow 0.1s ease)
  buttonColorModifier($white, $color-primary-text)

.Button--primary
  buttonColorModifier($color-primary-action, $white)

.Button--secondary
  buttonColorModifier($color-secondary-action, $white)

.Button--warning
  buttonColorModifier($color-warning-action, $white)

.Button--danger
  buttonColorModifier($color-danger-action, $white)

.Button--cancel
  buttonColorModifier($color-cancel-action, $white)

.Button--disabled
  buttonColorModifier($color-disabled-action, $white, true)

.Button--info
  buttonColorModifier($color-info, $white)

// Thin buttons
.Button--primaryThin
  buttonThinColorModifier($color-primary-action, $color-primary-action)

.Button--secondaryThin
  buttonThinColorModifier($color-secondary-action, $color-secondary-action)

.Button--warningThin
  buttonThinColorModifier($color-warning-action, $color-warning-action)

.Button--dangerThin
  buttonThinColorModifier($color-danger-action, $color-danger-action)

.Button--cancelThin
  buttonThinColorModifier($color-cancel-action, $color-cancel-action)

.Button--disabledThin
  buttonThinColorModifier($color-disabled-action, $color-disabled-action, true)

.Button--infoThin
  buttonThinColorModifier($color-info, $color-info)

.Button--small
  font-size                 8px
  padding                   4px 10px

.Button--big
  font-size                 $fs-small
  padding                   8px 14px

.Button--block
  display                   block
  width                     100%
  margin                    .5em 0

