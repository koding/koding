.ide-collab-pane
  height                    100%

.CollaborationPane
  .ChannelParticipantAvatars
    margin-top              5px
    bg                      color, #fcfcfc

  .CollaboratipnPaneHeader
    flex-direction          row

  .CollaborationPaneHeader-actions
    dFlex()
    margin-left             auto

  .ChannelParticipantAvatars-allParticipantsMenu
    right                   auto
    left                    140px

  .StartVideoCall-link
    position                static

  .ShareLink
    margin-left             20px
    position                relative

.ShareLink-tooltip
  color                   #8F8F8F
  font-style              italic
  font-weight             300
  text-align              center
  z-index                 1

  > div
    bg                    color, white
    border                1px solid #DADADA
    rel()

  > div
    borderBox()
    padding               10px
    rounded               4px

  > div span
    bg                    color, rgba(223, 240, 149, .1)
    color                 $welcomeTitleColor
    display               inline-block
    font-family           $source-sans-family
    font-size             14px
    font-weight           400
    line-height           21px
    padding               6px 10px
    margin-top            5px

.kdtabhandlecontainer.application-tab-handle-holder
  .kdtabhandle.ide-collab-pane-handle.active
    bg                      color, white
    color                   #2b2b2b

