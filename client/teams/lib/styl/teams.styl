greenLink                   = #27ae60
titleYellow                 = #F4E327

@css {
/*
Teams Homepage stylesheet
teams.styl
*/
}

body.teams
  size                      100% 100%
  #main-header #koding-logo cite
    r-sprite                app 'logo-full'
  #main-header .logotype
    hidden()


.content-area-pane.teams
  overflow                  auto
  color                     white
  bg                        image url('/a/images/teams/landing-bg.jpg')
  bg                        color #2D5EAB
  bg                        size cover
  bg                        position, center center
  min-height                100%

  section.main-wrapper
    min-height              600px
    padding                 20px 0
    font-family             adelleSans
    font-size               14px
    line-height             20px
    text-align              center
    borderBox()

    h1
    h2
      width                 60%
      max-width             800px
      margin                0 auto

    h1
      margin-top            130px
      font-family           adelle
      font-weight           400
      font-size             42px
      line-height           50px
      color                 titleYellow

    h2
      font-size             22px
      line-height           28px
      margin                20px auto
      rel()
      span
        display             inline-block
        size                240px 28px
        vertical-align      top
        white-space         nowrap
        rel()
      span > i
        opacity             0
        transition          opacity .3s ease
        display             inline-block
        height              28px
        abs                 0px 0 0 0px
        border-bottom       2px solid white
      span > i:first-child
        opacity             1

  .TeamsModal--middle
    font-family             openSansFamily
    font-size               22px
    line-height             32px
    margin                  30px auto 50px auto
    width                   230px
    padding                 8px
    rounded                 8px
    bg                      color rgba(0,0,0,.1)
    z-index                 10
    rel()

    section > div
      &.email
      &.company-name
        width               calc(50% - 54px)

      &.submit:after
        hidden()

      &:before
        hidden()

      .login-input-view
        .placeholder-helper
          padding           0
          text-align        center

        input.kdinput
          text-align        center
          padding           8px 0

    &.pre-launch

      section > div
        &.email
          width             62%
        &.submit
          width             38%

        .login-input-view .placeholder-helper
          padding           0 16px
          text-align        left

        .login-input-view input.kdinput
          text-align        left
          padding           8px 15px
          font-family       adelle
  ul
    margin                  0 auto
    max-width               700px
    li
      font-size             17px
      text-align            left
      list-style-type       square
      line-height           1.5em
      color                 white
      margin-bottom         .5em
      i
        font-style          italic
        font-family         adelle
        color               titleYellow
      a
        color               titleYellow

      &:last-child
        padding-top         .5em

  .ribbon
    padding                 .34em 1em
    margin                  0 0 60px 0
    color                   #ffffff
    font                    32px adelle
    letter-spacing          .1em
    background              #1eb2df
    display                 inline-block
    rel()

    &:before
    &:after
      content               ""
      width                 .2em
      bottom                -.5em
      position              absolute
      display               block
      border                .9em solid #1eb2df
      box-shadow            0px 1px 0px rgba(0,0,0,0.4)
      z-index               0

    &:before
      left                  -1.35em
      border-right-width    .75em
      border-left-color     transparent

    &:after
      right                 -1.35em
      border-left-width     .75em
      border-right-color    transparent

    > span
      &:before
      &:after
        content             ""
        bottom              -.5em
        position            absolute
        display             block
        border-style        solid
        border-color        #0675b3 transparent transparent transparent
        z-index             1

      &:before
        left                0
        border-width        .5em 0 0 .5em

      &:after
        right               0
        border-width        .5em .5em 0 0

// Smartphones

@media only screen and (min-width : 320px) and (max-width : 767px)

  .content-page.teams
    section.main-wrapper
      h1
      h2
        width               80%

      h1
        margin-top          130px
        font-size           32px
        line-height         40px

      h2
        font-size           18px
        line-height         30px
        margin              10px auto

    .TeamsModal--middle
      margin                20px auto 40px
      width                 90%

      &.pre-launch section

        > div.email
        > div.submit
          padding           0
          width             100%

        > div.submit
          margin-top        10px

        > div .login-input-view input.kdinput
        > div .login-input-view .placeholder-helper
          text-align        center

    ul
      width                 90%
      li
        font-size           14px

    .ribbon
      padding               .34em 1em
      margin                0 0 60px 0
      font                  22px adelle


// Tablets

@media only screen and (min-width : 768px)  and (max-width : 1024px)

  .content-page.teams
    section.main-wrapper
      h1
      h2
        width               80%

      h1
        margin-top          130px
        font-size           38px
        line-height         50px

      h2
        font-size           26x
        line-height         38px
        margin              10px auto

    .TeamsModal--middle
      margin                20px auto 40px
      width                 80%

    ul
      width                 90%
      li
        font-size           16px

    .ribbon
      padding               .34em 1em
      margin                0 0 60px 0
      font                  32px adelle
