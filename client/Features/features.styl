@import "../Framework/src/themes/default/kdfn"
@import "../Core/styl/appfn"

@css {
/*
Koding features stylesheet
features.styl
*/
}

body.features
  -webkit-font-smoothing antialiased
  #main-panel-wrapper
    bg                        color #f9f9f9
    height                    auto

  #main-header
    max-width                 100%
    top                       0
    padding-left              calc(\(100% \- 1200px\) \/ 2) !important
    padding-right             calc(\(100% \- 1200px\) \/ 2) !important
    height                    73px
    background                #fff
    position                  fixed
    shadow                    0 1px 16px rgba(0,0,0,.1)

    #koding-logo
      margin-top              25px

      cite
        r-sprite              'app', 'logo-full-dark'

    nav
      line-height             73px

      a
        color                 #6f6f6f

      a.login
        border-color          #bcbcbc

  .content-page.features
    padding-top               73px
    font-family               sloganFont

    .feature-tabs
      max-width               1200px
      margin                  0 auto

      .tab-handles
        height                110px
        line-height           120px
        text-align            right
        border-bottom         1px solid #e0dcdc

        a
          display             inline-block
          margin-left         48px
          font-weight         600
          font-size           17px
          color               #7b7b7b
          vendor              transition, color .4s ease
          noTextDeco()

          &.active
            color             #27ae60

      .tab-enter
        vendor                animation, tabEnter .4s 1 ease-in

      .tab-leave
        vendor                animation, tabLeave .4s 1 ease-out

      article
        border-bottom         1px solid #e0dcdc
        padding               67px 0 43px
        margin-bottom         81px

        .tab-text
          width               46%
          padding-right       72px
          padding-top         37px
          borderBox()
          fl()

          p
            font-size         14px
            color             #727272
            padding           16px 0 55px
            line-height       24px
            font-weight       600

          h4
            font-size         21px
            color             #27ae60
            font-weight       600

        .tab-image
          width               54%
          margin-top          20px
          fr()

      .tab-ide .tab-image
        margin-top            -20px

    .bottom-features
      max-width               1200px
      margin                  0 auto
      padding-bottom          22px

      .feature-item
        width                 32%
        margin-left           2%
        borderBox()
        fl()

        &:nth-of-type(3n + 1)
          margin-left         0

        h5
          font-size           21px
          line-height         22px
          color               #27ae60
          font-weight         600

          &.window-icon:before
            content           ''
            margin            -1px 18px 0 0
            r-sprite          'app', 'green-window'
            fl()

        p
          font-size           14px
          color               #727272
          padding             11px 0 55px
          line-height         24px
          font-weight         600

  .main-footer
    background                #f9f9f9


@keyframes tabEnter
  0%
    opacity                   0

  100%
    opacity                   1

@keyframes tabLeave
  0%
    opacity                   1

  100%
    opacity                   0