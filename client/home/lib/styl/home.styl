}

.HomeAppView
  font-family               SoleilFamily
  color                     #9f9f9f

  ul
    list-style-type         disc
    list-style-position     inside
    font-size               14px
    line-height             28px
    font-weight             100


.HomeAppView-TabView
  bg                        color, #F4F3F3
  overflow                  hidden
  size                      auto, 100%
  border-left               1px solid #E4E4E4
  borderBox()

.HomeAppView--scroller
  styleScrollBars           rgba(0,0,0,.15)


.HomeAppView--button
  font-size                 14px
  font-weight               100
  padding-right             2px
  color                     #ABABAB
  noTextDeco()
  dIBlock()

  &.primary
    color                   #769ECC
