}

.HomeAppView
  font-family               SoleilFamily
  color                     #9f9f9f

  ul
    list-style-type         disc
    list-style-position     inside
    font-size               14px
    line-height             28px
    font-weight             100

  .koding-on-off.small
    size                    42px 22px
    border-radius           19px
    background              #D8D8D8
    padding                 4px 6px

    &:before
      abs                   -1px 0 0 -35px
      content               'OFF'

    a.knob
      background            #fff
      size                  14px 14px

    &.on
      background            #52A840
      &:before
        content             'ON'

    &.on a.knob
      vendor                transform, translateX(16px)

.HomeAppView-TabView
  bg                        color, #F4F3F3
  overflow                  hidden
  size                      auto, 100%
  border-left               1px solid #E4E4E4
  borderBox()

.HomeAppView--scroller
  styleScrollBars           rgba(0,0,0,.15)


.HomeAppView--button
  font-size                 14px
  font-weight               100
  padding-right             2px
  color                     #ABABAB
  noTextDeco()
  dIBlock()

  &.primary
    color                   #769ECC

