@css {
/*
Home Section styles
*/
}

.HomeAppView--section
  font-weight               100
  margin                    0 48px 22px
  border                    1px solid #D0D0D0
  bg                        color, white
  padding                   32px
  borderBox()

.HomeAppView--sectionHeader
  border-bottom             none
  padding-top               24px
  margin-bottom             25px
  font-size                 14px
  line-height               19px
  color                     #A1A1A1

.HomeAppView--section.Credentials

  .filter-view
    hidden()

.HomeAppView--section
  &.payment
    > fieldset
      padding-top           30px

  &.billing
    .address
      input
        width               326px
        margin-right        20px
        &:last-child
          width             112px
          margin            0

    .zipCode
      input
        width               151px
        margin-right        20px

        &:last-child
          margin-right      0
          width             112px
    .phone input
      width                 300px

