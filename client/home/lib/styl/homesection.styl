@css {
/*
Home Section styles
*/
}

.HomeAppView--section
  font-weight               100
  margin                    0 48px 30px
  border                    1px solid #D0D0D0
  bg                        color, white
  padding                   32px
  borderBox()
  &:first-child
    margin-top              36px

  p
  .HomeAppView--sectionWrapper
    line-height             25px
    color                   #9F9F9F
    font-weight             300
    font-size               14px
    letter-spacing          .2px

  input.kdinput
    kalc                    width, 100% \- 130px
    bg                      color, transparent
    display                 inline-block

  .HomeAppView--button.primary
    margin-left             30px

  .HomeAppView--button.fr
    margin-left             30px


.HomeAppView--sectionHeader
  border-bottom             none
  margin                    0 48px 30px
  font-size                 14px
  line-height               19px
  color                     #747474
  &:first-child
    margin-top              36px


.HomeAppView--ActionBar
  line-height               25px
  margin                    20px 0 0
