@css {
/*
Home Stacks stylesheet
homestacks.styl
*/
}

$accentColor                = #F2778A
$accentActiveColor          = #DF6E7F
$titleColor                 = #424242
$subtleColor                = #A59999
$borderColor                = rgba(151, 151, 151, .52)

.HomeAppView-Stacks--create
  margin                    36px 48px 25px
  border-bottom             1px solid #D0D0D0
  padding-bottom            25px
  rel()
  h2
    color                   #818181
    font-size               16px
    font-weight             600
    line-height             25px
  p
    font-style              italic
    color                   $subtleColor
    font-weight             100
    font-size               14px
    line-height             16px

  button.HomeAppView-Stacks--createButton
    abs                       0px 0px


.ListView-section.HomeAppViewStackSection
  .ListView-row
    borderizeListItems      25px, 1px solid $borderColor

.HomeAppView--scroller.stacks

  .kdtabhandlecontainer
    abs                     0px 0 0 0px
    z-index                 1
    bg                      color #F4F3F3
    border-bottom           none
    height                  89px
    width                   100%
    padding                 0

    .kdtabhandle-tabs
      margin                0 46px
      padding               27px 0
      size                  auto auto
      border-bottom         1px solid #CACACA
      rel()

    .kdtabhandle
      height                35px
      bg                    color transparent
      border                none
      border-width          0 0 1px
      border-right          1px solid #CACACA
      color                 #5E5E5E
      padding               0 32px
      b
        font-weight         400
        font-size           15px
        letter-spacing      .5px

      &.active
        color               $accentColor

      &:last-of-type
        border-right        none
        padding-right       0

      &:first-of-type
        padding-left        0

  > main.kdscrollview
    z-index                 0
    > .kdtabview
      margin-top            89px


  .kdtabpaneview.credentials
    .credential-item
      borderizeListItems    20px, 1px solid $borderColor

      .credential-info
        fl()

        .title
        .tag
          top               0
          display           inline-block
          float             none
          rel()

        .tag
          font-size         12px
          font-weight       300
          bg                color #F8903B
          padding           2px 10px
          color             #FFFFFF
          text-transform    uppercase

        .title
          margin-right      20px
          font-weight       400
          color             #929292

      .HomeAppView--link
        fr()

    .HomeAppView--credential-links
      margin-top            12px

      a
        margin-left         20px

