@css {
/*
Home Stacks stylesheet
homestacks.styl
*/
}

$accentColor                = #F2778A
$titleColor                 = #424242
$subtleColor                = #A59999
$borderColor                = rgba(151, 151, 151, .52)

.HomeAppView-Stacks--create
  margin                    36px 48px 25px
  border-bottom             1px solid #D0D0D0
  padding-bottom            25px
  rel()
  h2
    color                   #818181
    font-size               16px
    font-weight             600
    line-height             25px
  p
    font-style              italic
    color                   $subtleColor
    font-weight             100
    font-size               14px
    line-height             16px

  button.HomeAppView-Stacks--createButton
    color                   white
    bg                      color, #01B05A
    abs                     0px 0px
    padding                 12px 24px
    border                  none
    rounded                 4px
    &:active
    &:hover
      bg                    color, #01B05A

    span.button-title
      font-size             13.5px
      font-weight           600
      letter-spacing        .3px


.StackTemplateItem
  rel()

.StackTemplateItem-description
.StackTemplateItem-label
  width                     50%

.StackTemplateItem-label
  font-weight               600
  font-size                 16px
  color                     $titleColor
  line-height               25px
  pointer()

.StackTemplateItem-description
  font-style                italic
  color                     $subtleColor
  font-weight               100
  font-size                 14px
  line-height               16px
  .u-color-light-text
    color                   $subtleColor

.StackTemplateItem-ButtonContainer
  width                     50%
  abs                       13px 0px
  text-align                right

  .HomeAppView--button
    line-height             20px
    display                 inline-block


.ListView-section.HomeAppViewStackSection
  .ListView-row
    border-bottom           1px solid $borderColor
    padding                 25px 0
    &:first-child
      padding-top           0
    &:last-child
      padding-bottom        0
      border-bottom         none

.HomeAppView--scroller.stacks

  .kdtabhandlecontainer
    abs                     0px 0 0 0px
    z-index                 1
    bg                      color #F4F3F3
    border-bottom           none
    height                  89px
    width                   100%
    padding                 0

    .kdtabhandle-tabs
      margin                0 46px
      padding               27px 0
      size                  auto auto
      border-bottom         1px solid #CACACA
      rel()

    .kdtabhandle
      height                35px
      bg                    color transparent
      border                none
      border-width          0 0 1px
      border-right          1px solid #CACACA
      color                 #5E5E5E
      padding               0 32px
      b
        font-weight         400
        font-size           15px
        letter-spacing      .5px

      &.active
        color               $accentColor

      &:last-of-type
        border-right        none
        padding-right       0

      &:first-of-type
        padding-left        0

  > main.kdscrollview
    z-index                 0
    > .kdtabview
      margin-top            89px

