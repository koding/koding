@css {
/*
Home Stacks stylesheet
homestacks.styl
*/
}

$titleColor                 = #424242
$subtleColor                = #A59999

.HomeAppView-Stacks--create
  margin                    36px 48px 25px
  border-bottom             1px solid #D0D0D0
  padding-bottom            25px
  rel()
  h2
    color                   #818181
    font-size               16px
    font-weight             600
    line-height             25px
  p
    font-style              italic
    color                   $subtleColor
    font-weight             100
    font-size               14px
    line-height             16px

  button.HomeAppView-Stacks--createButton
    color                   white
    bg                      color, #01B05A
    abs                     0px 0px
    padding                 12px 24px
    border                  none
    rounded                 4px
    &:active
    &:hover
      bg                    color, #01B05A

    span.button-title
      font-size             13.5px
      font-weight           600
      letter-spacing        .3px


.StackTemplateItem
  border-bottom             1px solid rgba(151, 151, 151, .52)
  margin-top                23px
  padding-bottom            23px
  rel()

  &:first-of-type
    margin-top              0

  &:last-of-type
    border-bottom           none
    padding-bottom          0

.StackTemplateItem-description
.StackTemplateItem-label
  width                     50%

.StackTemplateItem-label
  font-weight               600
  font-size                 16px
  color                     $titleColor
  line-height               25px

.StackTemplateItem-description
  font-style                italic
  color                     $subtleColor
  font-weight               100
  font-size                 14px
  line-height               16px
  .u-color-light-text
    color                   $subtleColor

.StackTemplateItem-ButtonContainer
  width                     50%
  abs                       13px 0px
  text-align                right

  .HomeAppView--button
    line-height             20px
    display                 inline-block

