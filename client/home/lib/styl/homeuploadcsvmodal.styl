.ContentModal.csv-upload

  .uploadcsvinput
    opacity 0

  .kdmodal-title
    height                  60px
    border-bottom           1px solid #ECEAEA
    bg                      color #fff
    text-align              center
    pointer-events          none
    margin-bottom           0px

    span.title
      color                 #727272
      font-size             22px
      font-weight           300
      line-height           60px
      display               inline-block
      letter-spacing        0px

      ellipsis()
      max-width             450px

  header
    display                 none


  .main-container
    font-size               14px
    color                   #727272
    line-height             20px
    margin                  40px 100px

    &.trailer-state
      margin                40px
      p
        letter-spacing      0.16px
        strong
          color             #727272
          font-weight       600

    &.uploading-state
      font-weight           300
      font-size             14px
      color                 #727272
      line-height           20px
      text-align            center
      p
        font-weight         600
      div
        letter-spacing      0.13px
      .main-loader.kdloader
        margin-top 40px
        &:after
          content           'Uploading...'
          color             #989898
          font-size         13px
          letter-spacing    0.06px

    &.error-uploading

      .show-error
        color               #F2778A
        border              1px solid #F2778A
        padding             20px
        font-size           13px
        height              64px
        bg                  color #F6F0F1
        letter-spacing      0.01px
        line-height         16px
        border-radius       4px

        .file-format
          color             #79B3F2
          cursor            pointer

    &.success-state

      .success-state-label
        text-align          center
        margin-bottom       20px
        p
          font-weight       600

      .analyzeCSV
        border-radius       4px
        bg                  color #fff

        div.wrapper-with-extras
        div.wrapper
        div.extras-wrapper
          height            auto
          display           flex
          text-align        center
          font-size         24px
          color             #F2778A
          border-bottom     none
          margin            0 20px
          padding-top       20px

          .total-label
          .members-label
          .admins-label
            font-size       14px
            color           #A8A8A8

          .total
          .members
          .admins
            padding         10px 0
            border-right    1px solid #EFEFEF
            width           calc(100%/3)
            margin-bottom   15px
            borderBox()

          .admins
            border-right    0px

        div.wrapper-with-extras
          border-bottom     1px solid #EFEFEF
          .total
          .members
          .admins
            margin-bottom   0px

        .extras-wrapper
          padding-top       0px !important
          padding-bottom    20px
          text-align        center

          .secondary-wrapper
            width           100%
            .alreadyInvited
              color         #989898
              font-size     18px
              display       inline-block
              padding       10px 0px
              border-right  1px solid #efefef
              width         calc(100%/3)
              borderBox()

              &:last-child
                border-right  0px

              label
                font-size       14px
                color           #A8A8A8

          .extras-wrapper:empty
            hidden()


  .example-csv
    height                  60px
    bg                      color #fff
    padding                 20px
    font-size               10px
    color                   #989898
    letter-spacing          0.09px
    line-height             20px
    border-radius           4px

  .button-wrapper
    height                  60px
    border-top              1px solid #ECEAEA
    bg                      color #fff
    padding-top             20px

    .kdbutton.cancel
      float                 left
      margin-left           20px
      background            #FFFFFF
      border                1px solid #BEBEBE
      span
        color               #5E5E5E

    .kdbutton.select-upload
      float                 right
      margin-right          20px
