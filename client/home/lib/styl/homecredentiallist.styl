@css {
/*
Home CredentialList stylesheet
homecredentaillist.styl
*/
}

.HomeAppView--section.credentials2
  .credentials-list-item
    border-bottom           1px solid #D0D0D0
    padding                 20px 0px
    &:first-child
      padding-top           0px
    &:last-child
      border-bottom         0px
      padding-bottom        0px


  .credentials-list-item-custom
  .credentials-list-item-cloud
    display                 flex
    rel()

  .providericon-wrapper
    margin-right            10px

    .aws
      height                32px !important
      background            #fff
      background-position   center
      background-repeat     no-repeat
      r-sprite              'stack-editor' 'aws'

  .title
    font-size               15px
    line-height             16px
    font-weight             400
    color                   #929292
    max-width               280px
    line-height             16px
    padding-top             8px
    margin-right            10px

  .option-wrapper
    abs                     8px 0px 0 0
    size                    20px, 20px
    padding-top             5px

    &:before
      abs()
      right                 0px
      content               ''
      background            none
      border                5px solid transparent
      border-top-color      rgb(183,183,183)
      borderBox()

    &:hover
      &:after
        content 'options'
        width 55px
        abs 0px 9px 0 0

  .shared-tag
    margin-top              8px
    font-size               10px
    line-height             11px
    padding                 2px
    height                  10px
    color                   #FFFFFF
    background-color        #0269A7
    cursor                  default
    margin-right            10px
    &.tag
      background-color      #0269A7

  .credential-owner
    margin-top              8px
    font-size               12px
    color                   #515151

  .dropdown
    abs                     8px -10px 0 0
    &:hover
      &:after
        content             'options'
        width               55px
        abs                 0px 20px 0 0

    .ButtonWithMenuWrapper
      cursor                pointer
      display               inline-block
      &:before
        content             ''
        background          none
        border              5px solid transparent
        border-top-color    rgb(183,183,183)
        width               10px

        borderBox()

  input.kdinput
    margin-top              20px
    width                   100% !important

  .shared-credential-users
    display                 -webkit-inline-box
    margin-top              20px
    .shared-credential-users.single-user
      margin-right          8px
      height                20px
      .ProfilePicture
        border-radius       0px

      .profile-wrapper
        .ProfileName
          padding             2px
          bg                  color #e3e3e3

        .close-icon
          // rel()
          r-sprite          app, "delete_gray_16"
          size              6px, 6px !important
