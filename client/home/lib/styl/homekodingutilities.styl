@css {
/*
Home Koding Utilities stylesheet
welcome.styl
*/
}

.HomeAppView--section.kd-cli
  font-family               SoleilFamily

  p.view-guide
    text-align              right
    margin                  20px 0 0

  h2
    margin                  0 0 20px 0
    font-weight             bold
    color                   #545454
    font-size               17px

  code
    bg                      color #F7F7F7
    border                  1px solid #EAEAEA
    borderBox()
    color                   #8958BA
    font-size               12px
    font-weight             400
    line-height             18px
    padding                 0 6px
    rounded                 2px
    &.block
      color                 #858585
      font-size             14px
      line-height           20px
      padding               0
      margin                40px 20px
      width                 auto
      display               block
      rel()

      span
        padding             15px 80px 15px 25px
        display             block

      cite
        color               #979798
        font-weight         300
        font-size           14px
        display             block
        abs                 15px 15px

.HomeAppView--section.koding-os-x-app
  .link-holder
    overflow                hidden
    .HomeAppView--button
      margin-left           50px
      fr()

  ul
    margin                  30px


.HomeAppView--section.koding-button
.HomeAppView--section.customer-feedback
  z-index                   1
  rel()

  .kdinput.koding-on-off
    abs                     47px 36px

  p.primary
    visible()

  p.secondary
    hidden()

  &.on
    p.primary
      hidden()

    p.secondary
      visible()

  p
    strong
      font-weight           bold
      color                 #545454
      font-size             14px
      display               block

    cite
      font-style            italic

    .HomeAppView--button
      margin-bottom         10px

    .HomeAppView--code
      margin                40px 0
      padding               0
      height                112px

      textarea
        overflow            hidden
        bg                  color transparent
        border              none
        margin              15px 25px
        kalc                width, (100% \- 30px)
        kalc                height, (100% \- 30px)
        resize              none
        outline             none
        &:active
          outline           none


.TryOnKodingButton
  r-sprite                  home try_on_koding
  margin-top                -8px