@css {
/*
Home Koding Utilities stylesheet
welcome.styl
*/
}

.HomeAppView--section.kd-cli

  p.view-guide
    text-align              right
    margin                  20px 0 0

  h2
    margin                  0 0 20px 0
    font-weight             bold
    color                   #545454
    font-size               17px

&.show-code-border
  .HomeAppView--code.block
    border                  1px solid rgb(125,190,241)
    shadow                  inset 0 1px 2px rgba(0,0,0,0.075),0 0 5px 1px rgba(81,167,232,0.5)


.HomeAppView--section.koding-os-x-app
  .link-holder
    overflow                hidden
    .HomeAppView--button
      margin-left           50px
      fr()

  ul
    margin                  30px


.HomeAppView--section.koding-button
  .HomeAppView--button
    margin-bottom           10px


// leaving these here to not duplicate.
.HomeAppView--section.customer-feedback
.HomeAppView--section.intercom-integration
.HomeAppView--section.gitlab
.HomeAppView--section.github
.HomeAppView--section.koding-button
.HomeAppView--section.permissions
  z-index                   1
  rel()

  .OnOffButton
    abs                     47px 36px
  input.OnOffButton
    hidden()

  .primary
  .secondary
  .HomeAppView--sectionWrapper
    strong
      font-weight           bold
      color                 #545454
      font-size             14px
      display               block

    cite
      font-style            italic

    .HomeAppView--code.block
      margin                40px 0
      padding               0
      height                112px

      textarea
        overflow            hidden
        bg                  color transparent
        border              none
        margin              15px 25px
        kalc                width, (100% \- 30px)
        kalc                height, (100% \- 30px)
        resize              none
        outline             none
        &:active
          outline           none


.TryOnKodingButton
  r-sprite                  home try_on_koding
  margin-top                -8px

.TryOnKodingButton--footer
  border-top                1px solid #ddd
  height                    15px
  margin-top                20px
  padding-top               20px


.HomeAppView--section.koding-app
  .link-holder
    text-align              right
    margin                  20px 0 0
