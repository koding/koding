@css {
/*
Home Form/Input styles
*/
}

.HomeAppView--form
  margin                    0 -12px
  padding-top               30px

  .formline
    display                 block
    margin-bottom           25px
    padding                 0 12px
    width                   auto
    font-size               14px
    clear                   both
    borderBox()

  div.input-wrapper
    margin-bottom           0 !important

  .formline.button-field
    padding                 28px 12px 0 !important
    width                   auto
    border-top              1px solid #E7E7E7 !important

  .Formline--half
    width                   50%
    float                   left
    clear                   none

  label.kdlabel
    display                 block
    margin                  0 0 7px
    padding                 0
    line-height             20px
    color                   #434343
    float                   none

  input.kdinput
  textarea.kdinput
    display                 block
    width                   100%
    padding                 8px 14px
    line-height             20px
    outline                 none
    resize                  none
    border-radius           4px
    border                  1px solid #D2D2D2
    background              #fff
    font-size               14px
    color                   #A2A2A2
