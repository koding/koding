.Build-Logs

  .build-logs-loader
    size                    26px 26px
    top                     50%
    position                absolute
    left                    calc(50% \- 26px)
    opacity                 1

  .description-view
    display                 none

  .pane-header
    height                  40px
    width                   674px
    bg                      color #4A4A4A
    margin                  40px 0px 0px 40px
    .title
    .vm-name
      color                 #fff
      font-size             12px
      letter-spacing        0.11px
      line-height           40px

    .vm-name
      margin-left           20px
      float                 left

    .title
      float                 right
      margin-right          20px


    &.hide
      opacity 0

    // &.show
    opacity   1

  .build-logs-view
    height                  calc(100% \- 166px) !important
    clear                   both

    .ace_scrollbar.ace_scrollbar-h
      height                13px !important

    &.hide
      opacity 0
    opacity   1

  figure.kdview
    width                   674px !important
    margin                  0px 40px 40px 40px

    .ace_gutter
      display               none

    .ace_scroller
      .ace_content
        bg                  color #000
        margin-top          -10px !important

      .ace_layer.ace_text-layer
        padding             20px 0px 0px 20px !important

    .ace_scrollbar-v
      bg                    color #000
      height                100%

    .ace_scrollbar-h
      bg                    color #000


  .HomeAppView--sectionHeader
    margin-left             40px
    width                   674px
    height                  52px
    border-bottom           1px solid #d9d9d9
    display                 block
    position                relative
    a
      font-size             14px
      color                 #67A2EE
      letter-spacing        0.15px
      text-decoration       none
      line-height           16px
      font-weight           300
      margin-left           20px
    &:before
      content ''
      r-sprite              app left_arrow
      display               inline-block
      abs()

