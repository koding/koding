}

.HomeTeamBillingInvoicesList-row
  borderizeListItems        10px, 1px solid #ddd


.payment-history
  .HomeAppView--sectionHeader
    margin-left             40px
    width                   674px
    height                  52px
    border-bottom           1px solid #d9d9d9
    display                 block
    position                relative
    a
      font-size             14px
      color                 #67A2EE
      letter-spacing        0.15px
      text-decoration       none
      line-height           16px
      font-weight           300
      margin-left           20px
    &:before
      content ''
      r-sprite              app left_arrow
      display               inline-block
      abs()

  .SingleInvoice
    display                 flex
    align-items             center
    justify-content         space-between

    .Label
      padding-right         1.5rem
      &:last-child
        padding-right       0
