@css {
/*
Home Team Billing styles
*/
}

.HomeAppView--billing-form
  margin-top                20px

  fieldset
    padding-top             30px

    &:first-child
      padding-top           0

  label
    color                   #747474 !important
    font-size               16px !important
    width                   126px
    font-size               14px
    font-weight             100
    margin-bottom           10px
    dIBlock()

  .HomeAppView--cc
    size                    410px 222px
    bg                      color, #42488E
    gradient                #42488E, #413C86
    margin                  0 auto
    rounded                 10px
    padding                 25px
    top                     45px
    shadow                  0 2px 4px rgba(0,0,0,.16)
    borderBox()
    rel()

    label
      width                 auto
      font-size             14px !important
      color                 #fff !important
      dBlock()

    .HomeAppView-input
      width                 100%

    .card-number
      width                 100%
      letter-spacing        4px
      margin-bottom         30px

    .wrapper--expiration
      margin-right          14px
      fl()

      .expiration-month
        width               138px
        margin-right        10px
      .expiration-year
        width               80px
      .wrapper--cvc
        fl()


.HomeAppView--section.payment
  > fieldset
    padding-top             30px


.HomeAppView--section.billing
  .address
    .HomeAppView-input
      width                 326px
      margin-right          24px
      &:last-child
        width               112px
        margin              0

  .zipCode
    .HomeAppView-input
      width                 151px
      margin-right          24px

      &:last-child
        margin-right        0
        width               112px

  .phone .HomeAppView-input
    width                   300px


.HomeAppView-input
  height                    42px
  font-size                 14px
  rounded                   3px
  bg                        color, #fff
  color                     #A59999
  kalc                      width, (100% \- 130px)
  display                   inline-block
  padding                   10px 14px
  line-height               22px
  font-weight               300
  border                    1px solid #d7d7d7
  outline                   0
  borderBox()


