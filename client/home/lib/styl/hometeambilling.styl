@css {
/*
Home Team Billing styles
*/
}

.HomeTeamBillingForm
  margin-top                -65px


.HomeAppView--billing-form
  margin-top                20px

  fieldset
    padding-top             30px

    &:first-child
      padding-top           0

  label
    color                   #747474 !important
    font-size               16px !important
    width                   126px
    font-size               14px
    font-weight             100
    margin-bottom           10px
    dIBlock()

  .HomeAppView--cc
    size                    360px 172px
    bg                      color, #42488E
    gradient                #42488E, #413C86
    margin                  0 auto
    rounded                 10px
    padding                 25px
    shadow                  0 2px 4px rgba(0,0,0,.16)
    rel()

    label
      width                 auto
      font-size             14px !important
      color                 #fff !important
      dBlock()

    .HomeAppView-input
      width                 100%

    .card-number
      width                 100%
      letter-spacing        4px

    .wrapper--expiration
      margin-right          14px
      fl()

      .expiration-month
        width               138px
        margin-right        10px
      .expiration-year
        width               80px
      .wrapper--cvc
        fl()

.HomeAppView--section.payment
  > fieldset
    padding-top             30px

.HomeAppView-selectBoxWrapper
  height                    42px
  font-size                 14px
  color                     #A59999
  kalc                      width, (100% \- 130px)
  display                   inline-block
  borderBox()

.HomeAppView-input
  height                    42px
  font-size                 14px
  rounded                   3px
  bg                        color, #fff
  color                     #A59999
  kalc                      width, (100% \- 130px)
  display                   inline-block
  padding                   10px 14px
  line-height               22px
  font-weight               300
  border                    1px solid #d7d7d7
  outline                   0
  borderBox()


