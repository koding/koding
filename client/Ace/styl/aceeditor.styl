@import "../../Framework/src/themes/default/kdfn"
@import "../../Main/styl/appfn"
@import "../../Main/styl/app.fonts"


@css {
/*
ACE STYLES
app.aceeditor.styl
*/
}

body.ace #main-header
  shadow                  none

#kdmaincontainer.fullscreen
  .ace .application-page
    aside
      kalc                  height, 100%
      top                   0


.ace .application-page

  aside
    size                  247px 100%
    bg                    color #252E30
    top                   0
    left                  0
    padding               3px
    abs()
    borderBox()
    .file-container
      bg                  color, #282f31

  section
    height                100%
    kalc                  width, 100% \- 247px
    margin-left           247px



// OLD STYLES
// BURAK CLEANUP PLEASE
.ace_editor
  size                    100%, 100%

.ace_gutter
  .ace_gutter-cell.ace_error
    bg                    image, url("data:image/png;base64,")
  .ace_gutter-cell.ace_warning
    bg                    image, url("data:image/png;base64,")

.kdnotification.editor.mini
  shadow                  0 1px 3px rgba(0, 0, 0, 0.3)
  rounded                 2px
  margin-top              15px
  .kdnotification-title
    text-shadow           none
    font-size             10px
    line-height           10px
    padding               0 10px


.kdtabhandle
  .inactive
    color                 rgba(255,255,255,0.85)
    text-shadow           0 -1px 0 rgba(0,0,0,.61)
    bg                    color,rgba(255,255,255,.2)
    span.close-tab
      bg                  color,transparent

.save-file-container
  bg                      color, #eee
  borderBox()
  &.save-as-dialog
    border                1px solid #bbb

.save-as-dialog
  .kddialog-buttons
    height                65px !important
  .kddialog-wrapper
    margin-bottom         80px !important
  button
    margin                10px 10px 0 0 !important
    &:first-child
      margin-right        20px !important

.editor-main
  bg                      color, #161616
  .code-wrapper
    size(100%,100%)
    .ace_scroller
      overflow-x          none
      cursor              text

  .ace_content
    cursor                text

  &.not-editable
    .ace_cursor.ace_hidden
      display             none

.ace-find-replace-view
  display                 block
  bottom                  20px
  bg                      color, #252E30
  color                   #5e7074
  z-index                 1000
  padding-top             3px
  border-bottom           1px solid #2b3638
  shadow                  inset 0 -1px 0 #1f2729
  borderBox()
  abs()

  .ace-find-replace-settings
    width                 100px
    abs()
    left                  0

  .ace-find-replace-inputs
    padding               0 194px 0 86px
    width                 auto

    .kdinput
      height              24px
      padding             0 5px
      font-size           12px
      rounded             2px
      line-height         24px
      color               #7e9ea3
      bg                  color, #2f3b3d
      shadow              0 1px 0 #374447
      border              1px solid #14181a
      borderBox()

      &:nth-child(2)
        margin-top        3px

      &:hover
        border            1px solid #14181a
        background        #354245

      &:focus
        background        #354245
        border            1px solid #7e9ea3
        shadow            0 0 3px #7e9ea3

  .ace-find-replace-buttons
    width                 190px
    abs()
    right                 0
    top                   3px

    .kdbutton
      cursor              pointer
      rounded             3px
      size                91px, 24px
      border              1px solid #374447
      margin-bottom       3px
      color               #7e9ea3
      bg                  color, #212a2b
      shadow              0 1px 0 #14181a
      -webkit-transition  -webkit-transform .1s ease,
                          background        .1s ease
      -moz-transition     -moz-transform    .1s ease,
                          background        .1s ease
      transition          transform         .1s ease,
                          background        .1s ease
      borderBox()

      &:hover
        bg                color, #2b3638
      &:active
        shadow            none
        vendor            transform, translateY(1px)

  .kdinput
    width                 100%

  .close-icon
    bg                    position,-80px -222px

  .multiple-choice
    fl()
    position              relative
    margin-left           4px
    a
      cursor              pointer
      size                26px, 24px
      border              1px solid #374447
      margin-bottom       3px
      color               #7e9ea3
      bg                  color, #212a2b
      shadow              0 1px 0 #14181a
      -webkit-transition  -webkit-transform .1s ease,
                          background        .1s ease
      -moz-transition     -moz-transform    .1s ease,
                          background        .1s ease
      transition          transform         .1s ease,
                          background        .1s ease
      text-indent         -10000px
      borderBox()

      &:nth-child(1)
      &:nth-child(2)
        border-right            none

      &:nth-child(3)
        border-right-color      #374447

      &.multiple-choice-case-sensitive
        r-sprite            ace '26-search-case'
        &.active
          r-sprite          ace '26-search-case-active'
      &.multiple-choice-regex
        r-sprite            ace '26-search-regex'
        &.active
          r-sprite          ace '26-search-regex-active'
      &.multiple-choice-whole-word
        r-sprite            ace '26-search-whole'
        &.active
          r-sprite          ace '26-search-whole-active'
      &.active
        border-color      #374447 !important

.editor-bottom-bar
  bg                      color, #252E30
  color                   #5e7074
  size                    100% 20px
  z-index                 1000
  borderBox()
  abs()
  &.clearfix
    bottom                0

  .section
    padding               3px
    font-size             10px
    line-height           12px
    color                 #5e7074
    size                  auto 12px
    fl()
    &.caret-position
      width               48px
      text-align          center
      color               #5e7074
      margin              0
      span
        margin            0 2px

.terminal-tab
  border                  1px solid #ddd
  borderBox()

  input.kdinput.text
    color                 #28fe14
    font-family           mono
    border                none
    display               block
    line-height           initial
    rounded               0
    size                  100%, initial
    shadow                none
    bg                    color, transparent

  .anyterm-screen
    size                  100%, 100%
    padding               2px
    margin                0
    color                 #28fe14
    bg                    color, #111
    bg                    image, url("/a/images/gterminal.png")
    bg                    repeat, no-repeat
    bg                    size, cover
    borderBox()
    span.cursor
      bg                  color, transparent
      border              1px solid #b4b4b4

  &.terminal-on-focus
    span.cursor
      border              0
      margin              0
      bg                  color,transparent
      bg                  image,url("/a/images/blinking-cursor.gif")
      bg                  repeat,no-repeat


.kdmodal.goto
  .kdmodal-content
    margin-top            0 !important
  .kdmodal-inner
    margin                0 !important
  .close-icon
    hidden()
  .title
    line-height           30px
  button
    abs                   12px, 9px
    size                  auto, 42px
    padding               2px 10px !important
    span
      line-height         42px !important
      text-transform      uppercase !important
  .kdformview .formline
    padding               11px
    .input-wrapper > input
      min-width           0
      max-width           98px

.kdmodal.key-bindings
  table
    size                  100%, auto
    margin                0
    font-size             14px
    borderBox()
    fl()

    &~table
      padding             0 0 0 12px
      border-left         1px solid #dedede

    thead
      font-weight         500

      th
        padding           8px 6px

    tr
      line-height         18px
      border-bottom       1px solid #dedede

      td
        padding           8px 6px
        min-width         140px

        ~td
          border-left     1px solid #dfdfdf

      &:nth-child(2n)
        background        #f7f7f7


