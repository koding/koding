// form bits
.content-display-wrapper
  .content-display
    .profileinfo
      input.kdinput.text
      textarea.kdinput.text
      button.clean-red
      button.cupid-green
        display         none

      .active
        input.kdinput.text
        textarea.kdinput.text
          display         inline-block

        button.clean-red
        button.cupid-green
          display         inline-block
          margin-right    8px
          padding         16px 20px
          vertical-align  middle
          width           auto

    // .profilestats
    //   > div.contact
    //     min-width           250px

.content-display-wrapper
  .content-display
    .profileinfo
      .profilename-form
        display     inline-block
        width       auto

        p
          color         #222
          font-size     30px
          font-weight   bold
          padding       4px 3px 4px 4px

          &:hover
            background-color  #FFFBD3

      form.profilename-form.active
        margin       -1px 20px -2px 0

        p
          display     none

        input.kdinput.text
          background-color  white
          border            1px solid #AAA
          color             #222
          display           inline-block
          font-size         30px
          font-weight       bold
          height            auto
          margin-right      8px
          width             auto

        input.kdinput.text.validation-error
          border-color        red


      .profilelocation-form
        display             inline-block
        vertical-align		  baseline

        p
          color               #A5A5A5
          font-size           16px
          font-weight         300
          margin              0 4px 0 8px
          width               auto

          &:hover
            background-color  #FFFBD3

      .profilelocation-form.active
        margin            0 0 4px 0
        vertical-align    bottom

        p
          display: none

        input.kdinput.text
          background-color    white
          border              1px solid #AAA
          display             inline-block
          font-weight         300
          font-size           16px
          margin              0 8px 0 4px
          width               120px

        button.clean-red
        button.cupid-green
          padding         5px 12px

      .profilename-form.active + .profilelocation-form
        vertical-align      bottom

      .personal-profile-about
        p
          font-size         15px
          font-weight       300
          margin            3px 4px
          max-width         750px

          &:hover
            background-color      #FFFBD3


      .personal-profile-about.active
        p
          display     none

        textarea.kdinput.text
          display         inline-block
          height          100px
          width           500px

