.content-display-wrapper
  .content-display
    .profileleft
      .profileavatar-form
        button.clean-red
        button.cupid-green
          display         none
          margin          8px 0 0 0

.content-display-wrapper
  .content-display
    .profileleft
      .profileavatar-form
        span
          border          none
          height          auto
          width           auto
          margin-bottom   0

      .profileavatar-form.active
        button.clean-red
        button.cupid-green
          display         block
          margin          8px 0 0 0

.content-display.member
  .profilearea
    // overflow              visible

    a.tag
      color               white

    .kdfileupload
      height              88px
      min-width           10px
      width               88px

      .kdfileuploadarea
        height            88px
        min-width         10px
        width             88px

        span
          bg              color,rgba(255,255,255,.5)
          color           #333
          line-height     24px
          size            82px,82px

    .skilltagslabel
      font-size           10px
      color               #a5a5a5
      margin              0 0 0 4px
      width               74px
      fl()

    .skilltagadd
      font-size           11px
      line-height         18px
      margin              0 4px
      noTextDeco()
      fl()

    .personal-skilltags
      margin              10px 0 16px 0

      span.noskilltags
        display           none

      span.skilltagadd
        background        none
        color             #333
        display           inline-block
        font-weight       300

      .kdlistitemview
        bg                color,#e80
        color             #fff
        border            none
        display           inline-block
        font-size         10px
        font-weight       700
        rounded(3px)
        margin            0 5px 6px 0
        padding           0 20px 0 0
        width             auto

      .form-actions-holder
        padding-top       6px
        &:hover
          background-color      #FFFBD3

      form.kdformview
        .kdview.kdautocompletedlistitem
          bg              color,linkColor1
          line-height     18px
          height          18px
          border          none
          margin          0 5px 6px 0
          padding         0
          rounded(3px)
          transition      padding .1s ease-in-out
          &:hover
            bg            color,#0A92BA
            a
              bg          color,#0A92BA
          a
            color         white
            cursor        pointer
            margin        0
            &:hover
              bg          color,#0A92BA

          span.close-icon
            sprite()
            display       none
            z-index       10
            bg            position,-60px -240px
            top           -1px

        .kdautocompletewrapper
          width           70%
          background      none
          border          none
          display         block
          margin          8px 0
          outline         none

          input.kdinput
            width         100%

        .button-container
          width           70%
          display         none
          margin-top      8px
          text-align      right

          button
            padding       10px 18px
            margin        0 0 0 8px
            width         auto

      form.kdformview.active
        // background-color  #FFFBD3
        .skilltagadd
          display         none

        .kdview.kdautocompletedlistitem
          padding         0 20px 0 0
          span.close-icon
            display       inline-block

        input.kdinput
        .button-container
          display         block