@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib/gradients"
@import "nib/vendor"

@css {
/*
TOPICS stylesheet
app.topics.styl
*/
}
.content-page.topics
  .activityhead
    button.kdbutton
      position      absolute
      right         3px
      top           4px
  // .listview-wrapper
  //   margin-top      28px

  .topics-hint
    position        relative
    background      #fff7da
    padding         15px 17px 15px 40px
    font-size       12px
    shadow          inset 0 0 5px rgba(0, 0, 0, 0.17)
    text-shadow     0 1px 0 #ffffff
    color           #777
    span.icon
    a.closeme
      sprite()
    span.icon
      size          20px,20px
      bg            position,0 -671px
      position      absolute
      left          14px
      top           13px
    a.closeme
      size          20px,20px
      bg            position,-80px -240px
      position      absolute
      right         14px
      top           13px

  .kdlistitemview-topics.topic-item
    width           25%
    padding         25px 20px 27px 30px
    border-right    1px solid rgba(0,0,0,0.075)
    border-bottom   1px solid rgba(0,0,0,0.075)
    vendor          transition, width .2s ease-out
    clear           none
    borderBox()
    fl()
    &.clone
      position      absolute
      top           0
      left          0
      vendor        transition-property, height
      vendor        transition-duration, .5s
      &.expand
        height      500px!important
        .topictext
          article
            height    auto

    .edit-topic
      position      absolute
      width         46px
      right         0
      top           2px
      color         linkColor1
      visibility    hidden
      fr()
      noTextDeco()
      span.icon
        display       inline-block
        margin        -2px 2px 0 0
        sprite()
        bg            position,-120px -400px
        size(16px,14px)
        fl()
    &:hover
      .edit-topic
        visibility  visible

  .topictext
    h3
      color           #fff
      line-height     18px
      margin          0px 0 10px 0
      font-size       12px
      font-weight     700
      padding         0
      margin-top      0
      max-width       100%
      a
        color         #fff
        background    #ee8800
        display       inline-block
        padding       2px 8px
        white-space   nowrap
        text-overflow ellipsis
        max-width     100%
        overflow      hidden
        borderBox()
        rounded(4px)
        noTextDeco()
        &:hover
          bg          color,#333

    article
      margin-bottom   15px
      margin-top      0px
      font-size       11px
      line-height     150%
      padding         0
      color           #353535
      height          65px
      overflow        hidden
    p
      margin-bottom   8px
      font-size       11px
      span.icon
        margin        2px 8px 0 0px
        size          20px,20px
        sprite()
        bg            position,-141px -444px
        size(18px,14px)
        fl()
      a
        color         #7f7f7f
        font-weight   600
        noTextDeco()
    p.posts
      span.icon
        bg            position, 0 -634px
    button.kdbutton
      width           auto
      padding         4px 12px
      margin-top      5px
      &:before
        content       ""
        margin        0

  .extra-narrow
    .kdlistitemview-topics.topic-item
      width             100%

  .narrow
    .kdlistitemview-topics.topic-item
      width             50%

  .medium
    .kdlistitemview-topics.topic-item
      width             33.3%

  .extra-wide
    .kdlistitemview-topics.topic-item
      width             20%

