@import "./kdfn"
@import "./client/stylus/appfn"

@media only screen and (min-width: 400px) and (max-width: 768px)
  #kdmaincontainer.home > header
    bg                      position, 50% -211px
    .custom-link-view
      right                 18px


  #koding-logo.large
    left                    18px

  div#home-intro
    min-width               400px
    size                    100%, 760px
    bg                      position, 50% -261px
    section
      padding               30px 0 0
      max-width             768px
      text-align            center
      > div
        width               100%
        padding             0
        float               none
      > aside
        width               300px
        padding             32px 0 0
        margin              0 auto
        float               none

    h2.slogan
      font-size             52px

    h3.slogan-continues
      font-size             24px
      margin-top            24px
      line-height           1.9em
      margin-left           -7px
      span
        padding             5px 7px

  #content-page-home .feeder-tabs .feeder-header
    font-size               18px

  html, body
    min-width         400px

  #content-panel.social
    left              50px !important
    kalc              width, 100% \- 50px, !important
    .content-area-pane.activity
      #content-page-activity.fixed
        .activity-content
          margin-left 0
        .update-widget-tabs
          .kdtabpaneview
            kalc      width, 100% \- 50px

  .member-item
    footer
      button
        margin-bottom 10px
      .followers
        margin-bottom 10px!important

  .comingsoon
    padding           30px 30px

    img
      margin-bottom   14px
      width           60px
      height          auto
    h1
      font-size       24px
      font-weight     700
      margin-bottom   3px
    h2
      font-weight     400
      margin-bottom   15px
      padding-bottom  17px
      font-size       16px
    p
      font-size       12px
      color           #666

  .content-area-pane.activity
    .common-inner-nav
      hidden()

  .kdview.login-screen.home
    .flex-wrapper
      margin-bottom       20px

    .reviews
      hr
        margin            20px auto
      p
        font-size         20px
        margin            10px 0 5px 0
        line-height       30px
      span
        font-size         12px

    div.screenshots
      height              460px



  #home-counter-bar
    text-align      left
    padding         10px 15%

  figure.counter
    width           100%
    margin-right    0
    h6.title
      height        22px
      line-height   22px
      margin        0
      font-size     10px
    > div
      clear         right
      fr()
    i
      font-size     1.3em
  .home-links
    height          50px
    margin-top      -50px
    text-align      center
    > ul
      > li
        padding     5px 0 0 5px
        &:last-child
          padding   5px 5px 0 5px

    .custom-link-view.button
      padding         0 7px 0 5px
      height          30px
      line-height     29px
      font-size       11px
      .icon
        margin-top    5px
      .title
        font-size     12px
    .custom-link-view
      line-height     15px
      &:first-child
        padding-top   0
      span.title
        font-size     10px
      span.icon
        margin-top    -3px

  .settings-list-wrapper
    form
      label.main-label
        width         200px
      .swappable
        .hiddenval
          height      60px
        .actions-wrapper
          top         27px
          left        0