.content-page.home
  header.slide-holder
    height              449px
    min-height          449px
    .slide
      min-height        449px
      bg                color, #B9DFF6
      bg                image, url('/images/cloudbgbig.jpeg')
      bg                repeat, no-repeat
      bg                position, center -140px

  .widget-holder
    border-top          4px solid #666666
    height              auto
    overflow            visible
    border-bottom       4px solid #666666

  // footer
  //   padding             20px 0
  //   height              auto
  //   background          linear-gradient(top,  #333 0%,#222 100%)

.widget-holder
  .kdloader
    display             block
    margin              115px auto
  section
    position            relative
    size                66%,100%
    min-width           780px
    max-width           1200px
    background          white
    border-left         1px solid rgba(0, 0, 0, 0.2)
    border-right        1px solid rgba(0, 0, 0, 0.2)
    shadow              0 0 20px rgba(0, 0, 0, 0.19)
    z-index             1
    borderBox()
    fl()
    header
      margin-top        -67px
      size              100%,67px
      line-height       32px
      text-align        left
      padding           15px 24px
      color             #333
      text-shadow       0 1px 0 white
      border            1px solid #f5f5f5
      border-bottom     4px solid linkColor1
      rounded           6px 6px 0 0
      shadow            0 0 10px rgba(0, 0, 0, 0.19)
      background        linear-gradient(bottom,  #E8E8E8 0%,#F4F4F4 100%)
      borderBox()
      h3
        font-size       16px
        fl()
    footer
      font-size         14px
    .listview-wrapper
      min-height        259px
  
  section
  aside
    footer
      padding           0 15px
      line-height       36px
      text-align        center
      font-size         12px
      border-top        1px solid rgba(0, 0, 0, 0.1)
      a
        color           linkColor1
        noTextDeco()
  
  h2
  .kdlistitemview
    color             #333
    margin            0
    height            37px
    border-bottom     1px solid rgba(0, 0, 0, 0.1)
    padding           0 15px
    borderBox()
    &:hover
      bg              color,#f5f5f5
      
  aside
    size                17%,100%
    min-width           200px
    z-index             0
    fl()
    .kdloader
      display           block
      margin            96px auto 97px
    h2
      padding-top       9px
      font-weight       normal
      font-size         13px
    .kdlistitemview
      line-height       37px
      > span.avatar
        margin          3px 5px 0 0
        padding         1px
        size            26px,26px
        border          1px solid rgba(0, 0, 0, 0.1)
        a
          size          26px!important,26px!important
      > strong
        font-size       12px
        line-height     14px
  
  small
    font-size           11px
    color               #999
    fr()
  
  .kdlistitemview-topic
    .ttag
      margin-top        10px

  .kdlistitemview-activity
    font-size       12px
    line-height     37px
    color           #666
    strong
      color         #333
    span.icon
      size          24px,24px
      margin        6px
      sprite()
      bg            position, -396px -342px
      fl()
      &.status
        bg          position, -399px -345px
      &.codesnip
        bg          position, -707px -345px
      &.followee
      &.follower
        bg          position, -527px -78px
      &.new-member
        bg          position, -557px -78px

  .acounter
    display           inline-block
    font-size         13px
    font-weight       400
    margin            0
    margin-right      2%
    float             right
    &.heading
      font-weight     bold
      font-size       16px
      padding-top     5px
      padding-left    8px
      fl()
    &:first-child
      margin-right    0px

    span
      display         inline-block
      margin-right    0px
      font-size       14px
      font-weight     600
      padding         4px
      line-height     16px
      rounded         1px
      border-right    1px solid #555
      color           #fff
      bg              color, #000000
      background      linear-gradient(top, #3f3f3f 0%, #232323 50%, #595959 51%, #2d2d2d 53%, #383838 100%)
      shadow          0 1px 0 rgba(0,0,0,0.34)
      text-shadow     0 -1px 0 #000000

    .numholder
      display         inline-block
      line-height     1
      padding         3px
      rounded         4px
      background      #d1d1d1
      background      linear-gradient(top,#d1d1d1 0%,#f2f2f2 100%)
      border          1px solid rgba(0,0,0,0.1)
      border-top      1px solid rgba(0,0,0,0.3)
      border-bottom   1px solid #fff
      margin-right    2px

.slide
  .introtext
    position          relative
    color             black
    margin            0 auto
    text-shadow       0 1px 1px rgba(255, 255, 255, 0.51)
    width             66%
    min-width         800px
    max-width         1200px
    margin-top        65px
  .mainleft
    margin-right      360px
    h1
      margin-bottom   20px
      font-size       46px
      letter-spacing  -1px
      text-shadow     0 1px 1px rgba(255, 255, 255, 0.76)
      line-height     52px
    p
      line-height     22px
      font-size       16px
      font-weight     600
      color           #395368
      margin          0 0 30px 0
      span
        color         black
  .mainright
    position          absolute
    top               0
    right             0
    width             305px
    borderBox()
    .mainlink
      position        relative
      display         block
      font-size       30px
      letter-spacing  -1px
      height          65px
      line-height     65px
      border-left     4px solid #333
      padding         0
      color           #333
      vendor          transition, width .4s ease-in-out
      white-space     nowrap
      cursor          pointer
      text-indent     40px
      z-index         0
      borderBox()
      noTextDeco()
      &.reg
        border-left-color     #FF9200
      &.demo
        border-left-color     #0695C1
      &.learn
        border-left-color     #11B300

      &.magic
        z-index       1
        margin-top    -65px
        width         4px
        overflow      hidden
        text-shadow   0 1px 1px rgba(255, 255, 255, 0.4)
        &.reg         
          background  linear-gradient(top,rgba(255, 146, 0, .05) 0%,rgba(255, 146, 0, .2) 84.7%)
          // bg          color, rgba(255, 146, 0, .05)
        &.demo        
          background  linear-gradient(top,rgba(6, 149, 193, .05) 0%,rgba(6, 149, 193, .2) 84.7%)
          // bg          color, rgba(6, 149, 193, .05)
        &.learn       
          background  linear-gradient(top,rgba(17, 179, 0, .05) 0%,rgba(17, 179, 0, .2) 84.7%)
          // bg          color, rgba(17, 179, 0, .05)
        &.anim
          width       325px

#technologies
  border-bottom       1px solid rgba(0, 0, 0, 0.1)
  // border-top          10px solid #333
  size                auto,auto
  padding             68px 40px 70px 40px
  text-align          center
  bg                  color,#e7e7e7
  
  h3
    text-shadow         0 1px 1px white
    color               #333
    font-size           24px
    margin-bottom       34px

  .tech-note
    display             block
    background          white
    width               66%
    margin              0 auto
    padding             10px 15px
    font-size           14px
    border-radius       6px
    color               black
    position            relative
  .tech-note:after
    content             "â†‘"
    font-size           20px
    font-weight         bold
    color               white
    display             block
    position            absolute
    top                 -18px
    right               49%

  .technology-item
    padding             0px 10px
    border              1px solid transparent
    display             inline-block
    size                110px,110px
    box-sizing          border-box
    -moz-box-sizing     border-box
    margin              0 1% 22px
    position            relative
  
    span
      bg                  image,url(../images/technologies.sprite.png)
      display             block
      size                100px,100px
      position            absolute
      top                 5px
      left                5px
      &.php
        bg                  position,0 0
      &.perl
        bg                  position,-100px 0
      &.python
        bg                  position,-200px 0
      &.ruby
        bg                  position,-300px 0
      &.nodejs
        bg                  position,-400px 0
      &.mysql
        bg                  position,-500px 0
      &.mongodb
        bg                  position,-600px 0
      &.git
        bg                  position,-700px 0
      
    &:hover
      bg                  color,rgba(255, 255, 255, 0.99)
      border-color        #FF9200

.screenshot-demo
  padding               40px
  box-sizing            border-box
  text-align            center
  border-top            1px solid rgba(255, 255, 255, 0.8)
  border-bottom         5px solid #ff9200
  background            #DDD
  size                  auto,auto

  h3
    text-shadow         0 1px 1px white
    color               #333
    font-size           24px
    margin              28px 0 18px
    
  p.screenshot-sub
    font-size           14px
    text-shadow         0 1px 1px white
    margin-bottom       32px
  
  .screenshot-login
    color               #ff9200
  .screenshot-item
    display               inline-block
    width                 25%
    min-width             260px
    box-sizing            border-box
    text-align            left
    padding               30px
    vertical-align        top
    .zoom-shot
      box-sizing            border-box
      max-width             100%
      padding               0px
      position              relative
      transition(all .3s ease-in-out)
      img
        transition(all .3s ease-in-out)
        shadow(0 0 40px #fff)
        max-width             100%
        &:hover
          shadow(0 1px 20px rgba(0, 0, 0, 0.41))
      &:hover:before
        background            rgba(0, 0, 0, 0.7)
        color                 #FF9200
        content               '+ Click To View Full Size'
        display               block
        font-size             12px
        left                  0
        padding               5px
        position              absolute
        text-align            center
        z-index               2
      
    h4
      font-size           16px
      margin              10px 15px 0 15px
      padding             0
      
    p
      padding-top         5px
      color               #555
      font-size           14px
      line-height         22px
      margin              0 15px
      
.content-page.home
  > footer
    size              auto,40px
    padding           20px
    gradient          #222,#36332F
    
.kdmodal.screenshot-modal
  background        none
  border            none
  box-shadow        none
  overflow          hidden
  padding           20px
  
  .kdmodal-inner
    .close-icon
      right               0
      top                 0
  
  .screenshot-modal-item
    display           none
    margin-bottom     90px
    transition(all .3s ease-in-out)
    width             100%
    &.active
      display           block
    img
      width             100%

footer.home
  .footer-left
    size              auto, auto
    float             left
    overflow          visible
  
    .footer-fb-link
    .footer-tw-link
      color             white
      display           inline-block
      font-weight       600
      margin            8px 8px 0 0
      overflow          hidden
      size              24px,24px
      text-indent       -9999px
      overflow          hidden
      shadow            0 1px 0 #111
      rounded           3px
      sprite()

    .footer-fb-link
      bg                position,-100px -268px
      &:hover
        bg              position,-40px -368px
    .footer-tw-link
      bg                position,-129px -240px
      &:hover
        bg              position,-69px -340px

  .footer-right    
    size              auto, auto
    float             right
  
    a
      color             #888
      display           inline-block
      font-size         12px
      font-weight       600
      margin-left       16px
      line-height       40px
      size              auto,auto
      text-decoration   none
      text-shadow       0 1px 0 #111
      &:hover
        color           linkColor1
  
      
