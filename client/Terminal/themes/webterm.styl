// order is important

&.console
  white-space           nowrap
  overflow-x            hidden
  color                 foreground
  background-color      background

&.source-code-pro
  font-family           'SourceCodePro', monospace
  font-size             13px
  line-height           1.23076923077

&.ubuntu-mono
  font-family           'UbuntuMono', monospace
  font-size             14px
  line-height           1

.bold
  font-weight           bold

.underlined
  text-decoration       underline

.outlined
  box-shadow            inset 0 0 0 1px foreground

.textBlack
  color black
.textRed
  color red
.textGreen
  color green
.textYellow
  color yellow
.textBlue
  color blue
.textMagenta
  color magenta
.textCyan
  color cyan
.textWhite
  color white

.textBrightBlack,   .bold.textBlack
  color brightBlack
.textBrightRed,     .bold.textRed
  color brightRed
.textBrightGreen,   .bold.textGreen
  color brightGreen
.textBrightYellow,  .bold.textYellow
  color brightYellow
.textBrightBlue,    .bold.textBlue
  color brightBlue
.textBrightMagenta, .bold.textMagenta
  color brightMagenta
.textBrightCyan,    .bold.textCyan
  color brightCyan
.textBrightWhite,   .bold.textWhite
  color brightWhite

