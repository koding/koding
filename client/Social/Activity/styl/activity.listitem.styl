  position                  relative
  background                #fff
  margin-bottom             14px
  border                    1px solid #efefef

  .embed-link-view
    margin                  0
    border                  none
    width                   auto
    height                  100px
    padding                 0

  .preview-image
    size                    100px, 100px
    border                  none
    fl()

  .preview-text
    kalc                    width (100% \- 124px)
    height                  100px
    padding                 10px
    overflow                hidden
    borderBox()
    fl()

    a
      text-decoration       none

    h4
      display               inline-block
      font-size             12px
      font-weight           600
      margin-bottom         8px
      margin-right          60px
      color                 #636363
      white-space           nowrap
      text-overflow         ellipsis

    .description
      display               block
      height                50px
      overflow              hidden
      font-size             12px
      color                 #3b3b3b
      line-height           16px

    .provider-info
      height                14px
      color                 #acacac
      font-size             12px
      abs                   0 0 12px 10px

