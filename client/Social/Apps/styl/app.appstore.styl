@import "../../../Framework/src/themes/default/kdfn"
@import "../../../Main/styl/appfn"
@import "nib/gradients"

@css {
/*
APPSTORE stylesheet
appstore.styl
*/
}

body.apps

  .header-facets
    height      30px
    top         70px

    .title
      display   none

    .active-facet
      background      #1AAF5D
      color           white
      padding-left    15px
      padding-right   40px
      border-radius   20px
      font-size       14px
      font-weight     200

      cite
        r-sprite      app, 'filter-arrow'
        top           12px
        right         12px

  .feeder-header
    font-weight       500
    color             #666
    line-height       20px
    margin-bottom     10px

  h1.header-view-section
    height            60px
    border-bottom     2px solid #ccc
    line-height       60px
    color             #1AAF5D
    margin-bottom     20px
    font-weight       500

  .app-details
    overflow-x      hidden

  .app-logo

    color           white
    padding         55px
    font-size       22px
    margin-top      20px
    width           37px
    height          27px

    border-top-left-radius      2px
    border-bottom-left-radius   2px

    .logo
      border        1px solid #eee
      border-radius 2px
      padding       4px 10px 4px 10px

  .app-info

    top             20px
    background      white
    left            147px
    padding         20px
    height          97px
    width           600px
    overflow        auto
    abs()

    h3
      display         block
      font-size       14px
      line-height     14px
      margin          0 0 10px 0

      a
        color           #333
        font-weight     bold
        display         inline-block
        text-decoration none

    h4
      font-size       11px
      color           gray
      margin-top      -8px

    article
      color                 #353535
      font-size             13px
      line-height           1.5
      margin-top            5px
      overflow              auto

  .verified-switch-label
  .verified-switch
    right    25px
    top      135px
    z-index  3
    abs()

  .verified-switch-label
    right      62px
    font-size  12px
    top        134px

  .installerbar

    background-color #545454
    width            220px
    height           137px
    color            white
    top              20px
    right            0
    border-bottom-left-radius   3px
    border-bottom-right-radius  3px
    abs()

    .action-buttons
      bottom                     0
      left                       0
      width                      100%
      height                     32px
      abs()

      .kdbutton
        border                     none
        font-size                  13px
        color                      #fff
        height                     32px
        abs()

      .kdbutton.run
        background                 logoBg
        text-align                 left
        padding-left               12px
        border-bottom-right-radius 3px
        left                       0
        width                      100%
        abs()

      .kdbutton.delete
        z-index                    1
        right                      0
        background                 #BA4B3A
        border-bottom-right-radius 3px
        width                      70px

      .kdbutton.approve
        z-index                    2
        right                      70px
        background                 #1FCE6E
        width                      85px

    .versionstats
      font-size                  12px
      padding                    10px
      line-height                20px

  .content-page.appstore
    max-width                 1036px
    min-height                500px

  .content-page.appstore.singleapp
    padding-top                  0

  .status-widget
    top            5px
    right          5px
    abs()

    &.github-verified
      display   none
    &.not-verified
      r-sprite  app, 'private'
    &.verified
      r-sprite  app, 'verified'

  .kdview.kdlistitemview-appstore

    height          300px
    overflow        hidden
    width           220px
    clear           none
    margin          18px// 36px 20px 0
    border-radius   3px
    fl()

    &:hover
      .appdetails
        top           0

    &:last-child
      border-bottom 1px solid #E6E6E6

    > figure
      width           220px
      height          120px
      margin-bottom   0px
      overflow        hidden
      abs()

      img
        width         100%

      .thumbnail
        text-align    center
        padding-top   45px
        color         white
        font-size     30px

        .logo
          border      1px solid #eee
          border-radius 2px
          padding     4px 10px 4px 10px

    .appmeta

      color           #353535
      padding         15px
      height          180px
      background      white
      width           190px
      top             120px
      abs()

      a
        color           #333
        font-weight     bold
        display         block
        text-decoration none

        h3
          display         block
          font-size       14px
          line-height     14px
          margin          0 0 10px 0

        cite
          r-sprite        app, 'app-arrow'
          display         block
          right           16px
          top             18px
          abs()


      h4
        font-size       11px
        color           gray
        margin-top      -8px
        padding-bottom  8px
        border-bottom   1px solid #eee

      .appstats
        font-size       11px
        color           #A5A5A5

        a
          color           #A5A5A5
          font-weight     bold
          text-decoration none
        span.icon
          display         inline-block
          size            18px,14px
          margin          0 8px 0 0px
          vertical-align  top
          kdfsprite()
        p
          margin-bottom   10px
          font-size       11px
          color           #353535

        .installs
          span.icon
            bg            position, 0 -642px

        .followers
          span.icon
            bg            position,-141px -442px

    .appdetails

      article
        color                 #353535
        font-size             13px
        line-height           1.5
        margin-top            5px
        overflow              hidden
        width                 200px

      button
        color                 #7F7F7F
        vendor                transition,all 0 none

      a
        color                 linkColor1
        text-decoration       none

    .bottom

      height                  70px
      width                   220px
      background              linear-gradient(top, rgba(255,255,255,0) 0%, #fff 20%)
      bottom                  0
      abs()

    .kdbutton.run

      bottom                  20px
      width                   180px
      left                    18px
      border                  none
      background              logoBg
      color                   white
      font-size               20px
      border-radius           30px
      font-variant            small-caps
      height                  39px
      abs()

.apps
  .appstore
    .kite-button
      abs()
      right                   92px
      top                     16px
      height                  28px
      vendor                  rounded, 20px

.kite-pricing-view
  .kdlabel
    width                     120px
    fl()
  .kdinput.half
    width                     200px !important
    min-width                 200px !important
  textarea
    height                    70px
  .half
    .input-wrapper
      input
      label
        fl()
        clear                 none
      label
        margin-left           20px
        position              relative
        top                   7px
      .kdselectbox
        size                  198px, 42px
        .title
          line-height         44px
        .arrows
          top                 14px

.create-kite-modal
  .kdformview
    margin-top              20px
  .add-pricing
    abs()
    top                     -33px
    right                   10px
    vendor                  rounded, 20px !important
