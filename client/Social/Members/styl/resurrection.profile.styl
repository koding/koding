@import "../../../Framework/src/themes/default/kdfn"
@import "../../../Core/styl/appfn"


@css {
/*
Profile page stylesheet
resurrection.profile.styl
*/
}


body.profile
  .filter-links
    margin-left           292px

  #main-panel-wrapper
    background            #f0f0f0

  .app-content
    max-width             600px
    padding-left          0

  .app-sidebar
    bg                    color, #e0e0e0
    text-align            center

    > main
      font-family         openSansFamily
      padding             1px 16px 16px
      borderBox()

    .avatarview
      size                143px, 143px
      margin              43px auto 18px
      padding             0
      border              3px solid #0EB463
      rounded             9px

      img
        rounded           3px
        cursor            pointer

    h3.full-name
      display             block
      margin              0
      padding             0
      font-size           20px
      font-weight         600
      color               #474747
      opacity             .99
      line-height         27px

      span
        display           inline

    .location
      font-size           14px
      font-weight         200
      color               #474747
      margin              2px 0 0
      line-height         19px

    .profilestats
      display             none //TEMP

    .follow-btn
      size                100%, 38px
      rounded             19px
      margin              29px 0 0

      .button-title
        font-size         14px
        font-weight       600
        opacity           .99
        letter-spacing    0.02em

    .conversation-btn
      size                100%, 40px
      rounded             19px
      margin              14px 0 0
      borderBox()

      .button-title
        color             #666666
        font-size         14px
        font-weight       600
        opacity           .99
        letter-spacing    0.02em

    .kdlistview-user-properties
      margin-top          29px
      text-align          left
      color               #575757
      font-size           13px

      h3
        font-weight       600
        padding           0 0 5px 0
        border-bottom     1px solid #cacaca
        margin            0 0 5px 0

      p
        line-height       18px

        .number
          color           #868686
          font-weight     600

    .kdbutton.repbutton
      size                100%, 38px
      rounded             19px
      margin              29px 0 0

      .button-title
        font-size         14px
        font-weight       600
        opacity           .99
        letter-spacing    0.02em

  .kdtabpaneview.statuses

    .feeder-header
      display             none

  .header-facets
    display               none

  .content-page
    max-width             100%
    margin                0 auto 0
    padding               0 34px 0 0
    position              static
    overflow              visible
