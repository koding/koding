.StackEditor-ShareModal.kdmodal
  -webkit-font-smoothing    antialiased
  -moz-osx-font-smoothing   grayscale

  header
    height                  70px
    line-height             70px

    h1
      font-size             20px
      font-weight           300
      color                 #bababa

  main
    rel()
    padding                 100px 330px 110px 50px
    margin                  0

    .background
      abs()
      right                 70px
      top                   110px
      r-sprite              'stack-editor', 'Share_art'

    h1
      color                 #424242
      font-size             26px
      letter-spacing        0.2px
      line-height           30px

    p
      font-size             14px
      letter-spacing        0.2px
      color                 #a59999
      line-height           21px
      margin-top            15px

      &.checkbox-wrapper
        margin-top          30px

      .kdcustomcheckbox
        fl()
        margin-right        7px

  footer
    height                  70px
    text-align              right
    padding-right           20px

.StackEditor-ShareConfirmationModal.kdmodal

  main
    margin                  40px 40px 60px 40px

    h2
      text-align            left
      font-weight           600

    p
      padding-top           15px
      line-height           22px

  footer
    text-align              right
    padding-right           20px
