}

body.account
  bg                      color, #E9E9E7

.kdtabpaneview.account

  color                   #828B8B

  .content-page
    min-height            100%
    max-width             850px
    padding-top           150px

  h2.kdheaderview
    border                none
    margin-bottom         60px
    line-height           40px
    color                 #828B8B
    span
      margin              0
      font-weight         300

  .kdinput.text.thin
    text-align            left
    bg                    color #F4F4F4
    padding               11px 20px

    &[readonly=true]
      opacity             .5

    &.half
      fl()
      width               50%
      &:first-child
        kalc              width, 50% \- 1px
        margin-right      1px

  .avatarview
    margin-top            11px
    rounded               6px
    fl()

  section
    overflow              hidden
    width                 auto
    margin-left           20px

  .kdformview
    .formline
      border              none

  .button-field
    bg                    color transparent
    .kdbutton.solid.green
      width               100%


  .email-notifications
    line-height           55px
    form.kdformview
      rel()
      border-bottom       1px solid #E1E1DF

    .koding-on-off
      abs()
      top                 10px
      right               0

.linked-accounts

  ul
    margin                0
    padding               0
    li
      list-style          none
      padding             13px 20px
      borderBox()
      .title
        width             296px
        line-height       22px
        fl()
        cite
          font-size       16px
          font-weight     400
          margin-left     16px

      .kdinput.koding-on-off
        margin-top        6px
        fr()

      &.github .icon
        sprite            account 'ext-github'
      &.odesk .icon
        sprite            account 'ext-odesk'
      &.facebook .icon
        sprite            account 'ext-facebook'
      &.twitter .icon
        sprite            account 'ext-twitter'
      &.google .icon
        sprite            account 'ext-google'
      &.linkedin .icon
        sprite            account 'ext-linkedin'

      span
      cite
      a
        font-style        normal
        blockMid()

