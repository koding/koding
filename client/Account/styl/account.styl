@import "../../Framework/src/themes/default/kdfn"
@import "../../Core/styl/appfn"



@css {
/*
Account SETTINGS stylesheet
app.settings.styl
*/
}

#content-page-account > .kdtabview
  padding                       34px 34px 0 0
  overflow                      visible

body.account

  #main-tab-view
    overflow                      visible

  .kdtabpaneview.account
    vendor                        transform, translateX(0)

  .app-sidebar
    background                    #EFEFEF
    padding                       21px 16px 16px 34px
    left                          0

    nav
      a
        display                   block
        line-height               24px
        font-size                 14px
        color                     #4C4C4C
        font-weight               600
        opacity                   .99
        noTextDeco()

        &.selected
          text-decoration         underline

      .divider
        height                    24px

  .settings-list-wrapper
    form
      margin-right              -17px

      .formline
        padding                 0 17px 0 0
        margin                  0 0 16px
        borderBox()

        .input-wrapper
          margin                0

        &.button-field
          clear                 both
          border                none
          margin-top            6px

          .kdbutton
            margin-left         6px

    .kdlabel
      font-size                 14px
      color                     #8D8D8D
      float                     none
      line-height               19px
      margin                    0 0 7px
      font-weight               200

    .kdinput.text
      rounded                   3px
      background                #fff
      border                    1px solid #C9C9C9
      padding                   8px 13px 10px
      font-size                 14px
      line-height               19px
      color                     #4C4C4C
      font-weight               600
      opacity                   .99
      margin                    0

    .lazy-loader
      text-align                center
      padding                   40px 0

    .no-item-found
      color                     #878787
      font-size                 14px
      padding                   24px 0
      text-align                center

    &.user-profile
      .account-avatar-area
        margin                    0 0 44px

      .avatar-buttons
        margin                    30px 0 0 24px
        position                  relative
        fl()

        .kdbutton
          display                 block
          float                   none
          text-align              left
          width                   205px
          margin                  0 0 7px
          padding                 0 0 0 15px

          canvas
            vertical-align        middle

          .icon
            padding               0
            margin                12px 12px 0 0
            fl()


        .upload-avatar .icon
          r-sprite                'account', 'photo-16'

        .use-gravatar .icon
          margin-left             1px
          r-sprite                'account', 'import-16'

        .upload-input
          display                 block
          size                    205px 40px
          abs                     0px 0 0 0px
          opacity                 0
          cursor                  pointer


      .avatarview
        display                   block
        size                      150px, 150px
        fl()

        img
          display                 block
          margin                  0

      form
        .formline
          width                   50%
          fl()

          &.section-header
            width                 100%
            clear                 both
            margin-bottom         21px
            margin-top            21px

          &.button-field
            width                 100%

        .kdheaderview
          display                 block
          font-size               14px
          line-height             19px
          size                    auto, auto
          color                   #4C4C4C
          margin                  0
          padding                 0
          border                  none
          font-weight             600


          span
            margin                0
            padding               0


    &.linked-accounts
    &.email-notifications
      max-width                   800px
      ul.off
        li:not(:first-child):before
          size                  100% 100%

      li:not(:first-child)
        &:before
          bg                    color rgba(255,255,255,.9)
          content               ''
          size                  100% 0%
          z-index               101
          abs()

      li
        size                      100%, 65px
        line-height               65px
        border-bottom             1px solid #DEDEDE
        padding                   0 4px 0 4px
        clear                     both
        borderBox()
        rel()

        &:last-of-type
        &.has-sub
          border-bottom           none

        &.sub
          line-height             37px
          height                  51px
          padding                 0 4px 0 24px
          > .title
            font-size             14px

        > .title
          line-height             normal
          kalc                    width, 100% \- 115px
          display                 inline-block
          vertical-align          middle

        .koding-on-off
        .kdselectbox
          margin-top              18px
          fr()

        .kdselectbox
          margin-top              0


    &.delete-account
      .delete-account-view
        line-height               40px

        .kdbutton.delete-account
          -webkit-transition      -webkit-transform .2s ease
          -moz-transition         -moz-transform .2s ease
          transition              transform .2s ease

          &.escape
            vendor                transform, translateX(-120%)

    &.credentials

      &.form-open
        ul.credentials
          display                 none

        .account-add-big-btn
          display                 none

      &.share-open
        .credential-item:not(.sharing-item)
          display                 none

        .sharing-item
          margin-bottom           24px

      form
        margin-right              -17px

        .formline
          width                   25%
          min-width               179px
          fl()

          &.owner
            margin-top            31px

            .kdlabel
              margin              0 7px 0 0
              line-height         27px
              fl()

        .button-field
          width                   auto
          clear                   none
          margin-top              25px
          fr()

      .credential-item
        size                      100%, auto
        padding                   23px 0
        margin                    0
        border-bottom             1px solid #DEDEDE

        .kdview
          height                  auto

        .credential-info
          font-size               14px
          line-height             19px
          fl()

          h4
            font-weight           600
            margin                0 0 1px
            padding               0
            color                 #4C4C4C

          p
            font-weight           400
            color                 #7B7B7B

        .buttons
          fr()

          .kdbutton
            display               block
            margin                10px 0 0 16px
            background            transparent
            border                none
            fr()

            &.share
              r-sprite            'app', 'share-gray-16'

            &.show
              r-sprite            'app', 'zoomin-gray-16'

            &.participants
              r-sprite            'app', 'users-gray-16'

            &.delete
              r-sprite            'app', 'delete-gray-16'

    &.koding-keys
      .no-item-found
        padding                   0
        text-align                left
        line-height               19px
        color                     #000

        h2
          font-weight             600
          color                   #D75B5B
          display                 block
          padding                 16px
          border                  1px solid #D75B5B
          rounded                 3px
          margin-bottom           24px

        code
          display                 block
          background              #efefef
          padding                 16px
          margin                  8px 0
          color                   #323232
          rounded                 3px
          font-family             "SourceCodePro"

          a
            color                 #323232

    &.ssh-keys
      > .kdlistview.keys
        padding-top               40px

      .add-big-btn
        abs                       0px 0 0 0px

      .add-key-form
        margin-top                34px

        &:after
          content                 ''
          display                 block
          width                   auto
          margin                  24px 17px 0 0
          height                  1px
          background              #dedede

      .ssh-key-item
        size                      100%, auto
        padding                   23px 0
        margin                    0
        border-bottom             1px solid #DEDEDE

        .kdview
          height                  auto

        .ssh-key-info
          font-size               14px
          line-height             19px
          fl()

          h4
            font-weight           600
            margin                0 0 1px
            padding               0
            color                 #4C4C4C

          p
            font-weight           400
            color                 #7B7B7B

        .buttons
          fr()

          // .kdbutton
          //   display               block
          //   margin                10px 0 0 16px
          //   background            transparent
          //   border                none
          //   fr()

          //   &.share
          //     r-sprite            'app', 'share-gray-16'

          //   &.show
          //     r-sprite            'app', 'zoomin-gray-16'

          //   &.participants
          //     r-sprite            'app', 'users-gray-16'

          //   &.delete
          //     r-sprite            'app', 'delete-gray-16'


    &.billing

      section
        margin-bottom    40px

        .no-item-found
          text-align     left
          line-height    40px
          padding        0

      h4
        color            #7B7B7B
        font-weight      400
        padding          0

      .kdheaderview
        display            block
        font-size          14px
        line-height        19px
        size               auto, auto
        color              #4C4C4C
        margin             0 0 20px
        padding            0
        border             none
        font-weight        600

        span
          margin           0
          padding          0

      .payment-method-wrapper
        height             92px

        .payment-method
          height           auto
          border-bottom    none
          line-height      40px

      .subscription-wrapper
        width              auto
        font-size          14px
        line-height        19px
        height             79px

        .kdbutton
          fr()

        .subscription h4
          line-height      40px
          fl()

          .price
            font-weight    200

        p
          font-weight      600
          color            #4C4C4C

      .payment-history-wrapper

        .kdlistitemview
          padding                   21px 0
          border-bottom             1px solid #DEDEDE

          .amount:before
            display                 inline
            content                 '$'

        h4
          fl()

        .status-icon
          size                      38px, 38px
          border                    1px solid #EAEAEA
          rounded                   3px
          margin                    0 18px 0 0
          text-align                center
          line-height               38px
          fl()

          span
            display                 inline-block
            r-sprite                'account', 'cross-8'

          &.success span
            r-sprite                'account', 'check-8'

        .billing-info
          line-height               19px
          font-size                 14px
          color                     #7B7B7B
          fl()

          strong
            font-weight             600

          .invoice-date
            color                   #4C4C4C
            line-height             40px

          .card-number
            margin                  6px 0 0
            display                 block
            color                   #919191

        .invoice-btn
          fr()

    &.your-subscriptions

      .kdlistitemview-subscription
        size                      100%, auto
        padding                   23px 0
        margin                    0
        border-bottom             1px solid #DEDEDE

        .kdview
          height                  auto

        .subscription-info
          width                   auto
          font-size               14px
          line-height             19px
          fl()

          h4
            color                 #7B7B7B
            font-weight           400
            margin                0 0 1px
            padding               0

            .price
              font-weight         200

          p
            font-weight           600
            color                 #4C4C4C

        .controls
          fr()

          .kdbutton
            margin-left           6px


    &.terms-of-service
    &.privacy-policy
      margin                      -38px 0 0 -34px
      kalc                        width, 100% \+ 66px

      iframe
       size                       100%, 100%
       display                    block
       margin                     0
       padding                    0


.kdmodal.payments-modal
  .kdmodal-content
    overflow-x          hidden

  .payment-method-entry-form

    .kdbutton.solid
      rounded           3px

      &.green
        background      #61C17F

      &.red
        background       #D75B5B

      &.medium
        height           40px
        line-height      42px

    .formline
      padding            0
      margin             0 0 16px
      borderBox()

      .input-wrapper
        margin           0

      &.section-header
        width            100%
        clear            both
        margin-bottom    21px
        margin-top       21px

      &.button-field
        clear            both
        border           none
        margin-top       6px

        .kdbutton
          margin-left    6px

        .to-left
          margin-left    0

      .kdheaderview
        display          block
        font-size        14px
        line-height      19px
        size             auto, auto
        color            #4C4C4C
        margin           0
        padding          0
        border           none
        font-weight      600

        span
          margin         0
          padding        0

    .kdlabel
      font-size            14px
      color                #8D8D8D
      float                none
      line-height          19px
      margin               0 0 7px
      font-weight          200

    .kdinput.text
      rounded              3px
      background           transparent
      border               1px solid #C9C9C9
      padding              8px 13px 10px
      font-size            14px
      line-height          19px
      color                #4C4C4C
      font-weight          600
      opacity              .99
      margin               0


    .formline
      width              50%
      padding-right      17px
      fl()

      &.cardstate
        width            25%

      &.cardcountry
        width            25%

      &.cardmonth
        width            16.6%

      &.cardyear
        width            16.6%

      &.cardcv
        width            16.6%

      &.captcha
        width            100%
        border           none

        .recaptchatable
          border            none !important
          tr
            height          auto

          td
            padding         0 !important
            margin          0 !important

          td.recaptcha_image_cell
          td.recaptcha_image_cell ~ td
            padding         0 20px 16px 0 !important

        .recaptcha_input_area
          padding           0 !important
          margin            0 !important

        #recaptcha_response_field
          rounded           3px
          background        transparent
          border            1px solid #C9C9C9 !important
          padding           8px 13px 10px
          font-size         14px
          line-height       19px
          color             #4C4C4C
          font-weight       600
          opacity           .99
          margin            0
          height            auto
          outline           none
          borderBox()

          &::-webkit-input-placeholder
            color           #93979a
            font-weight     300
          &:-moz-placeholder
            color           #93979a
            font-weight     300

          &:hover
            border          1px solid #aaa !important

          &:focus
            border          1px solid rgba(125,190,241,1) !important
            shadow          0 0 3px rgba(125,190,241,.7)

            &::-webkit-input-placeholder
              opacity       0.5
            &:-moz-placeholder
              opacity       0.5

    .section-header
      width              100%

    .button-field
      width              100%
