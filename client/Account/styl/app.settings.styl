.settings-list-wrapper
  height              auto
  min-height          50px
  header
    bg                color, rgba(0,0,0,.1)
    border-bottom     1px solid rgba(0,0,0,0.3)
    a.custom-link-view
      margin-left     15px
      text-decoration underline
      fl()
      span.title
        line-height   24px
        font-size     11px !important
  a.action-link
    abs()
    display         none
    fr()
    line-height     16px
    padding         7px
    top             50%
    margin-top      -14px
    right           10px
    cursor          pointer
  form
    border-bottom       1px solid rgba(0,0,0,.2)
    label.main-label
      margin            18px 0 20px 20px
      font-size         13px
      width             300px
      line-height       1
      fl()
    .swappable
      size              auto,100%
      min-height        50px
      .initialval,.hiddenval
        overflow visible
        margin-top      14px
      .hiddenval.passwords
