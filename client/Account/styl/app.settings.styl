        font-weight      bold
        color            #b6b6b6
      .active.on
        color            #FFFFFF
      .active.off
        color            rgb(140,140,140)
    &:hover
      .action-link
      .delete-icon
        display     block

  a.delete-icon
    abs()
    display             none
    right               20px
    top                 50%
    margin-top          -10px
    size                20px,20px
    opacity             .6
    cursor              pointer
    //sprite()
    bg(position,-60px -240px)
    &.no
