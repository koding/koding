@css {
/*
Koding features stylesheet
features.styl
*/
}

body.features
  -webkit-font-smoothing antialiased
  #main-panel-wrapper
    bg                        color #f9f9f9
    height                    auto

  #main-header
    max-width                 100%
    top                       0
    padding-left              calc(\(100% \- 1200px\) \/ 2) !important
    padding-right             calc(\(100% \- 1200px\) \/ 2) !important
    height                    73px
    background                #fff
    position                  fixed
    shadow                    0 1px 16px rgba(0,0,0,.1)

    #koding-logo
      margin-top              25px

      cite
        r-sprite              'app', 'logo_full_dark'

    nav
      line-height             73px

      a
        color                 #6f6f6f

      a.login
        border-color          #bcbcbc

  .content-page.features
    padding-top               73px
    font-family               sloganFont

    .feature-tabs
      max-width               1200px
      margin                  0 auto

      .tab-handles
        height                110px
        line-height           120px
        text-align            right
        border-bottom         1px solid #e0dcdc

        a
          display             inline-block
          margin-left         48px
          font-weight         600
          font-size           17px
          color               #7b7b7b
          vendor              transition, color .4s ease
          noTextDeco()

          &.active
            color             #48BA7D

      .tab-enter
        vendor                animation, tabEnter .4s 1 ease-in

      .tab-leave
        vendor                animation, tabLeave .4s 1 ease-out

      article
        padding               40px 0 43px
        margin-bottom         81px

        .tab-text
          width               46%
          padding-right       72px
          padding-top         37px
          borderBox()
          fl()

          p
            font-size         14px
            color             #727272
            padding           5px 0 55px
            line-height       24px
            font-weight       600

          h4
            font-size         21px
            color             #48BA7D
            font-weight       600

        .tab-image
          width               54%
          margin-top          20px
          fr()

      .tab-ide .tab-image
        margin-top            -20px

    .bottom-features
      max-width               1200px
      margin                  20px auto 0
      padding-bottom          22px
      padding-top             60px
      border-top              1px solid #e0dcdc

      .feature-item
        width                 32%
        margin-left           2%
        min-height            165px
        borderBox()
        fl()

        &:nth-of-type(3n + 1)
          margin-left         0

        h5
          font-size           21px
          line-height         22px
          color               #48BA7D
          font-weight         600
          position            relative

          &:before
            content           ''
            margin            2px 18px 0 10px
            width             18px !important
            height            18px !important
            fl()

          &.vms-access:before
            r-sprite          'features', 'vms_access'
            margin-top        6px
          &.vms-install:before
            r-sprite          'features', 'vms_install'
          &.vms-publicip:before
            r-sprite          'features', 'vms_publicip'
          &.vms-multiple:before
            r-sprite          'features', 'vms_multiple'
          &.vms-alwayson:before
            r-sprite          'features', 'vms_alwayson'
            margin-left       11px
          &.vms-specs:before
            r-sprite          'features', 'vms_specs'
          &.ide-autocomplete:before
            r-sprite          'features', 'ide_autocomplete'
            margin-top        4px
          &.ide-collapse:before
            r-sprite          'features', 'ide_collapse'
          &.ide-fold:before
            r-sprite          'features', 'ide_fold'
          &.ide-multiplecursor:before
            r-sprite          'features', 'ide_multiplecursor'
            margin-top        4px
          &.ide-opensource:before
            r-sprite          'features', 'ide_opensource'
          &.ide-permissions:before
            r-sprite          'features', 'ide_permissions'
          &.ide-preview:before
            r-sprite          'features', 'ide_preview'
          &.ide-settings:before
            r-sprite          'features', 'ide_settings'
            margin-top        1px
          &.ide-workspaces:before
            r-sprite          'features', 'ide_workspaces'
          &.terminal-chromebook:before
            r-sprite          'features', 'terminal_chromebook'
          &.terminal-fonts:before
            r-sprite          'features', 'terminal_fonts'
          &.terminal-resize:before
            r-sprite          'features', 'terminal_resize'
          &.terminal-split:before
            r-sprite          'features', 'terminal_split'
          &.com-diverse:before
            r-sprite          'features', 'com_diverse'
          &.com-markdown:before
            r-sprite          'features', 'com_markdown'
            margin-left       9px
            margin-top        3px
          &.com-search:before
            r-sprite          'features', 'com_search'

          cite
            display        block
            width          36px
            height         36px
            background     #ccc
            border-radius  18px
            position       absolute
            z-index        -1
            top            -7px

          &.pink cite
            background     #ffb5b4
          &.sand cite
            background     #ffdfb2
          &.green cite
            background     #b3ffbf
          &.light-blue cite
            background     #7de3fa
          &.blue cite
            background     #7fbefa
          &.purple cite
            background     #d3a5ff
          &.red cite
            background     #fa8082
          &.yellow cite
            background     #f8f579
          &.tinted-yellow cite
            background     #f9e47a

          &.window-icon:before
            r-sprite          'app', 'green_window'

        p
          font-size           14px
          color               #727272
          padding             11px 0 55px 46px
          line-height         24px
          font-weight         600

  .main-footer
    background                #f9f9f9


@keyframes tabEnter
  0%
    opacity                   0

  100%
    opacity                   1

@keyframes tabLeave
  0%
    opacity                   1

  100%
    opacity                   0