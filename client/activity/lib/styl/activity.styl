#content-page-activity

  .message-pane-scroller

    &.has-vertical
      padding-right       0

    .kdview.kdscrolltrack
      vendor              transition, opacity .3s .3s ease\, background-color .177s ease
      bg                  color transparent
      overflow            visible

      &:hover
        bg                color rgba(0,0,0,.05)

      .kdscrollthumb
        bg                color rgba(0,0,0,.15)
        margin            0 4px
        width             7px
        rounded           6px
        min-height        50px

    > main > *
      max-width         600px

  > .kdtabview
    height              100%
    overflow            hidden

    .search-input
      right             0
      bottom            15px
      width             180px
      height            30px
      z-index           1
      padding           0 25px 0 13px
      background        #fff
      border            1px solid #E8E8E8
      border-radius     16px
      font-size         12px
      outline           0
      borderBox()
      abs()

      &::-webkit-input-placeholder
        color           #ddd
        opacity         .99

      &:-moz-placeholder
        color           #ddd
        opacity         .99

    cite.search-icon
      abs         23px 12px
      opacity     .6


    .announcement-pane .kdtabhandlecontainer.filters
        height          auto

    .message-pane > .kdlistview
      margin-top        34px

    .message-pane > .activity-input-widget + .kdlistview
      margin-top        0

    .channel-title
      font-size         18px
      line-height       24px
      font-weight       600
      color             #9D9D9D
      margin            9px 0 0

      &.logged-out
        margin-bottom   20px

      .topic-follow-btn
        margin          4px 0 0 13px

        &.following:hover
          margin-left  14px

  cite.search-icon
    content     ''
    display     block
    r-sprite    'activity', 'search'
    z-index     2

