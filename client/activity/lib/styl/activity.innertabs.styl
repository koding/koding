



@css {
/*
Activity innertabs stylesheet
activity.innertans.styl
*/
}

.activity-tab-view
  height              auto
  min-height          calc(100vh \- 153px)

  .kdtabpaneview
    width             auto
    height            auto

  &.static-feed
    margin-left       auto
    margin-right      auto
    float             none


  > .activity-input-widget
    margin-bottom     26px
    display           block

    .input-view
      border            none
      border-top        1px solid #CDCCC2
      border-left       1px solid #CDCCC2

    button[type=submit]
      &.solid.green .icon
        margin        1px 0 0 7px
        r-sprite        activity, "update_bubble"

      &[disabled=disabled]
        bg            color, #DDD !important

  .activity-content
    size              auto, auto
    font-size         14px
    overflow          visible

    .kdview
      overflow        visible

    .toggle-pinned-list
      text-align      right

      .title
        color             #838987
        font-size         20px
        font-weight       300
        text-decoration   none
        margin-right      3px

  .feeder-header
    margin-top        10px
    text-align        right
    overflow          visible

  .new-updates
    padding           4px 10px
    bg                color logoBg
    color             white
    margin            -2px 10px 0 0
    font-weight       400
    display           inline-block
    rounded           11px
    min-width         22px
    text-align        center
    font-weight       300
    letter-spacing    .5px
    noTextDeco()
    borderBox()
    &:hover
      bg              color, socialColor


  .kdbutton.live-updates
    bg              color transparent
    border          none
    border-right    1px solid #ccc
    outline         none
    margin          -2px 17px 0 0
    padding         0 10px 0 0
    &:focus
      shadow        none
    .icon.broken
      r-sprite      activity 'thunder_broken'
    .icon.live
      r-sprite      activity 'thunder'

  .feed-type-selection
    margin-right      3px
    fr()

    a
      font-weight     300
      padding-left    18px
      color           #838987
      font-size       20px
      noTextDeco()

      &:first-child
        padding-left  0

      &.active
        color         logoBg
