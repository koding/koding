.Reactivity-formfield
  margin-bottom             15px

  &.invalid
    .Reactivity-input
      border-color          $red

  .Reactivity-label
    rel()
    dBlock()
    borderBox()
    color                   $gray-4
    margin-bottom           10px

  .Reactivity-input
    borderBox()
    font-size               12px
    padding                 5px
    outline                 none
    rounded                 4px
    size                    100%, 38px
    line-height             38px
    border                  1px solid $gray-16
    margin-bottom           10px

  .Reactivity-fieldMessage
    dBlock()
    color                   $gray-12
    clear                   both
    text-align              left
    font-size               13px

  .Reactivity-notRequired
    color                   $gray-8
    font-size               14px

