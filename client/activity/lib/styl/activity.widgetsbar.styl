

@css {
/*
Activity right widgetsbar stylesheet
activity.widgetsbar.styl
*/
}

.activity-widgets-bar
  max-width                 295px !important
  margin                    45px 0 0 0
  abs                       0px 0 0 663px

  .activity-widget
    margin-bottom           12px
    background              #fff
    border                  1px solid #E8E8E8
    rounded                 4px
    padding                 15px 26px
    font-size               12px
    borderBox()

    .lazy-loader
      width                 100%
      text-align            center
      position              static

    .no-item-found
      font-size             12px

    h3
      line-height           20px
      color                 #6D6D6D
      font-weight           600
      font-size             12px
      margin-bottom         7px

    .nothing
      font-size             12px
      padding               16px
      line-height           16px
      text-align            center
      color                 #7a7a7a

    a.kdlistitemview-sidebar-item
      font-size             12px
      color                 #575757
      line-height           23px
      noTextDeco()

      .participant-count
        display             inline-block !important
        visibility          visible
        opacity             .49
        color               #848484
        font-size           12px
        margin-left         15px

      .count
        display             none

      .topic-follow-btn
        margin-top          2px
        fr()

  .university-widget
    li:before
      content               'â€¢'
      display               inline-block
      margin-right          6px
      color                 #a4a4a4

    a
      color                 #848484
      display               inline-block
      line-height           18px
      noTextDeco()

      &:hover
        text-decoration     underline

  .posting-guide-widget
    background              #FFFFF7
    color                   #6D6D6D
    overflow                hidden
    height                  188px
    borderBox()

    &.expand
      kalc                  width, 100vw \- 914px
      height                auto
      max-width             564px !important

      ol, li, h4
        display             block

    h3
      font-weight           600
      line-height           20px
      margin-bottom         6px

    h4
      font-weight           600
      line-height           20px
      display               none

    p
      line-height           20px

    li
      position              relative
      line-height           20px
      display               none

      &:first-of-type
        display             block

      a
        color               #6D6D6D

      & ~ li
        margin-top          6px

    ol
      padding               0 0 12px 20px
      counter-reset         orderedList
      display               none

      &:first-of-type
        display             block

      li:before
        counter-increment   orderedList
        content             counter(orderedList) "."
        display             block
        abs                 0px 0 0 -20px
        font-weight         600

      ol
        padding-top         0
        padding-bottom      0

        li:before
          content           counter(orderedList, lower-latin) ")"

        li ~ li
          margin-top        1px

    ul
      padding               12px 0 12px 20px

      li:before
        content             ''
        size                4px, 4px
        abs                 7px 0 0 -17px
        rounded             2px
        background          rgba(0,0,0,0.2)

    .read-more-link
      line-height           20px
      color                 #BABABA
      margin-top            6px
      display               block
      noTextDeco()

  .socialmedia-widget
    background              none
    border                  none
    padding                 0

    a.kdbutton
      size                  141px, 29px
      padding               0
      fl()
      noTextDeco()

      &:before
        content             ''
        display             inline-block
        vertical-align      middle
        margin-right        7px

      .button-title
        font-size           10px
        line-height         30px

    .fb
      margin-left           13px

      &:before
        r-sprite            'activity', 'facebook-white-8'

      &:hover
        background-color    #3B5998

    .tw
      &:before
        r-sprite            'activity', 'twitter-white-16'

      &:hover
        background-color    #55ACEE
