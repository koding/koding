$header-height              = 52px

.ChannelThreadPane
.ChannelThreadPane-body
  dFlex()
  vendor                    flex-direction, row

.ChannelThreadPane-content
  dFlex()
  rel()
  vendor                    flex, 1
  vendor                    flex-direction, column

.ChannelThreadPane-header
  bg                        color, #fcfcfc
  padding                   0 20px 0 34px
  vendor                    flex, 0 0 40px
  vendor                    align-items, center
  dFlex()
  rel()

  .ButtonWithMenuWrapper
    rel()
    top                     -2px
    margin                  0 15px

.ChannelThreadPane-purposeWrapper
  .ChannelThreadPane-purpose
    font-style              italic
    color                   $gray-12
    letter-spacing          -0.1px
    font-size               16px

  input
    color                   $gray-12
    padding                 5px
    rounded                 4px
    width                   400px
    outline                 none
    font-size               14px
    border                  1px solid #dfdfdf
    margin-left             -6px
    hidden()

  &.editing
    .ChannelThreadPane-purpose
      hidden()

    input
      visible()

.ChannelThreadPane-menuItems
  margin-left               120px

.ChannelThreadPane-footer
  vendor                    flex, 0 0 1px

.ChannelThreadPane-body
  vendor                    flex, 1

.ChannelThreadPane.is-withFeed
  .ChannelThreadPane-feedWrapper
    vendor                  flex, 1
    bg                      color #f5f5f5

.ChannelThreadPane.is-withChat
  .ChannelThreadPane-chatWrapper
    vendor                  flex, 1

.ChannelThreadPane-feedWrapper
.ChannelThreadPane-chatWrapper
.ChannelThreadPane-postWrapper
  vendor                    flex, .00001
  vendor                    transition, flex .177s ease

.ChannelThreadPane-sidebar
  bg                        color, #f5f5f5
  vendor                    flex, 0 0 240px

