.FeedThreadPane-header
  padding                     20px 36px 12px

  .ChannelLabel
    color                     $gray-12
    font-size                 18px

    &:hover
      noTextDeco()

.FeedList-followButton
  rel()
  borderBox()
  top                       -2px
  border                    none
  outline                   none
  bg                        color, transparent
  padding                   2px 0 4px
  size                      24px, 20px
  text-align                center
  margin-left               13px

  &:focus
    vendor                  box-shadow, none

  &:before
    dIBlock()
    content                  ''
    r-sprite                 activity 'check_gray'

  &.following
    &:hover
      padding               1px 0px 3px
      border                1px solid #b1b1b1

    &:before
      dIBlock()
      content                ''
      r-sprite               activity 'check_green'
