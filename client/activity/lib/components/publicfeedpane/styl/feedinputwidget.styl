.FeedInputWidget
  bg                        color #f2f2f2
  padding-left              34px
  max-width                 600px
  rel()

  &:before
    content                 ''
    top                     18px
    left                    50px
    r-sprite                activity widget_icon
    z-index                 2
    abs()

  &.embedded
    bg                      color, transparent
    padding-left            0

    &:before
      hidden()

    textarea
      padding               5px !important
      rounded               3px
      height                50px !important
      min-height            50px

    .FeedInputWidget-buttonBar
      border                none

  textarea
    dBlock()
    borderBox()
    rounded                 3px 3px 0 0
    padding                 16px 44px 14px !important
    min-height              52px !important
    max-height              60vh
    margin-bottom           0
    width                   100%
    outline                 none
    resize                  none
    font-size               14px
    border                  1px solid #dfdfdf
    bg                      color, $white !important

.FeedInputWidget-buttonBar
  text-align                right
  padding                   8px
  border                    1px solid #dfdfdf
  border-top                none

  .FeedInputWidget-send
    height                  26px
    line-height             13px
    width                   66px
    margin-left             8px
    color                   $white
    bg                      color, $feed-button

  .FeedInputWidget-preview
    outline                 none
    border                  none
    r-sprite                "activity", "markdown"

  .FeedInputWidget-cancel
    border                  none
    color                   $gray-8
    font-size               14px

    &:active
      bg                    color, transparent
      outline               0

.FeedInputWidget-previewWrapper
  max-width                 600px
  margin                    10px 0 12px
  rounded                   6px
  padding                   18px
  border                    2px dashed #cfcfcf
  bg                        color, $white
  overflow                  initial
  rel()
  borderBox()

  > a
    color                   $feed-link

  &:before
    content                 ''
    size                    0 0
    border                  10px solid transparent
    border-bottom-color     #cfcfcf
    abs                     0 89px 100% 0

  &:after
    content                 ''
    size                    0 0
    border                  10px solid transparent
    border-bottom-color     $white
    margin-bottom           -2px
    abs                     0 89px 100% 0

.FeedInputWidget-previewBody
  padding-top               12px
  font-size                 14px
  color                     $gray-8
  overflow                  auto
  max-height                40vh

.FeedInputWidget-previewDate
  font-size                 12px

.FeedInputWidget-previewDate:before
  hidden()

.FeedInputWidget-closePreview
  pointer()
  abs                       14px 14px 0 0
  font-size                 12px
  line-height               16px

  &:hover
    noTextDeco()

  &:after
    content                 ''
    r-sprite                activity, 'green_cancel_16'
    vertical-align          middle
    margin-left             7px
    dIBlock()
