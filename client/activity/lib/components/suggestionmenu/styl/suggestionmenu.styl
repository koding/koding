.ActivitySuggestionMenu
  abs()
  z-index                   100
  rounded                   0px 0px 5px 5px
  border                    1px solid #e4e4e4
  shadow                    0 5px 15px rgba(0,0,0,0.2)
  color                     #a1a1a1
  bg                        color, #fff
  width                     100%
  borderBox()
  margin-top                -2px
  border-top                0px

.ActivitySuggestionMenu-header
  bg                        color, #f8f8f8
  font-size                 12px
  padding                   7px 0px 7px 15px
  border-bottom             1px solid #e4e4e4

  .ActivitySuggestionMenu-closeIcon
    r-sprite                'activity', 'close_icon'
    abs()
    right                   10px
    top                     10px
    pointer()

.ActivitySuggestionMenu-footer
  rel()
  font-size                 12px
  text-align                right
  padding                   25px 100px 27px 0px
  font-style                italic

  .kdbutton.solid.small
    abs()
    top                     19px
    right                   18px
    width                   67px
    padding                 0px
    rounded                 3px
