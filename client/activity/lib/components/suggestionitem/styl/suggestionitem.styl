.ActivitySuggestionItem
  padding                   13px 18px 15px 48px
  border-bottom             1px solid #e4e4e4
  line-height               20px
  pointer()
  borderBox()
  rel()

  &.ActivitySuggestionItem-selected
    bg                      color, #FFF8E6

  &:last-child
    border-bottom           none

  .emoji
    size                    16px 16px
    blockMid()
    padding                 0

  .SearchItemBody-matchedWord
    bg                      color, #fff3b8

.ActivitySuggestionItem-authorAvatar
  abs()
  size                      20px 20px
  left                      18px
  top                       13px

.ActivitySuggestionItem-messageBody
  font-size                 14px
  color                     #7d7d89

  p:first-child
    padding-top             0px

  p:last-child
    padding-bottom          2px!important

.ActivitySuggestionItem-info
  font-size                 12px
  color                     #a1a1a1

  &~.ActivitySuggestionItem-info:before
    content                 ""
    size                    3px 3px
    rounded                 50%
    bg                      color, #d3d3d3
    font-size               8px
    margin                  0 3px 0 5px
    blockMid()

.ActivitySuggestionItem-profileLink a
  color                     #a1a1a1
  noTextDeco()

