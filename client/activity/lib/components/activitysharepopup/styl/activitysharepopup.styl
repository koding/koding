.ActivitySharePopup
  abs()
  borderBox()
  vendor                transform, translateY(-50%)
  margin                10px 0 0 0
  size                  260px auto
  bg                    color, $white
  border                1px solid #c0c0c0
  rounded               4px
  z-index               1
  padding               8px 12px 8px 8px
  vendor                box-shadow, 0 0 27px #e0e0e0

  &:after
    content             ""
    display             block
    size                0 0
    left                -12px
    top                 50%
    vendor              transform, translateY(-50%)
    border              6px solid transparent
    border-right-color  #fff
    z-index             600
    abs()

  &:before
    content             ""
    display             block
    size                0 0
    left                -13px
    top                 50%
    vendor              transform, translateY(-50%)
    border              6px solid transparent
    border-right-color  #c0c0c0
    z-index             599
    abs()

  input
  input:hover
  input:focus
  input:active
    margin                0 4px 0 0
    background            #e4e4e4
    border-radius         2px
    font-size             12px
    line-height           12px
    size                  135px, 27px
    padding               7px 0 7px 6px
    outline               0
    opacity               0.5
    border                1px solid #aaa
    fl()
    borderBox()

  .share-icon
    margin                3px 0 0 4px
    fl()

    &.share-gplus
      r-sprite              activity, "gplus-21"
    &.share-twitter
      r-sprite              activity, "twitter-21"
    &.share-facebook
      r-sprite              activity, "facebook-21"
    &.share-linkedin
      r-sprite              activity, "linkedin-21"

