$base-padding               = 18px

.FeedItem
  width                     100%
  border-radius             $border-radius
  border                    1px solid #EAEAEA
  margin-bottom             10px
  padding                   0
  font-size                 $fs-regular

  &.is-disabled
    opacity                 .5 !important

.FeedItem-header
  background                $white
  padding                   $base-padding $base-padding 0 $base-padding
  border-radius             $border-radius $border-radius 0 0

.FeedItem-headerContentWrapper
  rel()

.FeedItem-date
  font-size                 $fs-small
  color                     $color-light-text

.FeedItem .MessageLikeLink:before
.FeedItem-date:before
  content                   ""
  display                   inline-block
  size                      3px, 3px
  rounded                   50%
  background                $color-light-text
  font-size                 8px
  margin                    0 6px
  vertical-align            middle

.FeedItem .MessageLikeLink
  abs()

  &:after
    abs                     3px 0 0 0
    content                 ''
    r-sprite                activity icon-feed-like-empty
    size                    17px 15px
    pointer()

  &.is-likedByUser:after
    r-sprite                activity icon-feed-like
    size                    17px 15px

.FeedItem-body
  background                $white
  padding                   ($base-padding/2) $base-padding

.FeedItemAction
  float                     left
  margin-right              0
  font-size                 $fs-small

.FeedItemAction a
  color                     $color-light-text

.FeedItem-footer
  dispFlex()
  border-top                1px solid #EAEAEA
  bg                        color #FBFAF9
  border-radius             0 0 $border-radius $border-radius
  padding                   $base-padding

.FeedItem-summary
  flex                      6
  dispFlex()
  align-items               center



.FeedItem-footerActionContainer
  flex                      4
  dispFlex()
  justify-content           flex-end

