.ChatList
  overflow                    hidden

.ChatItem
  rel()

  &:last-child
    margin-bottom           10px

  .ChatItem-authorName
    display                 inline-block
    font-size               16px
    margin                  4px 10px 2px 0
    font-weight             bold

  time
    color                   #999
    font-size               12px
    font-weight             400

  .ChatItem-likeLink
    abs()
    pointer()
    top                     15px
    display                 none
    vertical-align          text-bottom
    padding                 5px

    &:after
      content               ''
      display               block
      size                  9px, 9px
      r-sprite              activity heart-dim

    &.is-likedByOthers, &.is-likedByUser
      display               inline-block

    &.is-likedByOthers:after
      r-sprite              activity heart-outline !important

    &.is-likedByUser:after
      r-sprite              activity heart-solid !important

  .ChatItem-messageDate
    rel()
    pointer()
    display                 inline-block

    &:hover

      time
        text-decoration     underline

      .Tooltip-wrapper
        visible()

  .emoji
    size                    20px 20px
    vertical-align          text-bottom

  .SettingsMenuWrapper
    abs()
    hidden()
    top                     0px
    right                   5px

    button
      pointer()
      outline               none
      size                  16px !important, 10px !important
      border                none
      r-sprite              activity chevron-icon
      bg                    color, transparent

  .ChatItem-contentWrapper
    padding                 10px 0 0 34px
    margin-top              10px
    overflow                visible

    &.editing
      overflow              hidden
      rounded               3px 3px 0 0
      padding               10px 0 6px 34px
      bg                    color, $light-yellow
      margin-top            5px !important

      .SettingsMenuWrapper
        hidden()

    &.edited
      article
        p
          &:after
            content         ' (edited)'
            display         inline
            font-size       11px
            color           #CCC
    &.MediaObject
      article
        padding-left        52px

    .ChatItem-contentBody
      article
        margin-top          7px
        margin-right        24px

        p
          padding           0 0 2px

        pre
          max-width         701px
          max-height        300px
          overflow          auto
          borderBox()


  &:hover
    .SettingsMenuWrapper
      visible()

    .ChatItem-likeLink
      display               inline-block

  .ChatItem-updateMessageForm
    fl()
    rel()
    z-index                 1
    width                   calc(100% \- 59px)

    .ChatItem-authorName
      abs()
      margin-top            2px

  .EmbedBox-container
    padding-left            52px

  .ChatInputWidget
    padding                   0px !important

    textarea
      resize                  none
      display                 block
      margin-top              24px
      padding-left            12px !important

  .ChatInputWidget:before
    display                   none

  .ChatInputWidget-emojiButton
    right                     21px

.ChatItem.is-selected
  .ChatListItem-itemBodyContainer
    bg                        color, #FFFBD5

.ChatItem-contentWrapper.SimpleChatListItem
  margin                      0 !important
  padding                     0 0 0 86px !important
  article
    padding-left              0 !important


  .ChatItem-messageDate
    abs()
    hidden()
    top                       0
    left                      15px

  .ChatItem-likeLink
    top                       2px
    left                      63px

  &:hover
    .ChatItem-messageDate
      visible()

  &.editing
    overflow                  hidden
    padding                   8px 0 6px 85px !important

    .ChatItem-updateMessageForm
      width                   calc(100% \- 8px)

      .ChatItem-authorName
        hidden()

  .EmbedBox-container
    padding-left              0px

.ChatItem-editActions
  abs()
  top                         2px
  right                       0
  line-height                 12px
  font-size                   11px

.ChatItem-editAction
  pointer()
  padding                     0
  outline                     none
  border                      none
  bg                          color, transparent

  &:before
    blockMid()
    content                   ''
    margin-right              6px

  &.cancel
    margin-right              3px

    &:before
      r-sprite                activity 'icon-cross'

  &.submit
    margin-right              20px

    &:before
      r-sprite                activity 'check-green'

