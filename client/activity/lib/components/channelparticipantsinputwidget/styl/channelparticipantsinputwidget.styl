.ChannelParticipantInput
  rel()
  z-index                   1
  opacity                   0
  margin-bottom             10px
  top                       -45px
  vendor                    transition, .2s ease
  height                    0

  input
    rel()
    borderBox()
    outline                 none
    height                  32px
    width                   100%
    padding                 0 10px
    margin-bottom           10px
    border                  1px solid $gray-16

  &.slide-down
    margin-top              10px
    height                  32px
    top                     0
    opacity                 1

