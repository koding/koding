.ChannelParticipantAvatars
  rel()
  dBlock()
  z-index                   2
  bg                        color, #f5f5f5

  .AvatarsViewContainer
    dInline()

  &.noParticipant
    .ChannelParticipantAvatars-singleBox
      margin-left           0

.ChannelParticipantAvatars-singleBox
  rel()
  dIBlock()
  vertical-align            top
  size                      30px, 30px
  margin                    5px 0 0 10px
  line-height               26px

  .Tooltip-wrapper
    margin-top              -24px
    display                 none
    opacity                 0
    top                     62px !important
    vendor                  transition, opacity .3s ease

  &:hover
    .Tooltip-wrapper
      dBlock()
      opacity               1

  &:nth-child(5n)
    .Tooltip-wrapper
      left                  auto !important
      right                 0
      vendor                transform, translateX(0)

      &:after
        right               10px
        left                auto !important

  &:nth-child(5n+1)
    margin-left             0

.ChannelParticipantAvatars-newParticipantBox
  pointer()
  borderBox()
  text-align                center
  rounded                   4px
  size                      30px, 30px
  border                    1px dashed $gray-10

  &:before
    rel()
    dIBlock()
    content                 ''
    r-sprite                'activity', 'reactivity-new-participant-plus'
    vendor                  transition, .2s ease

  &.cross
    &:before
      vendor                transform, rotate(45deg)

.ChannelParticipantAvatars .ProfilePicture
  vertical-align            middle

.ChannelParticipantAvatars-moreCount
  pointer()
  borderBox()
  size                      30px, 30px
  border                    1px solid $gray-10
  border-radius             $border-radius
  text-align                center

.ChannelParticipantAvatars-allParticipantsMenu
  abs()
  rounded                   $border-radius
  border                    1px solid $gray-20
  z-index                   9
  padding                   5px 0
  bg                        color, $white
  right                     25px
  max-height                420px
  shadow                    0 8px 35px rgba(0, 0, 0, 0.22)

  &:before
    abs()
    content                 ''
    top                     -7px
    right                   50px
    size                    0, 0
    border-left             7px solid transparent;
    border-right            7px solid transparent;
    border-bottom           7px solid $white;

  .ChannelParticipantAvatars-allParticipantsMenuContainer
    width                   200px
    max-height              395px
    overflow-y              auto
    overflow-x              hidden

  .ChannelParticipantAvatars-allParticipantsMenuTitle
    color                   $gray-14
    border-bottom           1px solid $gray-16
    padding                 5px 10px
    font-size               14px

  .ChannelParticipantAvatars-singleBox
    dBlock()
    pointer()
    noTextDeco()
    width                   auto
    color                   $gray-12
    margin                  0
    padding                 5px 10px

    a
      noTextDeco()
      color                 $gray-12

    .ProfilePicture
      fl()
      margin-right          10px

    &:hover
      bg                    color, $gray-12
      color                 $white

      a
        color               $white

