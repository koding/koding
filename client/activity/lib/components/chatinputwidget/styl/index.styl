.ChatInputWidget
  borderBox()
  bg                        color, #FCFCFC
  cursor                    text
  font-size                 0
  padding                   0 33px
  rel()
  size                      100%, auto

  &:before
    abs                     15px 0 0 49px
    content                 ""
    r-sprite                activity widget-icon
    z-index                 2

  > textarea
    bg                      color, transparent
    bg                      image, none
    border                  1px solid #dfdfdf
    borderBox()
    color                   $color-primary-text
    font-family             $ff-normal-text
    font-size               16px
    font-weight             400
    line-height             18px
    margin-bottom           25px
    max-height              196px
    min-height              44px
    padding                 13px 50px 12px 52px
    resize                  none
    rounded                 0
    size                    100%, 42px
    &:focus
      outline               none
      shadow                none

.ChatInputWidget-emojiButton
  abs()
  size                      20px 20px
  top                       13px
  right                     46px
  r-sprite                  'activity', 'emoji'
