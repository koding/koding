.SearchDropboxItem
  padding                   8px 12px 15px 12px
  color                     #605f63
  font-size                 16px

  &:last-child
    border-bottom           none

  .SearchItemBody-matchedWord
    color                   #000000
    font-weight             bold

  .emoji
    size                    16px 16px
    blockMid()
    padding                 0

.SearchDropboxItem-info
  color                     #a8a8a8

  &~.SearchDropboxItem-info:before
    content                 ""
    size                    3px 3px
    rounded                 50%
    bg                      color, #a8a8a8
    margin                  0 5px
    blockMid()

.SearchDropboxItem-profileLink a
  color                     #a1a1a1
  noTextDeco()

