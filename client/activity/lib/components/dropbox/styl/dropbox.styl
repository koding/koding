.Dropbox
  abs()
  width                     100%
  border                    1px solid #dfdfdf
  bg                        color, #fcfcfc
  borderBox()
  line-height               18px

.PortalDropbox .Dropbox
  z-index                   100

.Dropbox-container
  rel()
  width                     100%

.Dropup
  rounded                   5px 5px 0 0
  border-bottom             0px

.Dropdown
  rounded                   0 0 5px 5px
  border-top                0px

.Dropbox-scrollable
  overflow                  auto
  max-height                271px
  rel()

.Dropbox-header
  color                     #b5adad
  text-transform            uppercase
  font-size                 12px
  padding                   8px 12px
  border-bottom             1px solid #dfdfdf

.Dropbox-subtitle
  font-weight               bold
  color                     #4f4f4f
  text-transform            none
  padding-left              3px

