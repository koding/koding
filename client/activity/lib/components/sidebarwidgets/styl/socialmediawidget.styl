.FeedThreadSidebar-social
  dIBlock()
  fl()
  font-size                   12px
  color                       $white !important
  height                      30px
  line-height                 30px
  width                       141px
  bg                          color, $gray-16
  rounded                     3px
  text-align                  center

  &:before
    content                   ''
    margin-right              7px
    dIBlock()
    rel()

  &:hover
    noTextDeco()

  &.facebook
    margin-left               13px

    &:before
      top                     4px
      r-sprite                'activity', 'facebook_white_8'

    &:hover
      background-color        #3B5998

  &.twitter
    &:before
      top                     3px
      r-sprite                'activity', 'twitter_white_16'

    &:hover
      background-color        #55ACEE

