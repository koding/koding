.ActivityGuideWidget
  background              #FFFFF7
  color                   #6D6D6D
  overflow                hidden
  height                  188px
  vendor                  transition, height .177s ease
  borderBox()

  &.expanded
    height                auto

    ol, li, h4
      dBlock()

    .ActivityGuideWidget-readMore
      hidden()

    .ActivityGuideWidget-hideInfo
      visible()

  h3
    font-weight           600
    line-height           20px
    margin-bottom         6px

  li
    position              relative
    line-height           20px
    display               none

    &:first-of-type
      display             block

    a
      text-decoration     underline !important
      color               #6D6D6D

    & ~ li
      margin-top          6px

  ol
    padding               0 0 12px 20px
    counter-reset         orderedList
    display               none

    &:first-of-type
      dBlock()

    li:before
      counter-increment   orderedList
      content             counter(orderedList) "."
      abs                 0px 0 0 -20px
      font-weight         600
      dBlock()

    ol
      padding-bottom      0

      li:before
        content           counter(orderedList, lower-latin) ")"

      li ~ li
        margin-top        1px

.ActivityGuideWidget-readMore
.ActivityGuideWidget-hideInfo
  line-height             20px
  color                   $gray-14 !important
  margin-top              6px
  font-size               14px
  text-decoration         none !important
  dBlock()

  &:hover
    text-decoration         none !important

.ActivityGuideWidget-hideInfo
  hidden()
