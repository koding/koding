.CommentListItem
  margin-bottom             15px
  rel()

  > a
    color                   $feed-link
    font-size               $fs-smaller
    font-weight             600

  .ButtonWithMenuWrapper
    right                   0
    abs()
    hidden()

  .MediaObject-media
    fl()
    margin-right            8px

  .ProfilePicture
    width                   30px !important
    height                  30px !important

  &:hover
    .ButtonWithMenuWrapper
      visible()

  &.editing
    .CommentListItem-body .MessageBody
    .CommentInputWidget .MediaObject-media
    .CommentListItem-footer a
      hidden()

    .CommentInputWidget
      padding               8px 12px 0 0

    .CommentInputWidget-input
      width                 100% !important

    .FeedItem-postComment
      bottom                9px
      right                 16px

  &.edited
    .CommentListItem-date:after
      content               " (edited)"
      font-size             11px
      margin                0 3px
      dIBlock

.CommentListItem-body
  padding-left              38px
  font-size                 $fs-smaller
  color                     $gray-8

  .MessageBody p
    padding                 0
    font-size               $fs-smaller

.CommentListItem-footer
  padding-left              38px

  a
    pointer()
    dIBlock()
    font-size               $fs-smaller
    color                   $gray-12
    font-weight             400

    &:before
      dIBlock()
      content:              ""
      size                  3px 3px
      rounded               50%
      bg                    color, $gray-12
      font-size             $fs-smaller
      margin                0 8px
      vertical-align        middle

  .Tooltip-wrapper
    top                     auto
    bottom                  24px
    left                    100%
    hidden()

  .ActivityLikeLink
    rel()

  .ActivityLikeLink-count
    rel()
    top                     -1px
    height                  16px
    line-height             16px
    rounded                 2px
    font-size               $fs-extra-small
    padding                 0 4px
    margin-left             5px
    bg                      color, $gray-16
    color                   $gray-6

  .ActivityLikeLink-count:hover + .Tooltip-wrapper
    visible()

.CommentListItem-date
  font-size                 $fs-smaller


