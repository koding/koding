.ChatPane
  bg                        color, $gray-19
  size                      100% 100%
  box-sizing                border-box
  font-size                 $fs-regular
  line-height               $body-line-height

  .Pane-contentWrapper
    bg                        color, #fcfcfc
    kalc                      height, 100vh \- 40px
    vendor                    flex-direction, column

  .Pane-body
    padding                   0
    vendor                    flex, 1
    vendor                    flex-direction, column
    vendor                    justify-content, flex-end
    kalc                      height, 100% \- 70px
    dFlex()
    rel()
    > .Scrollable
      fadeIn()
.PublicChatPane-footer
.PrivateChatPane-footer
  abs()
  bottom                    0
  width                     100%
  min-height                70px

.PublicChatList
  max-width                 100vw

.ChatList
  width                     100%

.ChatPane-unreadMessages
  abs()
  z-index                   100
  kalc                      width, 100% \- 20px
  bg                        color, #43a1df
  color                     #fff
  padding                   0px 5px 3px 5px
  margin                    0 10px
  borderBox()
  text-align                center
  fadeOut()
  pointer()
  hidden()

  &.fixedOnTop
    top                     0px
    rounded                 0 0 5px 5px
    visible()

  &.fixedOnBottom
    bottom                  0px
    rounded                 5px 5px 0 0
    visible()

  .jumpButton
    fl()
    font-size               11px
    padding-top             1px
    text-transform          uppercase

  .counterText
    font-size               14px

  .markAsRead
    fr()
    font-size               11px
    padding-top             1px
    text-transform          uppercase
