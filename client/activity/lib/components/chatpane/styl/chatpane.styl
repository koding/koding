.ChatPane
  bg                        color, $gray-19
  size                      100% 100%
  box-sizing                border-box
  font-size                 $fs-regular
  line-height               $body-line-height

.ChatPane-contentWrapper
  bg                        color, #fcfcfc
  kalc                      height, 100vh \- 40px
  vendor                    flex-direction, column

.ChatPane-body
  padding                   0
  vendor                    flex, 1
  vendor                    flex-direction, column
  vendor                    justify-content, flex-end
  kalc                      height, 100% \- 70px
  dFlex()
  rel()
  > .Scrollable
    opacity                 0
    vendor                  transition, opacity .3s .5s ease

.PublicChatPane-footer
.PrivateChatPane-footer
  abs()
  bottom                    0
  width                     100%
  min-height                70px

.PublicChatList
  max-width                 100vw

.ChatList
  width                     100%

