.Dropup-container
  position                  relative
  width                     100%

.Dropup
  abs()
  overflow                  auto
  width                     100%
  max-height                200px
  border                    1px solid #dcdcdc
  shadow                    0 5px 15px rgba(0,0,0,0.2)
  bg                        color, #fff
  borderBox()

.Dropup-header
  color                     #b5adad
  text-transform            uppercase
  font-size                 11px
  padding                   9px 16px
