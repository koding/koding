  padding         8px 8px 6px 8px
  border          1px solid #e8e8e8
  border-color    #bfbfbf #d7d7d7 #f1f1f1 #d7d7d7
  margin          30px auto 25px auto
  background      -moz-linear-gradient(top,  rgba(209,209,209,1) 0%, rgba(247,247,247,1) 36%)
  background      -webkit-linear-gradient(top,  rgba(209,209,209,1) 0%,rgba(247,247,247,1) 36%)
  background      -ms-linear-gradient(top,  rgba(209,209,209,1) 0%,rgba(247,247,247,1) 36%)
  background      linear-gradient(top,  rgba(209,209,209,1) 0%,rgba(247,247,247,1) 36%)
