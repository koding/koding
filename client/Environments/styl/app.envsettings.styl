  margin 0 auto 25px auto
  size(465px,40px)
  > div
    color         #717171
    font-size     13px
    text-shadow   0 1px 0 #fff
    margin-top    6px
    size(85px,42px)
    fl()
    cite
      display       block
      font-style    normal
    span
      font-size     18px
      color         #333
      text-shadow   0 1px 0 #fff

  .price
    rel()
    right         -27px
    top           -6px
    cite
      font-size 20px
      color #FF9200
      abs()
      left -10px
    span
      font-size   40px
      font-weight 600
      color       linkColor1














