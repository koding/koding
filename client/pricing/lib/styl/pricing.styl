


@css {
/*
Pricing stylesheet
pricing.styl
*/
}

body.pricing
  font-family               SoleilFamily
  letter-spacing            0
  height                    100%

  #main-header
    max-width               100%
    top                     0
    padding-right           calc((100% \- 1200px) / 2)
    height                  73px
    background              #fff
    position                fixed
    shadow                  0 1px 16px rgba(0,0,0,.1)

    .inner-container
      -webkit-font-smoothing  antialiased

    nav
      a
        color               #3B3B3B

        &.login
          border-color      #ADADAD

  .input-validation
    margin-left         30px !important

  .input-validation div.wrapper
    background-color    rgba(217, 95, 95, .75)
    shadow              none
    font-size           14px
    font-weight         600
    text-align          center
    line-height         18px
    -webkit-font-smoothing antialiased

  .input-validation.placement-top:after
    border-top-color    rgba(217, 95, 95, .75)

  .kdoverlay
    background          rgba(0, 0, 0, .75)

.content-page.pricing
  width                     auto
  max-width                 100%
  padding                   73px 0 0 0
  border-top                1px solid transparent
  height                    100%

  section.feature-branch
    .kdtabhandlecontainer
      margin-bottom         40px
      padding               25px 0 23px
      height                auto
      border                none
      overflow              hidden
      bg                    image, linear-gradient(-90deg, rgba(43, 139, 227, .8) 0,rgba(102, 63, 181, .8) 100%)
      bg                    image, -webkit-linear-gradient(180deg, rgba(43, 139, 227, .8) 0, rgba(102, 63, 181, .8) 100%)

    .kdtabpaneview
      overflow              hidden

    .kdtabhandle-tabs
      text-align            center

      .kdtabhandle
        size                auto, auto
        dIBlock()
        border              none
        float               none
        max-width           none !important
        min-width           190px !important
        rounded             4px
        padding             20px 30px

        &.active
          background        rgba(248, 253, 255, .2)

        a
          font-size         20px
          font-weight       300
          color             #fff
          dBlock()
          noTextDeco()

          &:before
            margin          5px auto 8px
            size            36px, 36px
            dBlock()

        &.for-teams
          a:before
            content         url("data:image/svg+xml;base64,")

        &.for-individuals
          a:before
            content         url("data:image/svg+xml;base64,")

  .for-teams
    h2
      max-width             365px
      font-size             28px
      line-height           40px
      color                 #98a1ad
      margin                43px auto 65px
      text-align            center

    .onboarding
      bg                    image, url("/a/images/pricing/onboarding1x.png")
      bg                    position, right bottom
      bg                    repeat, no-repeat
      bg                    size, contain
      height                25.25vw
      margin                3.5625rem 0 0 3%

    .early-access
      max-width             550px
      margin                0 auto

      .kdformview
        dFlex()

        .kdinput
          rounded           0
          border            3px solid #D0D0D0
          margin-right      15px

          &.validation-error
            border-color    #f13a18

        .kdbutton
          rounded           2px

          .button-title
            text-transform  initial

  .no-worries
    color                   #98a1ad
    font-size               18px
    line-height             24px
    text-align              center
    opacity                 .6
    margin-bottom           72px

  .pricing-footer
    padding                 90px 0 75px
    width                   100%
    color                   #9b9b9b
    font-weight             400
    font-size               14px
    line-height             28px
    border                  1px solid #ECECEC
    border-left             none
    border-right            none
    borderBox()
    bg                      image, linear-gradient(-90deg, #edf1ff 0, #eef6fb 50%, #f1fdff 100%)
    bg                      image, -webkit-linear-gradient(180deg, #edf1ff 0, #eef6fb 50%, #f1fdff 100%)

    .footer-note
      font-size             12px
      margin-top            -10px

    .learn-more
      line-height           28px
      font-size             14px
      margin-top            3px
      display               block
      text-align            center
      text-decoration       underline
      color                 #4393db

    .footer-msg
      margin                30px 0 70px
      text-align            center

    h4
      font-size             22px
      text-align            center
      font-weight           400
      color                 #2c84d1

    ul
      max-width             1200px
      margin                0 auto
      padding               32px 36px
      columns               4

    li
      font-size             14px
      line-height           26px
      padding-left          12px
      rel()
      borderBox()

      &:before
        bg                  image, none !important
        content             '\B7'
        display             block
        r-sprite            'pricing', 'check-gray'
        top                 0
        left                0
        abs()

  .interval-toggle
    width                   100%
    text-align              center
    margin                  35px 0 30px

    > span
      font-size             18px
      margin-right          10px

    .kdselectbox
      rounded               0
      height                38px
      top                   -3px
      left                  0
      width                 128px
      border-color          #e3e3e3

      select
        noAppearance()
        font-size           20px

      .title
        font-size           18px
        color               #2c83d1
        margin-top          2px
        padding-left        14px
        text-align          left
        font-weight         400

  section.plans
    margin                  0 auto 28px
    max-width               940px
    width                   auto
    height                  auto
    borderBox()
    dFlex()
    flexWrap()

    .single-plan
      flex-basis            25%
      z-index               1
      borderBox()
      fl()
      dFlex()
      rel()
      margin-top            50px

      .overflow-hidden
        overflow            hidden
        border              1px solid #cbd4e6
        border-right        none
        padding             0 36px

      .overflow-visible
        overflow            visible

      &:first-of-type
        .overflow-hidden
          rounded           7px 0 0 7px

      &.promoted
        z-index             2
        top                 -10px

        .overflow-hidden
          padding           10px 36px
          background        #f9fbfd
          border-color      #b4c1d1
          margin-right      -1px
          margin-left       -1px
          border-radius     7px
          border-right      1px solid #b4c1d1

        .plan-price
          cite
            color           #17cd7a

        .plan-buy-button
          border-color      transparent
          background        #2acc7d
          color             #fff
          // margin-top        23px
          // margin-bottom     40px
          box-shadow        0 1px 2px 0 rgba(0,0,0,.17),0 1px 1px 0 hsla(0,0%,100%,.14) inset
          rel()
          // top               5px

          &.loading
            bg              color #2acc7d
            border-color    #2acc7d

        .plan-title
          color             #32435c
          opacity           .5

      &.free
        .plan-price cite:before
        .plan-title
          hidden()

        .plan-price .interval-text
          visibility    hidden


      &[disabled=disabled]
        .cpu:after
          color         #ddd !important

        *
          color         #ddd !important
          &:before
            color       #ddd !important

        .plan-title
          color         inherit !important
          text-align    center

        .plan-buy-button
          border-color  #ddd


      &.current

        .overflow-hidden
          position      relative
          overflow      hidden

          &:after
            content       'Current Plan'
            display       block
            size          107px, 17px
            vendor        transform, rotateZ(-45deg)
            font-size     10px
            color         #959595
            background    #E8E8E8
            text-align    center
            line-height   17px
            abs           23px 0 0 -23px
            borderBox()

      &:nth-of-type(4)
        .overflow-hidden
          rounded           0 7px 7px 0
          border-right      1px solid #cbd4e6

      .plan-title
        top                 -25px
        text-align          center
        font-size           14px
        z-index             150
        left                0
        right               0
        color               #cbd4e6
        abs()

      .plan-price
        border              none
        color               #8B8B8B
        font-size           12px
        text-align          center
        height              auto
        margin              0

        span
          padding           0
          margin            0
          font-size         14px
          color             #98a1ad

        cite
          display           block
          font-size         40px
          color             #2c84d1
          line-height       40px
          margin            40px 0 5px
          position          relative

          &:before
            content         '$'
            display         inline-block
            font-size       19px
            vertical-align  super
            line-height     26px

      .plan-summary
        padding             15px 0 30px
        text-align          center
        font-size           10px
        color               #98a1ad
        line-height         12px
        font-weight         400
        opacity             .99
        borderBox()
        min-height          60px

      .plan-features
        color               #575757
        line-height         23px
        font-size           14px
        borderBox()

        dd
          min-height        23px
          color             #98a1ad
          font-size         17px

        .cpu:after
          content           '(burstable)'
          display           inline-block
          font-size         80%
          font-weight       400
          margin-left       3px
          line-height       23px
          color             #aaa

        .vm-count
          font-weight       400
          font-size         17px
          padding-bottom    2px
          color             #32435c

      .plan-buy-button
        background          transparent
        border              1px solid #2c84d1
        outline             none
        shadow              none
        margin              42px auto 43px
        display             block
        color               #2c84d1
        padding             11px 55px
        font-size           17px
        letter-spacing      0
        font-weight         700
        rounded             3px
        vendor              transition, background .2s ease

        &.loading
          bg                color #2c84d1
          border-color      #2c84d1

@media only screen and (max-width : 900px)
  .content-page.pricing
    section.plans
      max-width             525px

      .single-plan
        flex-basis          50%

        .overflow-hidden
          border            1px solid #cbd4e6
          border-radius     7px !important
          margin            0 5px

        &.promoted
          top               0
          padding           0 5px

          .overflow-hidden
            padding         0 36px
            margin          0

    .pricing-footer
      ul
        columns             3

        li
          font-size         12px

@media only screen and (max-width : 660px)
  .content-page.pricing
    .pricing-footer
      ul
        columns             2

    .for-teams
      .early-access
        max-width           400px

// Handle retina screens
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
  .content-page.pricing
    .for-teams
      .onboarding
        bg                  image, url("/a/images/pricing/onboarding2x.png")
