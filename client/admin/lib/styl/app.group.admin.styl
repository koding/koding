      margin-left           6px

  .clear
    clear                   both

  .settings-icon
    display                 inline-block
    r-sprite                'app', 'sidebar-toggle'
    vendor                  transform, rotate(180deg)
    margin-left             10px

  .settings
    padding-top             15px


.AppModal--admin .general-settings-view

  fieldset
    margin-top              0

  .warning-text
    position                relative
    font-size               12px
    color                   #afafaf
    top                     -24px

  .kdinput[disabled]
    opacity                 .5

  .kdinput.file
    z-index                 1
    top                     110px
    left                    142px
    line-height             30px
    size                    118px, 30px
    opacity                 0
    pointer()
    abs()

