    color                   #a1a1a1

  .kdbutton.compact
    .kdloader canvas
      margin-top            5px


.AppModal--admin .invitations

  .kdlistitemview-member
    height                  40px

    &.settings-visible
      height                85px

  .kdbutton
    &.invite
      abs()
      top                   15px
      right                 0

    &.add-more
      height                24px
      bg                    color, #BDC3C7
      display               block
      margin-bottom         50px

      span
        line-height         24px
        font-size           10px
        color               #FFF

    &.cancel
      margin                0 10px 0 440px // hmm


  .information
    font-size               14px
    color                   #3E3E3E
    margin                  20px 0 40px 0

