/* Inbox PAGE */

.inbox-main-split
  min-width               600px

  .common-inner-nav
    padding-bottom        0

  .list.feed
    border-bottom         none

  > .panel-1
    overflow              visible

.inbox-application .split-layout
  .header
    button
      span.icon
        &.mark-unread
          bg              position,-140px -480px


.inbox-tabview,
.inbox-tabview>.kdtabpaneview
  overflow      visible

.messages-split
  overflow      visible
  .kdview.kdsplitview-resizer
    bg(image,none!important)
    bg(color,transparent!important)
  > .panel-0
    // overflow-y       scroll
    bg(color,rgba(249,249,249,1))

.message-thread-tabs
  .kdtabpaneview
    overflow                  visible
    height                    auto
  .message-detail
    height                    auto

  .message-body-wrap
    overflow                  auto
  .message-body
    // border-bottom             1px solid #e5e5e5
    header
      padding                 11px
      border-bottom           1px solid #dedede
      p
        font-size             11px
        color                 #777
        line-height           20px
        .add
          color               linkColor1
          border              1px solid #cecece
          padding             1px 3px
          line-height         13px
          cursor              pointer
          margin-left         10px
          rounded(2px,2px,2px,2px)
          bg(color,#e5e5e5)
          blockMid()
      h1
        font-size             18px
        font-weight           bold
        margin-bottom         5px

    section
      color                   #777
      padding                 11px
      p
        margin-bottom         20px
        line-height           20px
        font-sizer            13px
      .meta
        padding               0 0 10px 0px
        span.time
          font-size           11px
          color               #999

  .reply-to-thread-box
    border-top                1px solid #e5e5e5
    padding                   11px
    width                     auto
    gradient                  #fafafa, #fff
    borderBox()

    textarea
      width                   100%
      min-height              120px
      resize                  auto

    button.kdbutton
      top                     -30px
      right                   6px
      fr()

.comment-body,.message-body,.show-more
  a
    color                   linkColor1
    text-decoration         none
    &:hover
      text-decoration       underline



.thread-container
  .show-more
    padding                   11px
    bg                        color,#f9f9f9
    shadow                    0 0 6px -2px rgba(0,0,0,.3) inset
    a
      font-weight             600

    .new-items
      opacity               0
      padding-left          2px
      padding-right         2px
      font-weight           600
      color                 white
      rel()
      bg                    color, #FF9200
      border                1px solid #FF9200
      rounded(3px 3px 3px 3px)
      // vendor                transition, left .3s ease-in-out \, opacity .3s ease-in-out

      &.in
        opacity             1
        left                6px

    .new-items:after, .new-items:before
      right                 100%
      border                solid transparent
      content               " "
      height                0
      width                 0
      abs()
      pointer-events        none

    .new-items:after
      border-right-color    #FF9200
      border-width          4px
      top                   50%
      margin-top            -4px

    .new-items:before
      border-right-color    #FF9200
      border-width          5px
      top                   50%
      margin-top            -5px

  &.no-comment
    .reply-to-thread-box
      border-top-width        0



ul.split-section-list
  margin                  0
  padding                 0
  overflow                visible
  min-height              100%
  li
    cursor                pointer
    height                auto
    padding               7px 11px
    border-bottom         1px solid #e0e0df
    font-size             82%
    // min-width             280px
    borderBox()
    &.unread
      background          rgba(250, 239, 223, .5)
      border-left         3px solid #ff9200
      padding             7px 11px 7px 8px
    &:last-child
      border-bottom       1px solid #e0e0df !important
    div.avatar-wrapper
      padding             1px
      border              1px solid #e3e3e3
      margin-right        11px
      size                40px,40px
    a.avatar
      size                40px,40px
    div.right-overflow
      p
        color             #393939
        font-size         11px
        a.profile
          color           linkColor1
          font-weight     600
      footer
        margin-top        2px
        font-size         11px
        color             #888
        a
          color           #888
          font-size       11px
          margin-bottom   2px
          line-height     1.5em
          noTextDeco()
        time
          display         block
    h3
      color               linkColor1
      font-size           11px
      margin-bottom       2px
    &:hover
      bg                  color,rgba(255,255,255,.65)
      shadow              0 0 4px 0 rgba(0,0,0,.17)
      .delete-link
        opacity         .5
        &:hover
          opacity       1
    &.active
      bg                  color,white
      shadow              0 0 10px 0 rgba(0,0,0,.17)
    // &.active.unread
    //   bg                  color,red

    .delete-link
      display                 block
      size                    20px, 20px
      abs()
      top                     5px
      right                   5px
      bg                      position, -80px -520px
      opacity                 0
      vendor                  transition, opacity .15s linear
      sprite()
      // border                  1px solid transparent

.notifications-tab
  background-color    #f9f9f9
  // width               820px
  overflow-y          scroll!important
  border-right        1px solid #e8e8e8
  border-left         1px solid #e8e8e8


.kdautocompletelistitem
  .ttag
    margin-right    0
    vertical-align  middle
    text-overflow   ellipsis
    overflow        hidden
    max-width       none

.compose-message-modal

  input.text.slug-taken
    bg                color, rgba(255,0,0,1)
    color             white

  input.kdinput.text,
  textarea.kdinput.text
    width             365px
    &:last-child
      margin-right    0

  textarea.kdinput.text
    height            70px

  .kdautocompletewrapper
    width             365px
    display           inline-block
    vertical-align    bottom
    borderBox()
    input.text
      width           100%
      borderBox()
  .completed-items
    width             365px
    max-height        300px
    margin-left       95px
    padding           5px 0 0 0
    overflow          auto

  .kdview.kdautocompletedlistitem
    margin            5px 5px 0 0
    padding-left      0
    span.avatar
      abs()
      top             1px
      left            1px
      padding         1px
      bg(color,white)
      size(16px,16px)
    .avatarview
      cite
        hidden()

    span.profile
      margin-left     21px
      display         block
      overflow        hidden

.kdautocomplete.users
  .kdview.kdlistview.kdautocompletelist
    .kdautocompletelistitem
      max-width       365px
      line-height     28px
      span.avatar
        abs()
        border        1px solid #ddd
        padding       1px
        top           2px
        left          6px
        bg(color,white)
        size(20px,20px)
      .avatarview
        cite
          hidden()

      span.profile
        margin        0
        margin-left   30px
        padding-right 10px
        display       block
        overflow      hidden

      span.nick
        visibility    hidden

      .nick-matches
        span.nick
          visibility  visible

  .kdautocompletelist
    .kdautocompletelistitem
      &:nth-child(even)
        bg            color,rgba(227,239,246,.5)

