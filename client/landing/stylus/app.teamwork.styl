@import "./kdfn"
@import "./client/stylus/appfn"

@css {
/*
COMMONS stylesheet
app.teamwork.styl
*/
}

.teamwork
  .inner-header
    .title
      text-indent               40px
      background                url(/images/teamwork/icon.128.png) 3px -2px no-repeat
      background-size           38px 38px
  .finder-pane
    &.file-container
      .no-vm-found-widget
        display                 none

.teamwork-loader
  size                          204px, 324px
  left                          50%
  position                      relative
  margin                        -162px 0 0 -102px
  top                           50%

.powered-by-firepad
  display                       none

.teamwork-modal-header
  height                        33px
  bg                            color, #eee
  border-bottom                 1px solid #dcdcdc
  .header
    size                        299px, 33px
    border-right                1px solid #dcdcdc
    line-height                 33px
    text-indent                 20px
    fl()
    .text
      font-size                 14px
      font-family               "Open Sans"
      color                     #474747
    &.full-width
      width                     100%
      border-top                1px solid #dcdcdc

.teamwork-modal-content
  width                         259px
  fl()
  border-right                  1px solid #dcdcdc
  padding                       20px
  shadow                        inset 0 0 0 1px #FFF
  position                      relative
  &.full-width
    width                       100%
    padding                     0
    p
      margin-bottom             10px
  .export-file-tree
    abs()
    top                         -193px
    left                        20px
    size                        248px, 0
    background                  #eee
    vendor                      transition, height .1s ease-in-out
    shadow                      0 0 5px rgba(0, 0, 0, .3)
    &.active
      border                    1px solid #bbb
      padding                   5px
      height                    358px
  .share-section
    .title
      font-size                 12px
      margin-bottom             5px
      color                     #8d8d8d
      line-height               12px
    p
      font-size                 11px
      color                     #8d8d8d
      line-height               14px
  p
    line-height                 14px
    margin-top                  10px
    color                       #bbb
    cursor                      default
    &:hover
      color                     #444
  .teamwork-modal-input
    width                       238px
    height                      38px !important
    font-size                   10px
    color                       #888
    border-color                #dcdcdc
    text-shadow                 0 1px 0 #FFF
    gradient                    rgba(237,237,237,1), rgba(250,250,250,1), !important
    text-indent                 5px
    border                      1px solid #888 !important
    &.session-key
      background                none !important
      border                    none
      font-size                 20px
      font-weight               600
      color                     #f18025
      text-indent               0
      padding-left              0
      border                    1px solid #eee
      text-align                center
  .cancel
    line-height                 40px
    color                       #8d8d8d
    pointer()
  .kdbutton
    size                        260px, 38px
    line-height                 28px
    color                       #8d8d8d
    font-size                   12px
    font-weight                 normal
    text-shadow                 0 1px 0 #fff !important
    text-align                  left
    gradient                    #f5f5f5, #e3e3e3, !important
    shadow                      inset 0 0 0 1px #fff
    &:hover
      gradient                  #f5f5f5, #e3e3e3, !important
      opacity                   0.82
    &:active
      shadow                    inset 0 0 5px 0px #aaa , 0 1px 0 0 #eee !important
    &:first-child
      margin-right              30px
  .exporter
    width                       247px

.teamwork-tools-modal
  .kdmodal-content
    gradient                    #f3f3f3, #fff

.teamwork-modal-contents
  overflow                      hidden

.teamwork-export-dialog .kdformview .kdlabel:first-child,
.teamwork-export-dialog .kdformview .kdinput,
  display                       none !important

.teamwork .inner-header .help
  display                       none
  &.opacity
    opacity                     .0001
    display                     block

.teamwork-url-share-input
  font-size                     16px
  border                        none !important
  width                         390px
  margin                        10px

.teamwork-markdown.has-markdown
  &.scale
    vendor                      transform, scale(0.03)
    -webkit-transition          -webkit-transform 0.3s ease, top 0.3s ease, left 0.3s ease
    -moz-transition             -moz-transform    0.3s ease, top 0.3s ease, left 0.3s ease
    transition                  transform         0.3s ease, top 0.3s ease, left 0.3s ease

  .kdmodal-content
    padding                     10px
    font-size                   14px !important
  img
    display                     inline !important
  a
    border-bottom               none
  h1, h2
    border-bottom               1px solid #eee
    margin                      20px 0 15px
  h1
    font-size                   30px
    &:first-child
      margin-top                10px
  h2
    font-size                   24px
