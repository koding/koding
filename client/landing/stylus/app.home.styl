// NEW TRY
#kdmaincontainer > header
  .custom-link-view
    hidden()

#kdmaincontainer.home
  overflow          auto

  #main-panel-wrapper
    min-height      100%
    height          auto!important
  #sidebar-panel
    hidden()
  #content-panel
    min-height      100%
    height          auto!important

  > header
    bg              color, #000
    bg              image, url('../images/gunduz-varligi-yildizli.jpg')
    bg              position, -600px -211px

    .custom-link-view
      right             70px
      top               8px
      text-align        right
      opacity           .8
      visible()
      abs()
      &:hover
        opacity         1
      &:first-child
        padding-top     4px
      span.title
        font-size       12px
        text-shadow     0 1px 0 rgba(0,0,0,.9)

      &.login
        .icon
          margin-top    1px
          bg            position, -220px -320px

div#home-intro
  min-width               1024px
  size                    100%, 526px
  color                   white
  vendor                  transition, height .3s linear
  bg                      image, url('../images/gunduz-varligi-yildizli.jpg')
  bg                      position, -600px -261px
  bg                      color, black
  shadow                  inset 0 -5px 10px rgba(0,0,0,.1)
  &.out
    height                0
  section
    size                  100%, 100%
    padding               50px 0 10px
    max-width             1280px
    rel()
    borderBox()
    > div
    > aside
      vendor              transition, width .3s ease\,\
                                      padding .3s ease

    > div
      kalc                width, 100%\-360px
      padding             0 0 0 60px
      fl()
      borderBox()

    > aside
      width               360px
      padding             12px 60px 0 0
      fl()
      borderBox()

  h2.slogan
  h3.slogan-continues
    font-weight           300
    text-shadow           0 1px 0 rgba(0, 0, 0, .5)
    vendor                transition, font-size .3s ease\,\
                                      padding .3s ease

  h2.slogan
    font-size             60px

  h3.slogan-continues
    font-size             28px
    margin-top            30px
    line-height           1.8em
    margin-left           -15px
    span
      padding             5px 15px
      bg                  color, rgba(0, 0, 0, .3)

  a.try
    padding             5px 15px
    width               200px
    color               linkColor1
    font-size           0px
    font-weight         400
    text-shadow         none
    text-decoration     none
    text-align          center
    margin-left         -100px
    vendor              transition, font-size .4s 3s ease-in
    abs                 null, null, 90px, 50%
    &.in
      font-size         22px

  .tos
    width                 300px
    margin-top            21px
    font-weight           400
    font-size             10px
    line-height           18px
    color                 rgba(255, 255, 255, .3)
    text-align            center
    a
      color               rgba(255, 146, 0, .5)
      noTextDeco()

  form
    .formline
      border              none
      height              44px
      line-height         44px
      margin-bottom       6px
      padding             0
      width               300px
      overflow            visible
      > .input-wrapper
        size              100%, 100%
        overflow          visible
      &.or
        font-weight       300
        font-size         16px
        height            34px
        line-height       34px
        text-align        center
        color             #777

    button
      size              100%, 100%
      margin            0
      font-size         19px
      border            none
      font-weight       400
      rounded           5px

      &.orange
        gradient        #fca520, #c46325
        shadow          inset 0 1px 0 rgba(255, 255, 255, .5)\,\
                        0 1px 1px rgba(0, 0, 0, .5)
        text-shadow     0 -1px 0 rgba(0, 0, 0, .3)
        color           white
        &:active
          gradient      #c46325, #fca520
          text-shadow   0 1px 0 rgba(0, 0, 0, .3)
        &:active
        &:focus
          shadow        inset 0 1px 0 rgba(255, 255, 255, .5)\,\
                        0 1px 1px rgba(0, 0, 0, .5)\,\
                        0 0 9px 3px rgba(255,187,4,0.33)

      &.gray
        gradient        #ddd, #bbb
        shadow          inset 0 1px 0 white\,\
                        0 1px 1px rgba(0, 0, 0, .5)
        text-shadow     0 1px 0 rgba(255,255,255,0.5)
        color           #444
        &:active
          gradient      #a8a8a8, #f1f1f1
          text-shadow   0 -1px 0 rgba(255,255,255,0.5)
        &:active
        &:focus
          shadow        inset 0 1px 0 white\,\
                        0 1px 1px rgba(0, 0, 0, .5)\,\
                        0 0 9px 3px rgba(255,255,255,0.3)

      &.gh-gray
        gradient        #f1f1f1, #a8a8a8
        shadow          inset 0 1px 0 white\,\
                        0 1px 1px rgba(0, 0, 0, .5)
        font-weight     600
        text-shadow     0 1px 0 rgba(255,255,255,0.8)
        color           #444
        &:active
          gradient      #a8a8a8, #f1f1f1
          text-shadow   0 -1px 0 rgba(255,255,255,0.8)
        &:active
        &:focus
          shadow        inset 0 1px 0 white\,\
                        0 1px 1px rgba(0, 0, 0, .5)\,\
                        0 0 9px 3px rgba(255,255,255,0.3)
        .button-title
          margin-left   -15px
          line-height   41px
        .icon.octocat
          size            30px, 28px
          padding         0
          margin          6px 0 0 20px
          bg              position, -575px -45px
          vertical-align  top

    input
      size                100%, 100%
      line-height         34px
      border              none
      padding             5px 15px
      font-size           16px
      font-weight         300
      rounded             5px
      shadow              0 1px 1px rgba(0,0,0,.5)
      outline             none
      borderBox()
      &.half
        kalc              width, 50%\-3px
        min-width         0
        fl()
        &:first-child
          margin-right    6px

      &:focus
        shadow            0 1px 1px rgba(0,0,0,.5)\,\
                          0 0 9px 3px rgba(255,187,4,0.44)

  aside
    ul
      size                  100%, 200px
      margin-top            0
      li
        size                100%, 100%
        margin              0
        border              1px solid rgba(255, 255, 255, .2)
        padding             1px
        shadow              0 3px 8px rgba(0, 0, 0, .5)
        rel()
        &:active
          size              auto, 100%
          margin            0
          i
            top             80px
        i
          display           block
          size              40px, 40px
          top               80px
          left              50%
          margin            0 0 0 -20px
          sprite()
          bg                position, -580px 0px
          abs()
        a
        img
          display           block
          size              300px, 200px
      &.large
        height              60px
        margin-top          0
        li
          kalc              width, 50%\-10px
          height            100%
          fl()
          &:first-child
            margin-right    10px
          &:active
            i
              top             10px
          i
            top               10px
            sprite()
          img
          a
            size            100%, 100%


  ul
    size                  100%, 60px
    margin-top            20px
    li
      size                100px, 60px
      margin              0 12px 0 0
      border              1px solid rgba(255, 255, 255, .2)
      padding             1px
      shadow              0 1px 3px rgba(0, 0, 0, .5)
      fl()
      rel()
      &:active
        size              96px, 56px
        margin            2px 14px 0 2px
        i
          top             10px
      i
        display           block
        size              40px, 40px
        top               12px
        left              50%
        margin            0 0 0 -20px
        sprite()
        bg                position, -580px 0px
        abs()
      a
        display           block
        size              100%, 100%
      img
        size              100%, 100%

#content-page-home
  > footer
    size                100%, 200px
    bg                  color, #393630
    bg                  image, url('../images/koding-new-bg.png')
    bg                  repeat, repeat-x
    bg                  position, 0 -900px
    shadow              inset 0 5px 15px rgba(0, 0, 0, .75)

  // hiding action links from homepage
  .kdlistitemview-activity
    .action-link.reply-link
    .comment-actions
    .activity-actions .logged-in
    .activity-actions i
    .comment-container .item-add-comment-box
    time
      hidden()
    .comment-container.commented .kdlistitemview-comment:last-child
      border-bottom     none!important
  .feeder-tabs
    .feeder-header
      line-height       60px
      font-size         20px
      font-weight       300
      border-bottom     none
      gradient          #f8f8f8, #f2f2f2
      text-shadow       0 1px 0 #fff
      // shadow            0 2px 8px rgba(0, 0, 0, .15)
      shadow            inset 0 5px 10px rgba(0, 0, 0, .2)

#home-counter-bar
  padding               30px 0
  text-align            center
  min-height            90px
  bottom                0
  width                 100%
  shadow                inset 0 1px 0 rgba(255, 255, 255, .1)
  gradient              rgba(55, 51, 44, .4), rgba(29, 27, 24, .8)
  abs()
  borderBox()
  > div.kdview:first-child
    max-width           1280px


figure.counter
  display               inline-block
  margin                0 3% 0 0
  &:last-child
    margin-right        0
  > div
    padding             2px
    bg                  color, rgba(0,0,0,.2)
    fl()
    rel()
  h6.title
    font-size           14px
    color               white
    text-transform      uppercase
    text-shadow         0 -1px 0 black
    size                auto, 26px
    line-height         26px
    white-space         nowrap
    font-weight         300
    margin              2px 10px 0 0
    fl()
    // vendor              font-smoothing, antialiased
    // vendor              text-rendering, geometricPrecision
    // abs()
  i
    display             inline-block
    font-family         UbuntuMono//SourceCodePro
    font-size           1.7em
    font-weight         bold
    padding             0 0.13em
    line-height         1.1
    color               rgb(255,255,255)
    gradient            #42403A, #454340
    margin-right        1px
    font-style          normal
    vendor              font-smoothing, antialiased
    vendor              text-rendering, geometricPrecision
    shadow              inset 0 .08em .16em -.08em rgba(0,0,0,.5)
    rel()
    &:last-child
      margin-right      0
    span
      size              100%, 50%
      top               -1px
      left              0
      margin            0
      bg                color, rgba(0,0,0,.1)
      border-bottom     1px solid rgba(0,0,0,.3)
      shadow            0 1px 0 rgba(255,255,255,.1)
      abs()

