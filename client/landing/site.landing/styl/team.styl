@media screen and (max-width : 767px)
  .content-page.Team footer
    hidden()

  .TeamsModal.TeamsModal--login
  .TeamsModal.TeamsModal--create
  .TeamsModal.TeamsModal--groupCreation
    width                   90%
    min-width               0 !important
    margin-top              160px

  .TeamsModal
    > h5
      font-size             14px

    .login-form
      .login-input-view .placeholder-helper
        font-size           16px

    &.TeamsModal--create::after
    &.TeamsModal--domain::after
    &.TeamsModal--groupCreation::after
      left                  50% !important
      margin-left           -76px
      top                   -59px
      bg                    repeat, no-repeat
      r-sprite              'teams', 'signin_alien_mobile'
      abs()

    &.with-avatar.TeamsModal--groupCreation::after
      margin-left           66px
