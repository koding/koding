@import 'lib/core.fn'
@import "nib/gradients"

modalBackground             = #FAFAFA
blueLink                    = #56a2d3
dimmedGray                  = #848484

@css {
/*
Team stylesheet
team.styl
*/
}

body.team #kdmaincontainer #main-tab-view
body.teams #kdmaincontainer #main-tab-view
  height                    auto

// HEADER
.main-header.team
  abs                       0px
  max-width                 100%
  height                    69px
  padding                   0 40px
  z-index                   1

  .koding-header-logo
    left                    auto
    top                     18px

  .hiring-badge
    top                     21px

  nav.full-menu
    margin-top              21px


.content-area-pane.team
.content-area-pane.teams
  -webkit-font-smoothing    antialiased
  -moz-osx-font-smoothing   grayscale

// GENERAL STYLES
.content-page.Team
  overflow                  auto
  z-index                   2
  color                     white
  height                    100%
  bg                        color, #3c3b58
  bg                        image, linear-gradient(-180deg,#3c3c57 11%,#8598be 100%)
  min-height                820px
  borderBox()
  padding-bottom            150px

  > .kdtabview
    overflow                visible

  a, a:hover
    color                   blueLink
    noTextDeco()

  .additional-info
    width                   60%
    max-width               600px
    padding                 50px 0 0 0
    margin                  0 auto
    color                   #fff
    font-size               14px
    line-height             17px
    text-align              center
    rel()
    z-index                 10
    borderBox()

    &.previous-teams
      li
        display             inline-block
        padding             5px
        height              31px

    a.previous-team
      padding               5px 15px
      bg                    color transparent
      color                 #fafafa
      rounded               3px
      border                1px solid #e8e2de
      display               block
      &:hover
        color               blueLink
        bg                  color white

    p
      margin-top            5px
      margin-bottom         10px

    a
      color                 white
      text-decoration       underline

// TEAMS MODAL STYLES
.TeamsModal
  padding                   38px 40px 24px 40px
  width                     480px
  margin                    180px auto 0
  bg                        color modalBackground
  top                       0px
  color                     #434343
  z-index                   3
  rounded                   7px
  text-align                center
  shadow                    0 20px 40px rgba(0,0,0,.2)
  borderBox()
  rel()

  &.with-avatar:after
    hidden()

  &:after
    content                 ''
    r-sprite                teams, alien
    abs()
    top                     -32px
    kalc                    left, 50% \- 40px

  .form-group
    display                 flex
    justify-content         space-between
    borderBox()

    .login-input-view
      padding-right         10px
    .login-input-view:last-child
      padding-right         0

  .login-input-view

    &.validation-error input.kdinput
    input.kdinput.validation-error
      border                1px solid #ff6b5d

  > form
    margin                  40px auto 0

  .TeamsModal-button-link
    color                   #ADADAD
    font-size               14px
    line-height             17px

    img
      rounded               2px
      vertical-align        bottom
      size                  24px 24px

  .TeamsModal-button-separator
    bg                      color, #E8E2DE
    margin                  30px auto
    height                  1px

  p.intro
    font-size               20px
    margin                  -10px auto 0

  > h4
    font-size               27px
    line-height             32px
    color                   #f2778a
    font-weight             normal

  > h5
    font-size               18px
    letter-spacing          .21px
    line-height             27px
    color                   #a59999
    margin                  0 auto

    &.full
      width                 100%
    b
      color                 #3e4f55
      font-weight           600
    strong
      font-weight           600

  p
    width                   361px
    margin                  0 auto
    line-height             23px

    &.full
      width                 auto

  .dim
    color                   #9E9E9E

  #findTeamRecaptcha
    padding-top             0
    bg                      color, transparent

    > div
      margin                0 auto


  // PASSWORD STRENGTH STYLES
  .PasswordStrength
    height                    5px
    line-height               5px
    vertical-align            top
    opacity                   .5
    rel()

    &:after
      abs                     -8px 0 0 0px
      content                 ''
      font-size               10px

    &.bad
    &.weak
    &.moderate
    &.good
    &.excellent
      opacity                 1

    &.bad
      &:after
        color                 #FF6B5D
        content               'very weak'
      span
        width                 20%
        bg                    color #FF6B5D

    &.weak
      &:after
        color                 #FF6B5D
        content               'weak'
      span
        width                 40%
        bg                    color #FF6B5D

    &.moderate
      &:after
        color                 #FBB62B
        content               'good'
      span
        width                 60%
        bg                    color #FBB62B

    &.good
      &:after
        color                 #48BA7D
        content               'very good'
      span
        width                 80%
        bg                    color #48BA7D

    &.excellent
      &:after
        color                 #48BA7D
        content               'excellent'
      span
        width                 100%
        bg                    color #48BA7D

    span
      abs                     0px 0 0 0px
      bg                      color #EAEAEA
      display                 inline-block
      rounded                 4px
      size                    0% 100%
      vendor                  transition, all .177s ease

  // GITLAB STYLES
  .gitlab
    > button.TeamsModal-button
      margin                25px auto !important
      background            #fff
      border                1px solid #d9d9d9
      color                 #999

    div.or
      position              relative
      z-index               1
      font-size             14px
      color                 #BBB
      margin                0 auto

      &:before
        border-top          1px solid #ddd
        content             " "
        margin              0 auto
        right               0
        bottom              0
        width               100%
        z-index             -1

        abs                 50%, 0

      > span
        background          #fafafa
        padding             0 15px
        text-transform      uppercase

  // TEAMS MODAL BUTTONS
  .TeamsModal-button
    margin                    0 auto 21px
    padding                   20px 0 19px 0
    bg                        color, #f2778a
    color                     #fff
    rounded                   4px
    size                      100% 60px
    font-size                 18px
    line-height               21px
    display                   inline-block !important
    float                     none !important
    text-transform            uppercase
    border                    none
    font-weight               600
    letter-spacing            .04em

    &:focus
      border-color          transparent
      shadow                0 0 3px 3px #a8ceff

    &.compact
      height                  24px
      font-size               10px
      line-height             16px
      padding                 4px 7px 0

    &.koding
      .icon
        r-sprite              app 'iconkoding'

    &.gitlab
      .icon
        r-sprite              app 'icongitlab'

    .icon
      display                 inline-block !important
      float                   none !important
      margin                  0 0 0 -30px !important
      abs() !important

  .TeamsModal-button--green
    color                     white
    bg                        color #48BA7D

  .TeamsModal-button--gray
    color                     white
    bg                        color #BDC3C7

  .TeamsModal-button--full
    width                     100% !important

  // TEAMS MODAL CUSTOMIZATIONS
  &.TeamsModal--login
  &.TeamsModal--create
  &.TeamsModal--groupCreation

    > figure
      bg                    color #ddd
      bg                    size cover
      bg                    position, 50% 50%
      border                3px solid white
      margin                -73px auto 20px
      rounded               50%
      size                  64px 64px
      overflow              hidden

  &.TeamsModal--banned
    > h5
      margin                10px auto 50px
      width                 auto
      a
        font-style          italic

    > p
      color                 dimmedGray
      font-style            italic

  &.TeamsModal--findTeam
    h5
      font-size             17px

  &.TeamsModal--recover
    padding-top             5px

// MISC
.recoverConfirmation
  text-align                center
  padding                   10px 0

  .kdnotification-title
  .kdnotification-content
    padding                 0 10px

// UFO BACKGROUND
.ufo-bg
  abs()
  bg                      color, transparent
  bg                      image, url('/a/images/landing/ufo_1600.svg')
  bg                      repeat, no-repeat
  bg                      position, right bottom
  bg                      size, 1051px 528px
  width                   100%
  height                  528px
  bottom                  0
  z-index                 1

.ground-bg
  abs()
  bg                      color, transparent
  bg                      image, url('/a/images/landing/ground_1600.svg')
  bg                      repeat, no-repeat
  bg                      position, center bottom
  bg                      size, 3184px 334px
  width                   100%
  height                  334px
  bottom                  0
  z-index                 1

.footer-bg
  width                   100%
  height                  67px
  bg                      color, #fff
  abs()
  bottom                  0
  z-index                 0


@media screen and (max-width : 1600px)

  .Team--ufo.Team
    .ufo-bg
      bg                      image, url('/a/images/landing/ufo_1200.svg')
      bg                      size, 1051px 528px
      height                  528px

    .ground-bg
      bg                      image, url('/a/images/landing/ground_1200.svg')
      bg                      size, 1614px 260px
      height                  260px


@media screen and (max-width : 1200px)

  .Team--ufo.Team
    .ufo-bg
      bg                      image, url('/a/images/landing/ufo_1200.svg')
      bg                      size, 1051px 528px
      height                  528px

    .ground-bg
      bg                      image, url('/a/images/landing/ground_768.svg')
      bg                      size, 1457px 248px
      height                  248px


@media screen and (max-width : 767px)
  .content-page.Team footer
    hidden()

  .TeamsModal.TeamsModal--login
  .TeamsModal.TeamsModal--create
  .TeamsModal.TeamsModal--groupCreation
    margin-top              160px

  .TeamsModal
    > h5
      font-size             14px

    .login-form
      .login-input-view .placeholder-helper
        font-size           16px

  .expand-menu
    .Team--ufo
      .main-header.team
        height              100%

        nav.full-menu
          a.mobile-trigger
            top             26px

  .Team--ufo.Team
    .main-header.team
      nav.full-menu
        margin-top          0

        a.mobile-trigger
          top               26px

    .TeamsModal--domain:after
      margin-left           0
      kalc                  left, 50% \- 40px, !important

    .ufo-bg
      hidden()

    .ground-bg
      bg                      image, url('/a/images/landing/ground_ufo_375.svg')
      bg                      size, 798px 637px
      height                  637px
