@import "lib/core.fn"

paymentGreen        = #00b156
paymentGrayDarker   = #6f6f6f
paymentGrayDark     = #a7a7a7
paymentGraySoftDark = #d5d5d5
paymentGray         = #e5e5e5
paymentGrayLight    = #e8e8e8
paymentGrayLighter  = #f8f8f8

.has-payment-method-wrapper
  margin-top                10px

  .has-payment-method-label
    margin                  30px 0 30px

  .use-different-card-link
    color                   paymentGrayDark

  .use-different-card-label
    margin                  10px 0 30px


.payment-method-entry-form
  background        paymentGrayLighter
  border            1px solid paymentGray
  padding           0 31px 17px 17px
  rounded           4px

  .kdlabel
    display         block !important
    float           none !important
    margin-top      19px !important
    margin-bottom   3px
    font-size       14px
    color           paymentGrayDarker
    opacity         .99
    text-align      left

  .kdinput
    background      #fff
    border-radius   3px !important
    border          1px solid paymentGray !important
    margin          0
    height          36px !important
    transition      border-color .3s linear

    &.text
      font-size     14px

    &.validation-error
      border-color  #D95F5F !important

  .input-wrapper
    margin          0

  &.american-express .input-wrapper:after
    r-sprite      'pricing', 'american_express'

  &.visa .input-wrapper:after
    r-sprite      'pricing', 'visa'

  &.mastercard .input-wrapper:after
    r-sprite      'pricing', 'mastercard'

  &.discover .input-wrapper:after
    r-sprite      'pricing', 'discover'

  .formline
    margin-left     13px
    fl()

    &.cardnumber
      width         362px

      .input-wrapper:after
        content     ''
        display     block
        right       8px
        top         51px
        width       36px
        height      22px
        z-index     1
        pointer-events none
        abs()

    &.cardcvc
    &.cardmonth
    &.cardyear
      width         64px

    &.cardmonth input
      text-align    center

    &.cardyear input
      text-align    center

    &.cardname
      width         285px

form.cc-form

  input::-webkit-input-placeholder
    letter-spacing          1px
    font-size               24px

  input:-moz-placeholder
    letter-spacing          1px
    font-size               24px

