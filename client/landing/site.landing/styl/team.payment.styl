@import "lib/core.fn"

form.cc-form

  input::-webkit-input-placeholder
    letter-spacing          1px
    font-size               24px

  input:-moz-placeholder
    letter-spacing          1px
    font-size               24px

  .TeamsModal-ccwarning
    bg                      color #F6FCF9
    color                   #989898
    shadow                  0 0 0 1px rgba(0,0,0,.05)
    padding                 15px 40px
    margin                  19px 0 30px -40px
    line-height             1.4em
    width                   100%
    contentBox()
    strong
      display               block
      color                 #42BB7B

  .form-group .login-input-view
    background              transparent

    input
      background            #fff

.cc-form-resetLink a
  display                   block
  padding                   0 0 20px
  font-size                 18px

$disabledOpacity = .5

.cc-form input[disabled=disabled]
  opacity                   $disabledOpacity
  cursor                    not-allowed
  & ~ .placeholder-helper
    opacity                 $disabledOpacity
