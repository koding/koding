footer.main-footer
  padding               56px 0
  font-weight           400
  background            #F0F0F0
  border-top            1px solid #E8E8E8
  height                auto

  .inner-container
    max-width           1290px
    padding             0px 45px
    margin              0 auto
    display             block
    position            relative
    borderBox()

  .footer-block
    width               50%
    font-size           0
    borderBox()
    fl()
    &:last-child
      text-align        right

    a
      vertical-align     middle
      font-size          14px
      line-height        22px
      color              #747474
      display            inline
      margin-right       12px
      noTextDeco()

  a.social
    display             inline-block
    margin-right        8px
    size                32px, 32px
    background          #cacaca
    rounded             50%
    text-align          center
    padding             7px 0 0 0
    borderBox()

    &:after
      content           ''
      display           inline-block

    &.tw
      &:hover
        background      #55acee

      &:after
        r-sprite        app 'social_tw'

    &.fb
      &:hover
        background      #3b5998

      &:after
        r-sprite        app 'social_fb'


.two-factor-code-modal

  .closeModal
    hidden()

  .kdmodal-title span.title
    rel()
    top                     -6px
    font-size               14px !important
    padding                 1px 0

    a
      noTextDeco()
      abs()
      right                 0
      color                 #555
      border-bottom         1px dotted

  .kdmodal-content
    overflow                visible

    .kdbutton.solid.green
      size                  100% auto
      bg                    color, #1aaf5d

      .button-title
        font-weight         600

@media screen and (max-width : 767px)

  .main-header.team
    top                     0 !important

  .koding-header-logo
    top                     32px
