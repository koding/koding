// .kdmodal.resurrection

.fbauth-failed-modal
  &.kdmodal
    bg                    color #FAFAFA
    rounded               3px
    shadow                0 12px 19px rgba(0,0,0,.50)
    border                1px solid #979797
    position              fixed !important

    .kdmodal-inner
      background          #fafafa
      margin              15px 25px 25px

      .close-icon
        r-sprite          app, "modal_close_icon"
        top               10px
        right             10px

        &:hover
          r-sprite          app, "modal_close_icon"

    .kdmodal-title
      cursor              move
      line-height         30px !important
      font-weight         400
      color               #48BA7D !important
      margin-bottom       15px !important
      padding             0 !important
      background          none !important
      border              none !important

      .title
        font-size         20px !important

    .kdmodal-content
      margin              15px 0 0 0 !important
      padding             0 !important
      font-size           16px !important
      line-height         22px !important

      .modalformline
        padding           0
        overflow          visible

        &:last-child
          border-bottom   1px solid transparent

      .avatarview
        cite.staff
          hidden()


    .kdmodal-buttons
    .formline.button-field
      margin              24px 0 0 0 !important
      background          none !important
      border-top          none !important
      height              auto !important

      .kdbutton
        height            37px
        fr()

        .button-title
          line-height     36px !important

        &.to-left
          margin-left     0
          margin-right    12px
          fl()

  &.kdoverlay
    fix()

    &.second-overlay
      z-index             10001


.kdmodal
  bg                    color white
  rounded               6px
  shadow                0 0 32px rgba(0,0,0,.46)
  position              fixed !important

  .kdmodal-inner
    margin              45px

    .close-icon
      r-sprite            app, "modal_close_icon"
      top               14px
      right             14px

      &:hover
        r-sprite          app, "modal_close_icon"

  .kdmodal-title
    cursor              move
    line-height         normal !important
    font-weight         400
    color               #50595a !important
    margin-bottom       15px !important
    padding             0 !important
    background          none !important
    border              none !important

    .title
      font-size         24px !important

  .kdmodal-content
    margin              15px 0 0 0 !important
    padding             0 !important
    font-size           16px !important
    line-height         22px !important

    .ban
      color             #1aaf5d

    .modalformline
      padding           0
      overflow          visible

      &:last-child
        border-bottom   1px solid transparent


  .kdmodal-buttons
  .formline.button-field
    margin              24px 0 0 0 !important
    background          none !important
    // looks better i think w/o - SY
    // border-top          2px solid #f3f4f5 !important
    height              73px !important

    .kdbutton
      fr()

      &.to-left
        margin-left     0
        margin-right    12px
        fl()

      &:not(.solid)
        size            auto, 45px
        background      none
        border-width    3px
        border-style    solid
        margin          22px 0 0 12px !important
        padding         0 24px !important
        rounded         23px
        font-size       18px
        text-transform  uppercase
        font-family     'Proxima Nova'

    .modal-clean-red
      border-color      #e94b35
      color             #e94b35

    .modal-clean-green
      border-color      #1aaf5d
      color             #1aaf5d

    .modal-cancel
      border-color      #bdc3c7
      color             #bdc3c7

.kdoverlay
  fix()




