footer.main-footer
  padding               56px 0
  font-family           openSansFamily
  font-weight           400
  background            #F0F0F0
  border-top            1px solid #E8E8E8

  .inner-container
    max-width           1290px
    padding             0px 45px
    margin              0 auto
    display             block
    position            relative
    borderBox()

  .footer-block
    width               50%
    font-size           0
    borderBox()
    fl()
    &:last-child
      text-align        right

    a
      vertical-align     middle
      font-size          14px
      line-height        22px
      color              #747474
      display            inline
      margin-right       12px
      noTextDeco()

  a.social
    display             inline-block
    margin-right        8px
    &.tw
      r-sprite          home 'social-tw'
    &.fb
