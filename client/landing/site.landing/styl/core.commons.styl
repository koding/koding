@import "lib/core.fn"

@css {
/*
Commons stylesheet
resurrection.commons.styl
*/
}

html.app
  .main-header
    nav
      margin            -37px 18px 0 0

// When app class is added to html tag
// layout becomes 100% width and height
// so that apps can control their own
// scrollviews and add their chrome frames
html
body
  height            100%

body
  font-family       mainFontFamily
  font-weight       400

  &.noscroll
    overflow        hidden

  &.logged-in
    .main-header
      nav
        hidden()

  > .invisible
    display         none

input
textarea
button
  font-family               mainFontFamily

.kdview
  overflow                  visible

.login-input-view
  border                    1px solid #d9d9d9
  rounded                   3px
  margin                    0 0 17px 0
  bg                        color white
  margin                    0 auto 21px
  borderBox()
  min-height                62px

  div.kdinput.text
  input.kdinput.text
    border                  none
    font-size               18px
    letter-spacing          .31px
    line-height             22px
    height                  60px
    color                   #4a4a4a !important
    text-align              left
    padding                 24px 16px 14px
    margin                  0
    rounded                 3px
    font-weight             400
    bg                      color, transparent
    borderBox()
    &:focus
      shadow                none
      border-color          #A8CEFF
    &::-webkit-input-placeholder
      color                 #ccc
      font-weight           300
    &::-moz-placeholder
      color                 #ccc
      font-weight           300

  .placeholder-helper
    abs                     9px 0 0 17px
    letter-spacing          .2px
    color                   #989898
    font-size               12px
    text-align              left
    z-index                 1
    opacity                 1


#kdmaincontainer
  width             auto

#main-panel-wrapper
  min-height          100%
  z-index             1
  bg                  color, white
  vendor              transition, box-shadow .177s ease

#main-tab-view
  overflow            visible
  height              auto

.main-header
  margin                    0
  size                      100% 55px
  z-index                   1000
  overflow                  visible
  max-width                 1290px
  shadow                    none
  padding                   0 45px
  abs                       48px 0 0 50%
  vendor                    transform, translateX(-50%)
  z-index                   15
  borderBox()

  .inner-container
    bg                      color, transparent

  .koding-header-logo
    margin                  0 14px 0 0
    size                    auto auto
    bg                      color transparent
    abs()
    fl()

    .main-header-logo
      width                 95px

  nav.full-menu
    line-height             18px
    fr()

    a
      font-size             14px
      margin-right          40px
      color                 white
      padding-bottom        1px
      noTextDeco()

      &.active
        font-weight     600
        border-bottom   1px solid white

      &:last-child
        margin-right    0
        visibility      visible

.koding-header-logo
  z-index           1


#kdmaincontainer.scale
    vendor            animation, shrink 1s ease-out
    vendor            animation-iteration-count, 1
    vendor            transform-style, preserve-3d
    vendor            transform, scale(0)



.kdnotification
  a
    color               inherit


validationRed = #f2778a

.kdtooltip.validation-error
.kdtooltip.validation-error.just-text
  min-width                   none
  max-width                   300px
  min-height                  none

  div.wrapper
    bg                        color, validationRed
    shadow                    none
    padding                   10px 15px
    min-height                auto
    min-width                 auto
    rounded                   4px
    p
      font-size               14px
      font-weight             600
      text-align              center
      line-height             18px
      -webkit-font-smoothing  antialiased

  &.placement-right
    &:after
      border-right-color    validationRed

  &.placement-left
    &:after
      border-left-color     validationRed

  &.placement-bottom
    &:after
      border-bottom-color   validationRed

  &.placement-top
    &:after
      border-top-color      validationRed

    &.direction-left
      margin-left           0

    &.direction-left:after
      right                 9px

.content-page
  margin                    0 auto
  size                      auto auto

  > .kdtabview
    height              100%
    font-size           14px
    fl()


//
// SOLID BUTTON STYLES
//

.kdbutton.solid
  bg                   color #3c4043
  border               none
  rounded              3px
  padding              0 20px
  margin               0
  height               55px
  borderBox()
  span.button-title
    padding            0
    color              rgba(227, 227, 227, 0.8)
    font-size          18px
    letter-spacing     .6px
    line-height        55px
    text-rendering     geometricPrecision
  span.icon
    margin             18px 0 0 0
  &:hover
    bg                 color #4A4E52
  &:active
    bg                 color logoBg
    span.button-title
      color            white
  &:focus
    shadow             0 0 10px -2px logoBg
  &.icon-only
    span.icon
      margin           0

.kdbutton.solid.green
  bg                   color #48BA7D
  span.button-title
    color              white
  &:hover
  &:active
  &:focus
    bg                 color #2DBEA1
    span.button-title
      color            white
  &:focus
    shadow             0 0 10px -2px logoBg

.kdbutton.solid.compact
  height               30px
  padding              0 16px
  span
    line-height        30px
    font-size          12px

.kdbutton.compact.light-gray
  bg                   color, transparent !important
  border               2px solid #CBCBCB
  span
    color              #858585 !important
    line-height        26px

.kdbutton.solid.yellow
  bg                   color #ff9f00
  span.button-title
    color              #ac4a00
  &:hover
  &:active
  &:focus
    bg                 color #ac4a00
    span.button-title
      color            #ff9f00
  &:focus
    shadow             0 0 10px -2px #ff9f00

.kdbutton.solid.clear
  bg                   color transparent
  rounded              0
  span.button-title
    color              #444
  &:hover
  &:active
  &:focus
    background         none
    shadow             none
    span.button-title
      color            #222

.kdbutton.solid.light-gray
  bg                   color #C0C0C0
  span.button-title
    color              white
  &:hover
  &:active
  &:focus
    bg                 color #a0a0a0
    span.button-title
      color            whitesmoke
  &:focus
    shadow             0 0 10px -2px #ff9f00

.kdbutton.solid.small
  margin              0
  padding             0 25px
  size                auto 26px
  rounded             10px
  text-align          center
  span.button-title
    font-size         13px
    line-height       1
  span.icon
    margin            2px 0 0 0

.kdbutton.solid.mini
  margin              0
  padding             0 10px
  size                auto 20px
  rounded             6px
  text-align          center
  span.button-title
    font-size         12px
    line-height       1
  span.icon
    margin            2px 0 0 0

.kdbutton.solid.medium
  margin              0
  padding             0 25px
  size                auto 40px
  text-align          center
  span.button-title
    font-size         14px
    font-weight       400
    line-height       42px
  span.icon
    margin            12px 12px 0 0

.kdbutton.solid.red
  bg                   color #D75B5B
  span.button-title
    color              white
  span.icon
    margin             18px 0 0 0
  &:hover
  &:active
  &:focus
    bg                 color #e14a35
  &:focus
    shadow             0 0 10px -2px logoBg

  &.shadowed
    shadow             0 2px 0 0 #a33e2f
    .button-title
      text-shadow      0 -1px 2px rgba(0, 0, 0, .75)

.kdbutton.w-loader.loading
  .button-title
  .icon
    opacity            0

  .kdloader
    size               auto, auto
    vendor             transform, translateX(-50%) translateY(-50%)


