          &.iron
            r-sprite          'sponsors', 'iron'

          &.turkcell
            r-sprite          'sponsors', 'turkcell'

          &.digitalocean
            r-sprite          'sponsors', 'digitalocean'

          &.deviantart
            r-sprite          'sponsors', 'deviantart'

          &.baincapital
            r-sprite          'sponsors', 'baincapital'

          &.eniac
            r-sprite          'sponsors', 'eniac'

      h1
        font-size         24px
        line-height       32px

      h2
        font-size         22px
        margin-bottom     16px
        line-height       28px

      h3
        font-size         14px
        line-height       19px

      h4
        b
          font-size       30px

      .form-wrapper
        width             100%
        margin-bottom     10px

        section
          width           100%

          &.logged-in
            margin-top    40px

            .kdlabel a
              margin-bottom 4px

          > div
            width         100%
            margin-bottom 20px

          .submit
            width         100%
            margin-bottom 0

        &.logged-in
          margin-top      85px

    .counters
      height              auto
      position            static
      line-height         28px
      padding             16px 25px
      margin              0
      borderBox()

      span
        margin            0

      span:after
        content           ''
        display           block

    section.content
      padding             32px 0 0

      .sidebar
        display           none

      .counters
        padding           18px 0 0
        height            auto
        line-height       27px
        top               -146px
        borderBox()

        span
          margin-right    0

        span:after
          content         ""
          display         block

      article
        padding           24px

        h4
          font-size       21px
          line-height     26px
          padding         10px 10px 10px 26px

        h5
          font-size       16px
          padding         10px 10 10px 26px

        p
          padding         16px 0 0
          font-size       16px
          line-height     24px

      article.judges
        padding           24px

        > div
          width           100%
          margin-left     0

        .judge
          max-width       150px
          margin          0 10px 32px 0

      aside.partners
        position          static
        width             100%
        padding           34px
        margin-top        32px
        text-align        left
        borderBox()

        h4
          font-size       21px
          line-height     26px
          padding         10px 10px 10px 26px
          margin-left     -35px

          & ~ h4
            margin-top    24px

    footer
      line-height         25px
      padding             60px 25px
      border-top          1px solid #dedede
      background          rgba(0,0,0,.05)

