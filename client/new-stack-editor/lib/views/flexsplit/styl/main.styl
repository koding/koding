.flex-split

  overflow                  hidden
  dFlex()

  &.vertical
    flex-flow               row nowrap
    > .flex-resizer
      width                 4px
      cursor                ew-resize

  &.horizontal
    flex-flow               column nowrap
    > .flex-resizer
      height                4px
      cursor                ns-resize

  .flex-resizer
    flex                    none
    z-index                 100
    dFlex()

  .flex-view
    overflow                hidden
    borderBox()
