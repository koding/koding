@import "../../Framework/src/themes/default/kdfn"
@import "../../Core/styl/appfn"

@css {
/*
Vendors/Providers stylesheet
computeproviders.styl
*/
}

.provider-modal

  .kdmodal-inner
    margin           15px
    // .kdmodal-buttons
    //   display        none

.provider-base-view

  height             530px

  .provider-mainview
    background       white

  .provider-split
    background       white
    .panel-1
      border-left    1px solid #eee

  .welcome-pane
    text-align      center
    padding         50px
    box-sizing      border-box

    h1
      font-size     20px
      font-weight   400
      margin        10px
    p
      line-height   20px
      margin        5px

  .provider-view

    overflow        hidden  !important

    p
      line-height   20px
      border-bottom 1px solid #eee
      padding       10px

    .kdloader
      left          50%
      top           50%
      margin        -20px 0 0 -20px
      abs()

    .kdselectbox
      width           97%
      margin          10px

      span.title
        font-weight   600
        font-size     16px

    .content-view
      overflow-y      scroll

    .form-view
      z-index         102
      background      white
      left            50%
      width           460px
      margin-left     -230px
      top             -120%
      padding         10px

      box-shadow      0 0 10px rgba(0,0,0,0.3)
      border-radius   0 0 3px 3px
      vendor          transition, top .3s ease
      abs()

      &.in
        top         0

      .button-field
        height      43px !important

  .instance-list

    height            auto
    padding           10px
    border-top        1px solid #eee
    margin-bottom     120px

    .cloud-item

      margin          0 0 10px
      border-bottom   1px solid #eee
      width           552px
      cursor          default
      borderBox()

      h2
        font-weight   400

      button
        right         5px
        top           5px
        abs()

  .provider-list

    .kdlistitemview
      cursor         pointer
      height         50px
      border-bottom  1px solid #ddd

      &.Amazon
        background   url("../images/vendors/amazon.png")
        background-size auto 40px
        background-repeat no-repeat
        background-position 10px 5px

      &.Koding
        background   url("../images/vendors/koding.png")
        background-size auto 40px
        background-repeat no-repeat
        background-position 10px 5px

      &.DigitalOcean
        background   url("../images/vendors/digitalocean.png")
        background-size 180px
        background-repeat no-repeat
        background-position 10px 12px

      &.Rackspace
        background   url("../images/vendors/rackspace.png")
        background-size 180px
        background-repeat no-repeat
        background-position 10px 4px

      &.EngineYard
        background   url("../images/vendors/engineyard.png")
        background-size auto 40px
        background-repeat no-repeat
        background-position 10px 5px

      &.Google
        background   url("../images/vendors/google.png")
        background-size 200px
        background-repeat no-repeat
        background-position 0 1px

      &:hover
        background-color  #eee

      &.selected
        background-color  #eee

  .new-vm-selection
    padding            20px
    width              550px
    margin             0 auto

  .add-vm-box
    background         #f3f7fa
    size               170px, 220px
    padding            25px
    color              #50595a
    rounded            2px
    borderBox()
    fl()

    &~.add-vm-box
      margin-left      18px

    &.passive
      opacity          .3

    &.selected
      shadow           inset 0 0 0 3px rgba(17, 175, 94, .4)


    h3
      line-height      24px
      display          block
      border-bottom    1px solid #d7dcdf
      font-size        16px
      font-weight      500
      padding          6px 0 12px

      cite
        display        inline-block
        size           24px, 24px
        line-height    24px
        text-align     center
        color          #fff
        background     #646c6d
        rounded        50%
        font-size      12px
        font-weight    200
        margin         0 0 0 6px

    ul
      margin           20px 0 0
      font-weight      200
      line-height      34px
      font-size        14px

      strong
        font-weight    500
        font-size      16px

  h5.coming-soon-title
    font-size         22px
    font-weight       400
    line-height       220px
    left              300px
    top               -220px
    text-shadow       0 0 2px white
    color             rgba(0, 0, 0, .75)
    position          relative

.computeplan-modal

  bg                    color, #E7E7E7
  min-height            134px

  .kdmodal-inner
    margin              0
    bg                  color, #E7E7E7

  .kdmodal-content
    text-align          center

  .kdbutton
    rounded             4px !important
    bg                  color, #4EA04C !important
    height              40px !important
    &:focus
      vendor            box-shadow, none !important

  .footer
    bg                  color, #DCDCDC
    font-size           14px
    color               #5E5E5E
    padding             25px 30px
    rounded             0 0 6px 6px

  .cp-footer
    font-size           14px
    background          #2C2C2C
    color               #42B53A
    text-decoration     underline
    font-weight         bold
    padding             10px 25px
    box-sizing          border-box
    height              65px
    margin-top          14px
    rounded             0 0 3px 3px
    cursor              pointer
    line-height         21px

  &.loading

    .closeModal
      display           none

    .kdloader
      margin-top        30px


  &.free-plan

    .kdmodal-content

      .message
        font-size         14px
        font-weight       bold
        margin-top        10px
        line-height       20px
        color             #373737
        padding           5px
        borderBox()

      .custom-link-view
        font-size         14px
        font-weight       bold
        color             #4ea04c
        bg                color #D8D8D8
        display           block
        margin-top        15px
        padding           15px 30px 20px
        rounded           0 0 6px 6px

  &.paid-plan

    bg                    color, #C8C8C8

    .kdmodal-inner
      bg                  color, #C8C8C8

    strong
      font-weight         bold

    .warn
      strong
        color             #F15E67 !important

    .custom-link-view
      color               #3A854A
      padding             0 45px
      display             block
      font-weight         700
      line-height         16px

    .container

      font-size           12px
      padding             0 7px
      overflow            hidden
      borderBox()

      .modal-title
        font-size         14px
        color             #6E6865
        padding           0 0 13px 0

      button
        margin            24px 0 21px
        width             284px
        font-weight       bold

        &[disabled=disabled]
          background      #A3A3A3 !important

          .button-title
            color         #eee

    .storage-container

      padding             10px 0 18px
      bg                  color, #E4E4E4
      border-radius       5px
      font-size           12px
      color               #6E6865

      .storage-title
        font-variant      small-caps
        font-weight       700
        margin            1px 0 40px
        font-size         17px


    .storage-slider

      margin              18px 18px 16px
      height              6px
      background-image    none
      border              none
      background          white
      box-shadow          0px 1px 2px inset

      .bar

        background-image  none
        box-shadow        none

      .handle

        border-radius     30px
        background-image  none
        border            none
        box-shadow        none
        background        #1BCA7F
        margin-top        -7px
        size              19px, 19px
        text-decoration   none
        font-weight       normal
        font-size         12px
        color             #403D3D
        box-shadow        0px 1px 1px #444;

        .handle-label
          margin-top      -23px
          margin-left     -7px

        &:active
          color           #403D3D

        &:after
        &:before
          display         none


      .sliderbar-label

        top               0
        color             rgba(0,0,0,0)
        noTextSelection()

        &:after
          height          2px
          background      #999
          margin-bottom   2px