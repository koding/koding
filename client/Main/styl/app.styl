@keyframes pulse
  0%
    opacity .5
  50%
    opacity 1
  100%
    opacity .5

@keyframes pulse-to-fade-out
  0%
    opacity 1
  100%
    opacity 0

@-webkit-keyframes shrink
  0%
    -webkit-transform       scale(1)
  70%
    -webkit-transform       scale(1)
  100%
    -webkit-transform       scale(0)

@-moz-keyframes shrink
  0%
    -moz-transform       scale(1)
  70%
    -moz-transform       scale(1)
  100%
    -moz-transform       scale(0)

@keyframes fade-in-out
  0%
    opacity      0
  16%
    opacity      1
  84%
    opacity      1
  100%
    opacity      0

