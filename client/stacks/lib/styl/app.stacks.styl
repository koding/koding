@css {
/*
Stacks main styles
*/
}

.AppModal.AppModal--admin

  &.StackCatalogModal
    &.StackTemplatesView
      vendor                transition, all .2s ease
      border-radius         0

    .fullscreen-button
      .button-title::before
        content             'FULLSCREEN'

    &.fullscreen
      left                  0 !important
      top                   0 !important
      width                 100% !important
      height                100% !important

      .fullscreen-button
        .button-title::before
          content           'EXIT FULLSCREEN'

      .kdmodal-content
        margin-top          0 !important

      .AppModal--admin-tabs
        padding-left        0

      .define-stack-view
        > .kdscrollview
          height            calc(100% \- 80px)

      .kdmodal-title
      .breadcrumb
      .stack-editor-footer
      .AppModal-nav
      .close-icon
        hidden()

    .kdtabpaneview
      &.my-stacks
        padding-top         40px
        height              calc(100% \- 40px)

        .no-item-found
          abs()
          top               0
          width             719px
          text-align        center

        .kdscrolltrack
          &.vertical
            right           -3px

        .kdlistview-default
          &.multi-stack
            width           calc(100% \- 10px)

  .kdcustomscrollview
    styleScrollBars         rgba(0, 0, 0, .15)

  .kdmodal-inner
    height                  calc(100% \- 40px)
    rel()

  .kdmodal-content
    width                   100%
    height                  calc(100% \- 45px)

  form
    .formline
      padding               0 17px 0 0
      margin                0 0 16px
      borderBox()

      .input-wrapper
        margin              0

      &.button-field
        clear               both
        border              none
        margin-top          6px

  .kdlabel
    font-size               14px
    color                   #8D8D8D
    float                   none
    line-height             19px
    margin                  0 0 7px
    font-weight             200

  .kdinput.text
    rounded                 3px
    background              #fff
    border                  1px solid #C9C9C9
    padding                 5px 13px
    font-size               14px
    line-height             19px
    color                   #4C4C4C
    font-weight             600
    opacity                 .99
    margin                  0 20px 0 0

    &.validation-error
      border-color          #f13a18

  .lazy-loader
  .kdloader
    text-align              center
    padding                 20px 0

  .loading-text
    text-align          center

  .kdtabpaneview

    &.invitations

      .invitations-tabs
        overflow          visible

      .listview-wrapper > .kdscrollview
        padding-right     34px
        kalc              height, 100vh \- 73px
        kalc              width, 100% \+ 34px
        borderBox()

      .button-bar
        size            auto, auto
        margin          18px 0 0 0
        fr()

        .show-resolved
          size          auto, auto
          padding       3px 18px 0 0
          fl()

          .kdlabel
            fl()

          .kdinput
            margin     1px 0 0 6px
            fr()

        .kdbutton
          fl()

// outline button styling
.AppModal--admin

  .outline.kdbutton
    background              none
    border                  2px solid #4a4e52

    &:active
      span
        color               #4a4e52

    span
      color                 #4a4e52
      line-height           26px

    &.red
      border-color          #e14a35

      span
        color               #e14a35

      &:hover span
        color               #FFF

.AppModal--admin

  .no-item-view
    text-align              center
    margin-top              70px
    font-size               15px
    color                   #a1a1a1

  .kdbutton.compact
    .kdloader canvas
      margin-top            5px

  .define-stack-view

    .kdtabhandle-tabs
      width                 100%

      .kdtabhandle
        max-width           250px !important
        margin-top          0
        top                 1px
        border              1px solid transparent

    .providers
      .text.header
        margin-bottom       15px

    .buttons
      text-align            right

    .credential-list
      .credential-item
        .inuse-tag
          margin-top        -10px

// stack settings styling
.AppModal--admin .stacks

  .text
    font-size               14px

    &.header
      color                 #02A74D
      font-size             17px
      // font-family           adelle

      margin-bottom         10px

  .kdloader
    padding                 0

  .main-loader
    top                     42%
    height                  auto
    width                   100%
    text-align              center
    abs()

    .text
      margin-top            10px


  button.solid.compact.nav
    margin-left             10px

    &[disabled]
      opacity               .4

    &.prev
      right                 80px

  form
    .formline
      padding               0

  .no-stack-found
    .text
      margin-bottom         10px

  .providers
    display                 flex
    display                 -webkit-flex
    flex-flow               row wrap
    -webkit-flex-flow       row wrap
    margin                  20px 0 30px

      .button-title
        display             none

      &.selected
        border-color        green

      &[disabled]
        background          #EEE
        opacity             .5
        vendor              filter, grayscale(100%)

      &.github
        bg image,           url("/a/images/vendors/github.png")
        bg size,            auto 100px
        bg position,        50px -2px

      &.bitbucket
        bg image,           url("/a/images/vendors/bitbucket.png")
        bg size,            auto 100px
        bg position,        47px -3px

      &.aws
        bg image,           url("/a/images/vendors/amazon.png")
        bg size,            auto 40px
        bg position,        38px 22px

      &.koding
        bg image,           url("/a/images/vendors/koding.png")
        bg size,            auto 40px
        bg position,        26px

      &.digitalocean
        bg image,           url("/a/images/vendors/digitalocean.png")
        bg size,            180px
        bg position,        7px 33px

      &.rackspace
        bg image,           url("/a/images/vendors/rackspace.png")
        bg size,            180px
        bg position,        8px 25px

      &.engineyard
        bg image,           url("/a/images/vendors/engineyard.png")
        bg size,            auto 40px
        bg position,        25px 28px

      &.google
        bg image,           url("/a/images/vendors/google.png")
        bg size,            200px
        bg position,        0 23px

  .top
    display                 flex
    display                 -webkit-flex
    margin-bottom           10px

    .text.intro
      margin                auto

    button.action
      margin                auto
      margin-left           4px
      margin-top            6px
      min-width             162px


  button
    &[disabled]
      opacity               .5

  .kdformview
    margin-top              20px

    .kdlabel
      line-height           39px
      min-width             160px
      fl()

  .step-creds
    height                  100%

    .kdformview
      height                100%
      border-bottom         none
      overflow              auto

      .advanced-field
        display             none

      &.in-advanced-mode
        .advanced-field
          display           block

    .listview-wrapper
      .kdscrollview
        height              calc(100% \- 30px)

  &.form-open
    .listview-wrapper
      display               none


  .kdscrollview > .define-stack-view
    overflow                hidden

    > .kdscrollview
      height                calc(100% \- 193px)

  .kdcustomscrollview main .define-stack-view
    height                  calc(100% \- 150px)

  .kdtabpaneview.stack-template
    height                  calc(100% \- 43px)


  .stack-editor-footer
    height                  90px
    background              #FFF
    border                  1px solid #e4e4e4
    border-top              none
    margin-bottom           25px
    rounded                 0 0 4px 4px

    .section
      size                  50%, 90px
      overflow              hidden
      fl()
      borderBox()

      &:last-child

        border-left         1px solid #e4e4e4

        .icon
          r-sprite          'admin', 'manual'

      .icon
        r-sprite            'admin', 'invite'
        display             inline-block
        margin              30px 30px 0 30px
        fl()

      .text
        fl()
        margin-top          23px

      p, a
        font-size           16px
        color               #A8A1A1
        line-height         23px
        font-weight         300

      a
        text-decoration     underline


  .edit-mode

    .step-define-stack
      margin-top            -20px

    .header.title, .description
      hidden()

  .steps-view
    display                 flex
    display                 -webkit-flex
    margin-bottom           30px

    cite.vline
      size                  100%, 1px
      border-top            1px solid #BDBDBD
      left                  0
      top                   20px
      abs()

    div
      width                 300px
      margin                auto
      text-align            center

      .step
        size                40px, 40px
        left                -20px

        color               white
        font-size           20px
        font-family         adelle
        text-align          center
        border-radius       40px
        background-color    #BDBDBD

        padding-top         8px
        margin-left         50%

        borderBox()
        rel()

      .title
        width               auto
        margin-top          5px
        color               #BDBDBD

      &.selected
        .step
          background        #02A74D
        .title
          color             #02A74D

  .repo-listview
    margin-top              20px
    height                  calc(100% \- 60px)

  .select-view

    display                 flex
    display                 -webkit-flex

    margin-top              20px
    borderBox()

    .kdselectbox
      min-width             130px
      padding-top           2px
      border-radius         3px
      borderBox()

      .arrows
        top                 12px

    div, input, button
      margin                auto !important
      margin-right          10px !important
      height                40px
      min-width             80px

    button
      margin-right          0 !important


.AppModal--admin .stacks-v2

  .credential-list
    .credential-item
      &.failed
        .buttons
          top               26px !important

    .buttons
      width                 400px

  .custom-variables

    &.kdtabhandle.custom-variables.notification
      b
        rel()
        left                -10px

    .indicator
      size                  18px, 18px
      color                 white
      bg                    color, #F76E6E
      text-align            center
      font-size             11px
      line-height           18px
      font-weight           200
      rounded               18px
      vendor                transition, top .2s ease
      abs                   66px 10px 0 0

      &.in
        top                 11px

      &.red
        bg                  color, darkred

  .readme
    .editor-view
      rounded               4px 4px 0 0

  .readme
    .preview-button
      bg                    color, white !important
      z-index               13
      bottom                0
      right                 15px
      abs()

  .readme
  .custom-variables
    > .kdview
      padding-right         0

  .message-view
    font-size               14px
    height                  50px

    pre
      display               inline
      background-color      #eee
      font-size             12px
      padding               2px 3px
      border                1px solid #ddd
      rounded               2px


  .step-define-stack

    > .kdbutton
      z-index               14

    .editor-view
      rounded               4px 4px 0 0

    .showlogs-button
    .template-preview-button
    .fullscreen-button
      z-index               13
      right                 0
      bottom                0
      margin                0 15px 15px 0
      bg                    color, white !important
      abs()
      &:focus
        vendor              box-shadow, none

    .template-preview-button
      right                 78px

    .fullscreen-button
      right                 175px

  .kdview.credential-status
    width                   200px
    line-height             49px
    font-size               13px
    text-align              right
    right                   10px
    top                     0
    z-index                 1
    abs()

    .link
    .message
      display               inline-block

    .link
      color                 #02A74D
      text-decoration       underline
      cursor                pointer

    .icon
    .kdloader
      width                 8px
      display               inline-block
      margin-right          10px

    .icon
      &.not
        r-sprite            account, 'cross_8'
      &.verified
        r-sprite            account, 'check_8'

  .kdview.output
    bottom                  0
    vendor                  transition, height .2s ease
    background-color        rgb(250, 250, 250)
    border-radius           0 0 2px 2px
    z-index                 15
    height                  0 !important
    rounded                 0 0 4px 4px
    borderBox()
    abs()

    &.raise
      height                calc(70% - 33px) !important
      border-top            1px solid #e4e4e4

    pre.output-view
      height                auto
      margin                0 10px
      white-space           pre-wrap

    .kdlabel
      line-height           49px
      text-indent           17px
      margin                0


.kdmodal.content-modal
  overflow                  auto
  .kdmodal-content
    font-size               14px !important

.stack-template-list
  height                    auto

