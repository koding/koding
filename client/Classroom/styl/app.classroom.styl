@import "./kdfn"
@import "./client/stylus/appfn"

@css {
/*
  Classroom stylesheet
  app.activity.styl
*/
}

.classroom-app-view
  background                #EFEFEF
  vendor                    transition, left .4s ease-in-out
  .inner-header
    z-index                 10001
    .chapters, .information
      size                  21px, 22px
      margin-right          5px
      top                   9px
      border                none
      fr()
      pointer()
      sprite()
      bg                    position, 0 -477px
    .information
      bg                    position, -260px -437px
  .panel-container
    kalc                    height, 100% \- 38px, 100%
  .container
    background              url('../images/bg/blurred/4.jpg')
    height                  320px
    shadow              0 0 700px rgba(255, 255, 255, .5) inset
  .banner
    margin                  0 auto
    size                    1280px, 320px
    color                   #FFF
    position                relative
    h1
      font-weight           bold
      font-size             68px
      text-shadow           2px 2px 3px rgba(0, 0, 0, .4)
      size                  500px, 240px
      line-height           240px
      margin-left           120px
    h2
      margin-left           125px
      font-size             20px
      position              relative
      text-shadow           1px 1px 1px rgba(0, 0, 0, .2)
      top                   -80px
    img
      top                   60px
      position              absolute
      right                 120px
  .courses
    text-align              center
    .title
      font-size             22px
      font-weight           600
      margin-bottom         30px
    .no-related-course, .no-enrolled-course
      font-size             14px
      font-weight           600

  .progress-container
    margin                  0 -20px
    height                  4px
    bottom                  0
    abs()
  .progress-bar, .completed-chapter
    height                  4px
    background              #598400
  .completed-chapter
    position                relative
    margin                  0 -20px
    height                  4px
    top                     5px

  .not-started-yet
    font-weight             bold
    font-size               26px
    width                   100%
    text-align              center
    text-shadow             1px 1px 1px rgba(0, 0, 0, .3)
    text-transform          uppercase
    p
      margin                300px 0 20px
    .cupid-green
      width                 190px
      padding               10px 0 11px 0
      font-size             13px
    .clean-gray
      size                  190px, 37px
      margin-right          20px
      font-size             13px

  .course-import-button
    margin                  -20px 0 0 1010px
    font-size               13px

