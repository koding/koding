{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"title": "Koding",
	"description": "This is not koding",
	"definitions": {
		"Machine": {
			"type": "object",
			"title": "Machine",
			"description": "Machine represents a registered Account's Machine Info",
			"properties": {
				"Id": {
					"description": "The unique identifier for a Machine",
					"type": "number",
                    "format": "int64",
					"minimum": 1,
					"propertyOrder": 10
				},
				"Username": {
					"description": "Username is the user name of the machine",
					"type": "string",
					"minLength": 4,
					"maxLength": 20,
					"propertyOrder": 20
				},
				"Owner": {
					"description": "Owner return if the machine's username is owner or not.",
					"type": "boolean",
					"propertyOrder": 30
				},
				"State": {
					"description": "State is the current status of the machine.",
					"type": "string",
					"minLength": 0,
					"maxLength": 30,
					"propertyOrder": 40
				}
			},
			"required": [
				"Username"
			],
			"functions": {
				"GetMachine": {
					"type": "object",
					"description": "GetMachine returns the machine.",
					"title": "GetMachine",
					"properties": {
						"incoming": {
							"type": "string",
							"title": "MachineID"
						},
                        "outgoing": {
    						"$ref": "#/definitions/Machine"
    					}
					}
				},
				"ListMachines": {
					"type": "object",
					"description": "ListMachines returns the machine list of the user.",
					"title": "ListMachines",
					"properties": {
						"incoming": {
							"type": "string",
							"title": "AccountID"
						},
                        "outgoing": {
    						"type": "array",
    						"items": [{
    							"$ref": "#/definitions/Machine"
    						}]
    					}
					}
				},
				"GetMachineStatus": {
					"type": "object",
					"description": "GetMachineStatus returns the machine's current status.",
					"title": "GetMachineStatus",
					"properties": {
						"incoming": {
							"type": "string",
							"title": "MachineID"
						},
                        "outgoing": {
    						"$ref": "#/definitions/Machine"
    					}
					}
				}
			}
		}
	}
}
